<!DOCTYPE html>
<html class="js" lang="en">
<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Register: Getting started | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>
<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
  <p role="alert">This website needs JavaScript to work properly.</p></noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav><%include ../partials/header-register.ejs %>
  <main>
    <div class="container" id="main-content">
      <div id="progressbar">
        <div id="percentage"></div>
      </div>
      <h1>Register <span>(Step 1: Getting started)</span></h1>
      <div class="has-error has-error-server breakout" id="error-empty-fields" style="display: none">
        <h2>The following fields need fixing:</h2>
        <ul>
          <li><a href="#pmkeys">Your PMKeyS number</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <fieldset>
            <div class="form-group pmkeys-question">
              <label class="uikit-text-input__label" for="pmkeys">Your PMKeyS number</label>
              <input class="uikit-text-input input-half" id="pmkeys" name="pmkeys" type="text" value="">
            </div>
            <div class="form-group pmkeys-question">
              <label class="uikit-text-input__label" for="dva-number">Your DVA client (optional)<span class="hint display-block">Only required if you have one</span></label>
              <input class="uikit-text-input input-half" id="dva-number" name="dva-number" type="text" value="">
            </div>
          </fieldset>
        </div>
        <div class="col-sm-6">
          <div class="tip--wrapper">
            <img alt="Tip icon" class="heading-icon" src="../../../docs/images/ico-tip-blue.svg">
            <h3>Things you will need:</h3>
            <p>You need one proof of identity document. Choices include:</p>
              <ul>
                <li>Australian driver licence</li>
                <li>Australian birth certificate</li>
                <li>Medicare card</li>
                <li>Australian marriage certificate</li>
                <li>Certificate of Australian citizenship</li>
              </ul>
             </p>
          </div>
        </div><!-- col-sm-6 -->
      </div>
      <div class="pagination">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/'">Back to home</button>&nbsp; <button class="uikit-btn floated btnNext">Next</button>
      </div>
    </div>
  </main><%include ../../../global/partials/footer.ejs %>
  <script src="/docs/js/jquery-effects.js"></script> 
  <script src="/docs/js/main.js"></script> 
  <script src="/docs/js/jquery-3.2.1.min.js"></script> 
  <script>
     // Progress bar
     document.getElementById("percentage").style.width = "10%";

     // Toggle button logic
     $("#pmkeys-yes").click(function() {
       $(".enter-pmkeys-number").show("fast");
       $(".service-number").hide("fast");
       $(".dva-question").show("fast");
       $("#pmkeys").focus();
     });
     $("#pmkeys-no").click(function() {
       $(".enter-pmkeys-number").hide("fast");
       $(".dva-question").show("fast");
     });
     $("#dva-no").click(function() {
       $(".pmkeys-question").show("fast");
       $(".enter-dva-number").hide("fast");
       if ($('#pmkeys-yes').is(':checked')) {
         $(".clickNext").show("fast"); 
       }
     });
     $("#dva-yes").click(function() {
       $(".enter-dva-number").show("fast");
       $(".pmkeys-question").show("fast");
       $("#dva-number").focus();
       $(".service-number").hide("fast");
     });
     $(document).ready(function(e) {
       $('#pmkeys-no').click(function() {
         if ($('#dva-no').is(':checked')) {
           $(".service-number").show("fast");
         } else {
           $(".service-number").hide("fast");
         }
       });
     });
     $(document).ready(function(e) {
       $('#dva-no').click(function() {
         if ($('#pmkeys-no').is(':checked')) {
           $(".service-number").show("fast");
         } else {
           $(".service-number").hide("fast");
         }
       });
     });

     // Determine which path
     $('.btnNext').click(function() {
       // Have pmkeys and dva
       if ($('#pmkeys').val() != '' && ($('#dva-number').val() != '') && ($('#servicenumber').val() == '')) {
         location.href = '/register-dva-and-pmkeys1';
         localStorage.setItem('pathType', 'dva-and-pmkeys');
       }
       // Have only dva
       if ($('#pmkeys').val() == '' && ($('#dva-number').val() != '') && ($('#servicenumber').val() == '')) {
         location.href = '/register-dva-only1';
         localStorage.setItem('pathType', 'dva-only');
       }
       // Have only pmkeys
       if ($('#pmkeys').val() != '' && ($('#dva-number').val() == '') && ($('#servicenumber').val() == '')) {
         location.href = '/register-pmkeys-only1';
         localStorage.setItem('pathType', 'pmkeys-only');
       }
       // Have only service number
       if ($('#pmkeys').val() == '' && ($('#dva-number').val() == '') && ($('#servicenumber').val() != '')) {
         location.href = '/register-service-number1';
         localStorage.setItem('pathType', 'service-number');
       }
       // Nothing selected
       if ($('#pmkeys').val() == '' && ($('#dva-number').val() == '') && ($('#servicenumber').val() == '')) {
         $("#error-empty-fields").toggle("fast");
         $('html, body').animate({
           scrollTop: $('#error-empty-fields').position().top
         }, 'fast');
       }
     });
  </script>
</body>
</html>