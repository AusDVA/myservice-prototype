<!DOCTYPE html>
<html class="js" lang="en">
<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Register: Proof of identity | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>
<body class="uikit-body uikit-grid uikit-refactor">
  <noscript><p role="alert">This website needs JavaScript to work properly.</p></noscript>
  <nav class="uikit-skip-link"><a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
    <% include ../partials/path-service-number.ejs %>
  </nav>
  <% include ../partials/header-register.ejs %>
  <main>

    <div class="container" id="main-content">
      <div id="progressbar">
        <div id="percentage"></div>
      </div>
      <h1>Register <span>(Step 3 - Proof of identity 2 of 2)</span></h1>

      <div class="row">
        <div class="col-sm-12">

          <fieldset>
            <legend>Proof of identity</legend>
            <label class="uikit-text-input__label" for="idtype">Register using</label>
            <select class="uikit-text-input" name="idtype" id="idtype" type="text" value="">
              <option selected>-- Select a form of identification --</option>
              <option value="id01">Australian driver licence</option>
              <option value="id03">Australian passport</option>
              <option value="id06">Australian birth certificate</option>
              <option value="id02">Medicare card</option>
              <option value="id07">Australian marriage certificate</option>
              <option value="id05">Certificate of Australian citizenship</option>
            </select>
          </fieldset>

          <!-- Driver Licence -->
          <fieldset class="id-types id-licence" style="display: none">
            <legend>Australian driver licence</legend>
              <!--<img src="docs/images/driver-licence-act.png" alt="Sample driver's licence" />-->
              <div class="uikit-page-alerts" role="alert">
                <p>Ensure the following details match your driver licence.</p>
              </div>
              <% include ../partials/personal-detail-block.ejs %>
              <div class="form-group">
                <label class="uikit-text-input__label" for="state">State or Territory drivers licence issued</label>
                <select class="uikit-text-input input-half" name="state" id="state" type="text" value="">
                  <option selected>-- Select state or territory --</option>
                  <option>New South Wales</option>
                  <option>...</option>
                  <option>...</option>
                </select>
              </div>
              <div class="form-group">
                <label class="uikit-text-input__label" for="licence-number">Driver licence number</span></label>
                <input class="uikit-text-input input-half" name="licence-number" id="licence-number" type="text" value="">
              </div>
          </fieldset>

          <!-- Australian passport -->
          <fieldset class="id-types id-passport" style="display: none">
            <legend>Australian passport</legend>
            <div class="uikit-page-alerts" role="alert">
              <p>Ensure the following details match your Australian Passport.</p>
            </div>
            <% include ../partials/personal-detail-block.ejs %>
            <div class="form-group">
              <label class="uikit-text-input__label" for="passport-number">Passport number</label>
              <input class="uikit-text-input input-half" name="passport-number" id="passport-number" type="text" value="">
            </div>
          </fieldset>

          <!-- Birth certificate -->
          <fieldset class="id-types id-birth" style="display: none">
            <legend>Australian birth certificate</legend>
            <div class="uikit-page-alerts" role="alert">
              <p>Ensure the following details match your birth certificate.</p>
            </div>
            <% include ../partials/personal-detail-block.ejs %>
            <div class="uikit-page-alerts" role="alert">
              <p><strong>At least two of the following fields are required.</strong></p>
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="birth-registration">Registration number</label>
              <input class="uikit-text-input input-half" name="birth-registration" id="birth-registration" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="birth-registration-dd">Registration issue date <span class="hint">(DD / MM / YYYY)</span></label>
              <input class="uikit-text-input dd birth-registration-dd" type="text" name="birth-registration-dd" id="birth-registration-dd" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm birth-registration-mm" type="text" name="birth-registration-mm" id="birth-registration-mm" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy birth-registration-yyyy" type="text" name="birth-registration-yyyy" id="birth-registration-yyyy" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="birth-certificate">Certificate number</label>
              <input class="uikit-text-input input-half" name="birth-certificate" id="birth-certificate" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="birth-certificate-dd">Certificate issue date <span class="hint">(DD / MM / YYYY)</span></label>
              <input class="uikit-text-input dd birth-certificate-dd" type="text" name="birth-certificate-dd" id="birth-certificate-dd" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm birth-certificate-mm" type="text" name="birth-certificate-mm" id="birth-certificate-mm" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy birth-certificate-yyyy" type="text" name="birth-certificate-yyyy" id="birth-certificate-yyyy" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>
          </fieldset>

          <!-- Medicare -->
          <fieldset class="id-types id-medicare" style="display: none">
            <legend>Medicare card</legend>
            <img src="docs/images/medicare-card.jpg" alt="Sample medicare card" />
            <div class="uikit-page-alerts" role="alert">
              <p>Ensure the following details match your Medicare card.</p>
            </div>
            <% include ../partials/personal-detail-block.ejs %>
            <div class="form-group">
              <label class="uikit-text-input__label" for="medicare-number">Medicare card number</span></label>
              <input class="uikit-text-input input-half" name="medicare-number" id="medicare-number" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="irn">Individual Reference Number (IRN)</span></label>
              <input class="uikit-text-input dd" name="irn" id="irn" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="expiry-dd">Expiry date <span class="hint">(MM / YYYY)</span></label>
              <input class="uikit-text-input mm" type="text" name="medicare-expiry-mm" id="medicare-expiry-mm" maxlength="2"> /
              <input class="uikit-text-input yyyy" type="text" name="medicare-expiry-yyyy" id="medicare-expiry-yyyy" maxlength="4">
            </div>
          </fieldset>

          <!-- Marriage certificate -->
          <fieldset class="id-types id-marriage" style="display: none">
            <legend>Australian marriage certificate</legend>
            <div class="uikit-page-alerts" role="alert">
              <p>Ensure the following details match your marriage certificate.</p>
            </div>
            <% include ../partials/personal-detail-block.ejs %>
            <div class="uikit-page-alerts" role="alert">
              <p><strong>At least two of the following fields are required.</strong></p>
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="marriage-registration">Registration number</label>
              <input class="uikit-text-input input-half" name="marriage-registration" id="marriage-registration" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="marriage-registration-dd">Registration issue date <span class="hint">(DD / MM / YYYY)</span></label>
              <input class="uikit-text-input dd marriage-registration-dd" type="text" name="marriage-registration-dd" id="marriage-registration-dd" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm marriage-registration-mm" type="text" name="marriage-registration-mm" id="marriage-registration-mm" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy marriage-registration-yyyy" type="text" name="marriage-registration-yyyy" id="marriage-registration-yyyy" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="marriage-certificate">Certificate number</label>
              <input class="uikit-text-input input-half" name="marriage-certificate" id="marriage-certificate" type="text" value="">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="marriage-certificate-dd">Certificate issue date <span class="hint">(DD / MM / YYYY)</span></label>
              <input class="uikit-text-input dd marriage-certificate-dd" type="text" name="marriage-certificate-dd" id="marriage-certificate-dd" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm marriage-certificate-mm" type="text" name="marriage-certificate-mm" id="marriage-certificate-mm" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy marriage-certificate-yyyy" type="text" name="marriage-certificate-yyyy" id="marriage-certificate-yyyy" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>
          </fieldset>

          <!-- Certificate of citizenship -->
          <fieldset class="id-types id-citizenship" style="display: none">
            <legend>Certificate of Australian citizenship</legend>
            <div class="uikit-page-alerts" role="alert">
              <p>Ensure the following details match your certificate of citizenship.</p>
            </div>
            <% include ../partials/personal-detail-block.ejs %>
            <div class="form-group">
              <label class="uikit-text-input__label" for="acquisition-dd">Certificate acquisition date <span class="hint">(DD / MM / YYYY)</span></label>
              <input class="uikit-text-input dd acquisition-dd" type="text" name="acquisition-dd" id="acquisition-dd" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm acquisition-mm" type="text" name="acquisition-mm" id="acquisition-mm" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy acquisition-yyyy" type="text" name="acquisition-yyyy" id="acquisition-yyyy" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>
            <div class="form-group">
              <label class="uikit-text-input__label" for="citizenship-number">Certificate number <span class="hint">(or evidence number)</span></label>
              <input class="uikit-text-input input-half" name="citizenship-number" id="citizenship-number" type="text" value="">
            </div>
          </fieldset>
          
          <div class="pagination">
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = 'register-service-number2'">Previous</button>&nbsp; 
            <button class="uikit-btn floated btnNext" onclick="window.location.href = '/register-service-number4'">Next</button>
          </div>

        </div>

      </div>

    </div>
  </main>
  <% include ../../../global/partials/footer.ejs %>
  <script src="/docs/js/jquery-effects.js"></script>
  <script src="/docs/js/main.js"></script>
  <script src="/docs/js/jquery-3.2.1.min.js"></script>
  <script>
    // Progress percentage
    document.getElementById("percentage").style.width = "55%";

    // Choose POI fieldset
    var IdType = jQuery('#idtype');
    var select = this.value;
    IdType.change(function () {
        // Test if a POI is open already, to display warning modal
        // if ( $('.id-types').css('display') != 'none' ) {
        //   alert('div already open');
        // }
        if ($(this).val() == 'id01') {
            $('.id-types').hide();
            $('.id-licence').show();
        }
        if ($(this).val() == 'id02') {
            $('.id-types').hide();
            $('.id-medicare').show();
        }
        if ($(this).val() == 'id03') {
            $('.id-types').hide();
            $('.id-passport').show();
        }
        if ($(this).val() == 'id04') {
            $('.id-types').hide();
            $('.id-descent').show();
        }
        if ($(this).val() == 'id05') {
            $('.id-types').hide();
            $('.id-citizenship').show();
        }
        if ($(this).val() == 'id06') {
            $('.id-types').hide();
            $('.id-birth').show();
        }
        if ($(this).val() == 'id07') {
            $('.id-types').hide();
            $('.id-marriage').show();
        }
    });

    // Prefill
    $(".first-name").val(localStorage.firstName);
    $(".middle-name").val(localStorage.middleName);
    $(".last-name").val(localStorage.lastName);
    $(".dob-dd").val(localStorage.myDd);
    $(".dob-mm").val(localStorage.myMm);
    $(".dob-yyyy").val(localStorage.myYyyy);

  </script>


</body>
</html>
