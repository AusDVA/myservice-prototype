<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Claim for travel expenses | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../global/partials/header-topbar-new.ejs %>


  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <div class="container margin-above--none">
        <h1 class="margin-above--none ss-align--center">
          <span class="heading">Client's details</span>
        </h1>
      </div>
    </div>

    <div class="container">
      <div class="form-group">
              <h2>Add client info</h2>
              <hr>

                <label class="uikit-text-input__label" for="Input field">First name</label>
                  <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                <label class="uikit-text-input__label" for="Input field">Last name</label>
                  <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">

                  <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfTertiary">
                    <label class="uikit-text-input__label" for="Input field">Do they have a File number</label>
                      <fieldset>
                        <legend class="legend-label" id="question_id21c">
                        </legend>
                        <div class="radio-toggle">
                          <label class="on label-left">
                            <input id="fileNumberYes" type="radio" name="fileNumber" value="yes">
                            <span>Yes</span>
                          </label>
                          <label class="off label-right">
                            <input id="fileNumberNo" type="radio" name="fileNumber" value="no">
                            <span>No</span>
                          </label>
                        </div>
                      </fieldset>
                  </div>

                  <div class="form-group" id="yesFileNumberChecked" style="display:none;">
                    <label class="uikit-text-input__label" for="Input field">File number</label>
                      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                  </div>

                  <div id="pmKeyHide">
                  <div  id="noFileNumberChecked" style="display:none;" class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfTertiary">
                    <label class="uikit-text-input__label" for="Input field">Do they have a PMKeyS</label>
                      <fieldset>
                        <legend class="legend-label" id="noFileNumber">
                        </legend>
                        <div class="radio-toggle">
                          <label class="on label-left">
                            <input id="pmKeyYes" type="radio" name="pmKey" value="yes">
                            <span>Yes</span>
                          </label>
                          <label class="off label-right">
                            <input id="pmKeyNo" type="radio" name="pmKey" value="no">
                            <span>No</span>
                          </label>
                        </div>
                      </fieldset>
                  </div>

                  <div class="form-group" id="yesPmKeyChecked" style="display:none;">
                    <label class="uikit-text-input__label" for="Input field">PMKeyS number</label>
                      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                  </div>
                  </div>

                <div id="serviceNumberHide">
                  <div  id="noPmKeyChecked" style="display:none;" class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfTertiary">
                    <label class="uikit-text-input__label" for="Input field">Do they have a service number?</label>
                      <fieldset>
                        <legend class="legend-label" id="serviceNumberSelect">
                        </legend>
                        <div class="radio-toggle">
                          <label class="on label-left">
                            <input id="serviceNumberYes" type="radio" name="serviceNumber" value="yes">
                            <span>Yes</span>
                          </label>
                          <label class="off label-right">
                            <input id="serviceNumberNo" type="radio" name="serviceNumber" value="no">
                            <span>No</span>
                          </label>
                        </div>
                      </fieldset>
                  </div>
                  <div class="form-group" id="yesServiceNumberChecked" style="display:none;">
                    <label class="uikit-text-input__label" for="Input field">Service number</label>
                      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                  </div>
                </div>
                <div class="form-group">
                  <label class="uikit-text-input__label" for="Input field">Date of birth</label>
                    <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                    <label class="uikit-text-input__label" for="Input field">Email address</label>
                      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                      <label class="uikit-text-input__label" for="Input field">Phone numvber</label>
                        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                      <label class="uikit-text-input__label" for="Input field">Residential address</label>
                        <% include ../../global/partials/address-residential.ejs %>
                        <label class="uikit-text-input__label" for="Input field">Relationship to you</label>
                          <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" aria-required="true">
                </div>
              </div>

          <div class="pagination pagination--ss-reverse-order">
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/nr-before-start-rep'">Previous</button>
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel</button>
            <div class="floated">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#'">Save and exit</button>
              <button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/nr-role-client'">Save and next</button>
            </div>
          </div>

      </div>

  </main>

  <% include ../../global/partials/footer.ejs %>


  <script>
    $('#fileNumberYes').click(function(){
      $('#yesFileNumberChecked').show("fast");
    });
    $('#fileNumberNo').click(function(){
      $('#noFileNumberChecked').show("fast");
      $('#yesFileNumberChecked').hide("fast");
    });
    $('#pmKeyYes').click(function(){
      $('#yesPmKeyChecked').show("fast");
    });
    $('#pmKeyNo').click(function(){
      $('#noPmKeyChecked').show("fast");
      $('#yesPmKeyChecked').hide();
    });
    $('#serviceNumberYes').click(function(){
      $('#yesServiceNumberChecked').show("fast");
    });
    $('#serviceNumberNo').click(function(){
      $('#yesServiceNumberChecked').hide();
    });
  </script>

</body>

</html>
