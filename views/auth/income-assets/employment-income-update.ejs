<!-- Open card -->
<div id="employment-income-update-card" class="box boxed box--open" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-briefcase fontawesome-icon"></span><span class="font-weight-heavy">Employment income
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change/disposal"
    }); %>
   
    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" class="uikit-btn"
        onClick="confirmDeletePrePop('employment-income-update')">Delete</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>
  </div>
  <div class="edit-content">
    <div class="box__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-briefcase fontawesome-icon"></span><span class="font-weight-heavy">Employment income
        </span></h2>
        <!-- <button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning box__delete-button "
        onclick="deletePrePop('employment-income-update');">&nbsp;Delete item&nbsp;</button> -->
    </div>
    <div id="card-details" class="margin-below--large">
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Who earned the income</b></div>
          <div class="td">Myself</div>
        </div>
        <div class="tr">
          <div class="td"><b>Name of the employer</b></div>
          <div class="td">McDonalds</div>
        </div>
        <div class="tr">
          <div class="td"><b>Job/occupation title</b></div>
          <div class="td">Cleaner</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/textarea", {
          label: "What has changed in regards to this employment?",
          hint: "For example income amount, changes in pattern of work, or cessation of employment.",
          modifiers: ["hintNewLine"]
        }); %>

      <%- include(partials+"components/form-partials/date", {
        label: "When did the change occur?"
      }); %>


      <%- include(partials+"components/form-partials/notice", {
        message: "You will need to provide evidences of your employment, for example, payslips, contract or a letter from the employer in the document section."
      }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('employment-income-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button> &nbsp;<button
        class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->

