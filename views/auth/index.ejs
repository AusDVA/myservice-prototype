  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-authenticated") %>
  <%- include(partials+"components/layout/header-nom-rep") %>

  <div class="mys-page-preloader">
    <img src="/docs/images/waiting-gray-fat.svg" alt="loading animation" />
  </div>

  <main class="page-loading">

    <div class="authenticated-home authenticated-home--clear">
      <section>
        <div class="margin-above--large">
          <div class="container intro">
            <h1 class="heading--greeting"><span id="lblGreetings"></span> <span class="pt-current-user-name-first"></span></h1>
            <div class="flex-container widgets-container">
              <%- include(partials+"content/widget-tile-message-veteran-payment") %>
            </div>
            <div class="flex-container widgets-container">
              <%- include(partials+"content/widget-tile-message-welcome") %>
              <%- include(partials+"content/widget-tile-message-profile") %>

              <%- include(partials+"content/widget-tile-task") %>
              <%- include(partials+"content/widget-tile-claim") %>
              <%- include(partials+"content/widget-tile-payment") %>
              <%- include(partials+"content/widget-tile-profile") %>
            </div>
            <hr class="home__seperator">
          </div>
      </section>
    </div>

