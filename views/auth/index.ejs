            $(document).ready(function () {
              const hoverContainer = document.getElementsByClassName('hover-container')[0]
              const hoverElements = document.getElementsByClassName('hover-element')

              Array.prototype.forEach.call(hoverElements, hoverElement => {
                hoverElement.addEventListener('mouseover', (event) => {
                  hoverElement.classList.add('hover-element--active')
                })

                hoverElement.addEventListener('mouseout', (event) => {
                  hoverElement.classList.remove('hover-element--active')
                })
              })

              hoverContainer.addEventListener('mouseover', (event) => {
                if (event.target !== hoverContainer) {
                  hoverContainer.classList.add('hover-container--faded')
                }
              })

              hoverContainer.addEventListener('mouseout', (event) => {
                hoverContainer.classList.remove('hover-container--faded')
              })
            });

            //Basic greeting
            var myDate = new Date();
            var hrs = myDate.getHours();

            var greet;

            if (hrs < 12)
              greet = 'Good morning';
            else if (hrs >= 12 && hrs <= 17)
              greet = 'Good afternoon';
            else if (hrs >= 17 && hrs <= 24)
              greet = 'Good evening';

            document.getElementById('lblGreetings').innerHTML = greet;

            /* State switcher */

            $(document).keypress(function (e) {
              switch (e.which) {
                case 96: //tilda
                  $('#state-switcher').toggle();
                  break;
                default:
              }
            });
            // 
            // function autoWith() {

            $(document).ready(function () {

              var $checkboxes = $('#state-switcher input[type="checkbox"]');
              var $textboxes = $('#state-switcher input[type="text"]');

              $checkboxes.change(function () {
                var countCheckedCheckboxes = $checkboxes.filter(':checked').length;
                var countCheckedTextboxes = $textboxes.filter(':checked').length;


                var totalCountWidget = parseInt(countCheckedTextboxes, 10) + parseInt(countCheckedCheckboxes, 10);



                if (totalCountWidget == 1) {
                  $('.widget-tile').addClass('col-sm-12');
                  $('.widget-tile').removeClass('col-xs-6');
                  $('.widget-tile').removeClass('col-xs-4');
                  $('.widget-tile').removeClass('col-xs-3');
                }
                if (totalCountWidget == 2) {
                  $('.widget-tile').removeClass('col-sm-12');
                  $('.widget-tile').addClass('col-xs-6');
                  $('.widget-tile').removeClass('col-xs-4');
                  $('.widget-tile').removeClass('col-xs-3');
                }
                if (totalCountWidget == 3) {
                  $('.widget-tile').removeClass('col-sm-12');
                  $('.widget-tile').removeClass('col-xs-6');
                  $('.widget-tile').addClass('col-xs-4');
                  $('.widget-tile').removeClass('col-xs-3');
                }
                if (totalCountWidget == 4) {
                  $('.widget-tile').removeClass('col-sm-12');
                  $('.widget-tile').removeClass('col-xs-6');
                  $('.widget-tile').removeClass('col-xs-4');
                  $('.widget-tile').addClass('col-xs-3');
                }
              });

            });

            $(document).ready(function () {
