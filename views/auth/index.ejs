            locals.el.link = "/auth/claim/mental-health-eligibility";
          %>
          <%- include(partials+"components/claim-tile") %>

          <% 
            locals.el = {};
            locals.el.title = "Veteran Covenant";
            locals.el.optionalID = "covenant";
            locals.el.body_text = "Request the Covenant Oath, Lapel Pin and Veteran Card as recognition of your service.";
            locals.el.button_text = "Get started";
            locals.el.link = "/auth/claim/veterancard/vrp1";
