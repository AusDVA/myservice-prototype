            locals.el.button_text = "Get started";
            locals.el.link = "/auth/claim/veteran-payment/veteran-payment-01";
          %>
          <%- include(partials+"components/claim-tile") %>

          <% if (locals.liveFeature.includes("PITile")) { %>
            <% 
              locals.el = {};
              locals.el.title = "Permanent Impairment";
              locals.el.optionalID = "pi";
