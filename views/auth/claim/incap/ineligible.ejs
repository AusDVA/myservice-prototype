<%- include(templates+"header", {
  title: "Incapacity Payments",
  heading: "Whoops"
})%>

<div class="container container--8-column">
  <div class="margin-above--extra margin-below--extra">
    <div class="uikit-page-alerts uikit-page-alerts--error">
      <p><strong>You are not eligible for Incapacity Payments.</strong></p>
    </div>
    <p>You may wish to claim for a Disability Pension</p>
  </div>
  <%- include(forms+"pagination", 
  { pagination: [ { text: "Previous", link:
  "/auth/claim/incap/progress-b" }, { text: "Cancel claim", link: "#open-modal"
  }, { text: "Save and exit", link: "/auth/claim", modifiers: ["floated"] }, {
  text: "Save and next", link: "/auth/claim/incap/b-2", modifiers: ["floated",
  "primary"] } ] }) %>
</div>

<%- include(partials+"content/modals/claims-cancel-modal") %> 
<%- include(templates+"footer") %>
<script>
  $(Document).ready(function () {
    $("#btnPrev").click(function () {
      window.location.href = "/auth/claim/incap/progress-b";
    });
    $("#btnNext").click(function () {
      window.location.href = "/auth/claim/incap/b-2";
    });

    // check to see if user is claiming for ongoing payments but not interested in 'loss of civilian earnings'. This user should not see 'Employment' page in their progress bar.
    if ("flow2" in localStorage) {
      $(".employed").hide();
    } else {
      $(".employed").show();
    }

    $("input[name=checkbox-5]").change(function () {
      if ($(this).is(":checked")) {
        $("#condition-not-in-list").show();
      } else {
        $("#condition-not-in-list").hide();
      }
    });
  });
</script>