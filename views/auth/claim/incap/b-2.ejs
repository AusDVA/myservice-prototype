<%- include(templates+"header", {
  title: "Incapacity Payments"
})%>
</div>
<main>
    <div id="main-content"
        class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
        <div class="container margin-above--none">

            <!-- Progress bar -->
            <div class="col-xs-12">
                <nav>
                    <ul class="progress-container">
                        <!-- <li class="progress-step progress-step--done">
                <a href="/auth/claim/incap/b-1">
                  <span class="progress-step__icon"></span>
                  <p class="progress-step-label">Cause of incapacity</p>
                </a>
              </li> -->
                        <li class="progress-step progress-step--active">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Service history</p>
                        </li>
                        <li class="progress-step ongoing-only">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Civilian employment</p>
                        </li>
                        <li class="progress-step ongoing-only">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Medical practitioners</p>
                        </li>
                        <li class="progress-step ongoing-only">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Nominated representative</p>
                        </li>
                        <li class="progress-step ongoing-only">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Other details</p>
                        </li>
                        <li class="progress-step progress-step--last">
                            <span class="progress-step__icon"></span>
                            <p class="progress-step-label">Bank&nbsp;details</p>
                        </li>
                    </ul>
                </nav>
            </div>

            <h1 class="margin-above--none ss-align--center">
                <span class="heading">Service History</span>
            </h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">

                <div class="margin-above--extra margin-below--extra">
                    <div id="discharge-date" class="form-group">
                        <label class="uikit-text-input__label" for="dd-discharge">Date of discharge <span
                                class="hint">(dd / mm / yyyy)</span>
                        </label>
                        <input class="uikit-text-input dd" type="number" name="dd-discharge" id="dd-discharge"
                            maxlength="2" required aria-required="true" aria-label="2 digit day"> /
                        <input class="uikit-text-input mm" type="number" name="mm-discharge" id="mm-discharge"
                            maxlength="2" required aria-required="true" aria-label="2 digit month"> /
                        <input class="uikit-text-input yyyy" type="number" name="yyyy-discharge" id="yyyy-discharge"
                            maxlength="4" required aria-required="true" aria-label="4 digit year">
                    </div>

                    <div id="discharge-reason" class="form-group margin-above">
                        <label class="uikit-text-input__label" for="discharge-reason">Reason for discharge</label>
                        <select class="uikit-text-input input-half" id="discharge-reason" name="discharge-reason">
                            <option>-- Select a reason --</option>
                            <option>Medical</option>
                            <option>Administrative</option>
                            <option>Voluntary</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div id="discharge-rank" class="form-group margin-above">
                        <label class="uikit-text-input__label" for="rank">Rank at date of discharge</label>
                        <select class="uikit-text-input input-half" id="rank" name="rank">
                            <option>-- Select a rank --</option>
                            <option>Sergeant</option>
                            <option>Officer</option>
                            <option>Corporal</option>
                        </select>
                    </div>

                    <%- include(partials+"components/form-partials/text", {
              label: "Pay group at date of discharge",
              hint: "(optional)"
            }); %>

                    <%- include(partials+"components/form-partials/textarea", {
              label: "Tell us about your loss of career progression",
              hint: "(optional)<BR/>This could include initial employment training, discharging as a recruit or cadet, or still serving but graduating later."
            }); %>
                </div>
                <%- include(forms+"pagination", {
                      pagination: [
                        {
                          text: "Previous",
                          link: "/auth/claim/incap/progress-b",
                          id: "btnPrev"
                        },
                        {
                          text: "Cancel claim",
                          link: "#open-modal"
                        },
                        {
                          text: "Save and exit",
                          link: "/auth/claim",
                          modifiers: ["floated"]
                        },
                        {
                          text: "Save and next",
                          id: "btnNext",
                          link: "/auth/claim/incap/b-3",
                          modifiers: ["floated", "primary"]
                        }
                      ]
                    }) %>

            </div>


        </div>
    </div>
    <%- include(partials+"content/modals/claims-cancel-modal") %>
    </div>
</main>
<script>
    $(Document).ready(function () {
        $("#btnPrev").click(function () {
            window.location.href = "/auth/claim/incap/progress-b"
        });
        $("#btnNext").click(function () {
            window.location.href = "/auth/claim/incap/b-3"
        });
        // Check to see if user is only claiming for loss of allowance or loss of career progression. If they are, they should only see three steps in the progress bar and progress to the Nominated Rep page when they click the 'Next' button.
        if ("flow1" in localStorage) {
            $(".ongoing-only").hide();
            $("#btnNext").click(function () {
                window.location.href = "/auth/claim/incap/b-5"
            });
            $("#btnPrev").click(function () {
                window.location.href = "/auth/claim/incap/progress-b"
            });
        } else {
            $("#btnNext").click(function () {
                window.location.href = "/auth/claim/incap/b-3"
            });
            $("#btnPrev").click(function () {
                window.location.href = "/auth/claim/incap/progress-b"
            });
        };
        // Check to see if user is claiming for ongoing payments but not interested in a 'loss of civilian earnings' because this user should not be asked about their employment or see it as a step in the progress bar.
        if ("flow2" in localStorage) {
            $(".employed").hide();
            $("#btnNext").click(function () {
                window.location.href = "/auth/claim/incap/b-4"
            });
            $("#btnPrev").click(function () {
                window.location.href = "/auth/claim/incap/progress-b"
            });
        }
    });
</script>
<%- include(templates+"footer") %>