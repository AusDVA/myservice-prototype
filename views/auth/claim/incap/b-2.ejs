  <%- include(partials+"components/layout/footer") %>


  <script>
    $(Document).ready(function () {

      $("#btnPrev").click(function () {
        window.location.href = "/auth/claim/incap/progress-b"
      });
      $("#btnNext").click(function () {
        window.location.href = "/auth/claim/incap/b-3"
      });

      // Check to see if user is only claiming for loss of allowance or loss of career progression. If they are, they should only see three steps in the progress bar and progress to the Nominated Rep page when they click the 'Next' button.
      if ("flow1" in localStorage) {
        $(".ongoing-only").hide();
        $("#btnNext").click(function () {
          window.location.href = "/auth/claim/incap/b-5"
        });
        $("#btnPrev").click(function () {
          window.location.href = "/auth/claim/incap/progress-b"
        });
      } else {
        $("#btnNext").click(function () {
          window.location.href = "/auth/claim/incap/b-3"
        });
        $("#btnPrev").click(function () {
          window.location.href = "/auth/claim/incap/progress-b"
        });
      };

      // Check to see if user is claiming for ongoing payments but not interested in a 'loss of civilian earnings' because this user should not be asked about their employment or see it as a step in the progress bar.
      if ("flow2" in localStorage) {
        $(".employed").hide();
        $("#btnNext").click(function () {
          window.location.href = "/auth/claim/incap/b-4"
        });
        $("#btnPrev").click(function () {
          window.location.href = "/auth/claim/incap/progress-b"
        });
      }

    });
  </script>

