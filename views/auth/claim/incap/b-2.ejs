            <div id="discharge-date" class="form-group">
              <label class="uikit-text-input__label" for="dd-discharge">Date of discharge <span class="hint">(dd / mm / yyyy)</span>
              </label>
              <input class="uikit-text-input dd" type="number" name="dd-discharge" id="dd-discharge" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
              <input class="uikit-text-input mm" type="number" name="mm-discharge" id="mm-discharge" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
              <input class="uikit-text-input yyyy" type="number" name="yyyy-discharge" id="yyyy-discharge" maxlength="4" required aria-required="true" aria-label="4 digit year">
            </div>

            <div id="discharge-reason" class="form-group margin-above">
              <label class="uikit-text-input__label" for="discharge-reason">Reason for discharge</label>
              <select class="uikit-text-input input-half" id="discharge-reason" name="discharge-reason">
                <option>-- Select a reason --</option>
                <option>Medical</option>
                <option>Administrative</option>
                <option>Voluntary</option>
                <option>Other</option>
              </select>
            </div>

            <div id="discharge-rank" class="form-group margin-above">
              <label class="uikit-text-input__label" for="rank">Rank at date of discharge</label>
              <select class="uikit-text-input input-half" id="rank" name="rank">
                <option>-- Select a rank --</option>
                <option>Sergeant</option>
                <option>Officer</option>
                <option>Corporal</option>
              </select>
            </div>

