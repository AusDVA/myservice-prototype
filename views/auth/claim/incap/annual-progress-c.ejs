<%- include(templates+"header", {
  claim: "Incapacity Payments",
  heading: "Claim for Incapacity Payments"
})%>

<h2>You're almost done. The last step is to upload supporting documents.</h2>

<div class="margin-above--large margin-below--extra">
    <div id="progressbar">
        <div id="percentage">
            <p id="percentage_value">80% complete</p>
        </div>
    </div>
    <p style="padding-top:0.4em;">80% complete</p>
</div>

<div class="claim-progress-category">

    <!-- Part A -->
    <div class="claim-progress-category__item claim-progress-category--done">
        <a id="part-a" class="claim-progress-category__link" href="/auth/claim/incap/a-1">
            <div class="claim-progress-category__wrapper">
                <div class="claim-progress-category__status">
                    <div class="mys-file-uploads__status mys-file-uploads__status--success">
                        <div class="mys-file-uploads__status-icon"></div>
                        <div class="mys-file-uploads__status-sr">Success</div>
                    </div>
                </div>

                <div class="claim-progress-category__label">
                    <h3 class="claim-progress-category__heading"><span
                            class="claim-progress-category__heading--active">Part A - Loss of earnings</span></h3>
                    <p class="claim-progress-category__description">Tell us how your work has been affected.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- Part B -->
    <div class="claim-progress-category__item claim-progress-category--done">
        <a id="part-b" class="claim-progress-category__link">
            <div class="claim-progress-category__wrapper">
                <div class="claim-progress-category__status">
                    <div class="mys-file-uploads__status mys-file-uploads__status--success">
                        <div class="mys-file-uploads__status-icon"></div>
                        <div class="mys-file-uploads__status-sr">Success</div>
                    </div>
                </div>
                <div class="claim-progress-category__label">
                    <h3 class="claim-progress-category__heading"><span
                            class="claim-progress-category__heading--active">Part B - Personal details</span></h3>
                    <p class="claim-progress-category__description">Tell us more about your circumstances.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- Part C -->
    <div class="claim-progress-category__item claim-progress-category--active">
        <a class="claim-progress-category__link claim-progress-category__link--active" href="/auth/claim/incap/c-1">
            <div class="claim-progress-category__wrapper">
                <div class="claim-progress-category__status">
                    <div class="mys-file-uploads__status mys-file-uploads__status--active">
                        <div class="mys-file-uploads__status-icon"></div>
                        <div class="mys-file-uploads__status-sr">Active</div>
                    </div>
                </div>
                <div class="claim-progress-category__label">
                    <h3 class="claim-progress-category__heading"><span
                            class="claim-progress-category__heading--active">Part C - Required documents</span></h3>
                    <p class="claim-progress-category__description">Upload supporting documents for your&nbsp;claim.</p>
                </div>
            </div>
        </a>
    </div>

</div>

<%- include(forms+"pagination", {
      pagination: [
        {
          text: "Cancel claim",
          link: "#open-modal"
        },
        {
          text: "Save and exit",
          link: "/auth/claim",
          modifiers: ["floated"]
        },
        {
          text: "Save and next",
          link: "/auth/claim/incap/review",
          modifiers: ["floated", "primary"]
        }
      ]
    }) %>
</div>

<%- include(partials+"content/modals/claims-cancel-modal") %>

</main>
<script>
    $(Document).ready(function () {
        $("#btnNext").click(function () {
            window.location.href = "/auth/claim/incap/review"
        });

        // Progress percentage
        document.getElementById("percentage").style.width = "80%";
        document.getElementById("percentage_value").textContent = "80%";

        $("#part-a").click(function () {
            localStorage.setItem('datachange', true);
        });

        if ("flow1" in localStorage) {
            $("#part-b").click(function () {
                window.location.href = "/auth/claim/incap/b-2"
            });
        } else {
            $("#part-b").click(function () {
                window.location.href = "/auth/claim/incap/b-1"
            });
        };

    });
</script>
<%- include(templates+"footer") %>