        });
        $("#op3").click(function () {
          partnerStatus = "partnered";
          //$("#sp-partner-applying").show("fast");
        });

        var partner = false;
        $(document).keypress(function (e) {
          switch (e.which) {
            case 49:
              partner = false;
              $("#crn-partner").hide();
              $("#sp-partner-applying").hide();
              break;
            case 50:
              if (partnerStatus == "partnered") {
                partner = true;
                $("#sp-partner-applying").show("fast");
              }
              break;
            default:
          }
