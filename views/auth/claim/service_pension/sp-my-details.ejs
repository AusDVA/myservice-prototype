      $(Document).ready(function () {

        $("#crn").hide();
        $("#crn-partner").hide();
        $("#sp-partner-applying").hide();
        var partnerStatus;
        // Show and hide needs list

        $("#op1-cl").change(function () {
          if (this.checked != true) {
            $("#crn").hide();
          }
          else {
            $("#crn").show("fast");
          }
        });

        $("#op2-cl").change(function () {
          if (this.checked != true) {
            $("#crn").hide();
          }
          else {
            $("#crn").show("fast");
          }
        });

        //partner select items
        $("#op1-cl-partner").change(function () {
          if (this.checked != true) {
            $("#crn-partner").hide();
          }
          else {
            $("#crn-partner").show("fast");
          }
        });

        $("#op2-cl-partner").change(function () {
          if (this.checked != true) {
            $("#crn-partner").hide();
          }
          else {
