          }
        });

        //end partner select items

        $("#op1").click(function () {
          partnerStatus = "none";
          $("#sp-partner-applying").hide();
        });

        $("#op1").click(function () {
          partnerStatus = "partnered";
          //$("#sp-partner-applying").show("fast");
        });
        $("#op2").click(function () {
          partnerStatus = "partnered";
