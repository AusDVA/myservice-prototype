  <style>
    /* The Modal (background) */
    .modal {
      display: none;
      /* Hidden by default */
      position: absolute;
      /* Stay in place */
      z-index: 2;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: none;
      /* Enable scroll if needed */
    }

    .modalbg {
      display: none;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: none;
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      /* Fallback color */
      background-color: rgba(0, 0, 0, 0.6);
      /* Black w/ opacity */
    }

    /* Modal Content/Box */
    .modal-content {
      border-radius: .3em;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
      background-color: #ffffff;
      margin: 10% auto;
      /* 15% from the top and centered */
      padding: 30px;
      border: 1px solid #888;
      width: 50%;
      /* Could be more or less, depending on screen size */
    }

    /* The Close Button */
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }

    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }

    /* key value grid */
    .key-value {
      clear: both;
    }

    .key {
      float: left;
      width: 150px;
    }

    .key h4 {
      margin: 0;
    }

    .value {
      float: left;
      width: 300px;
    }
  </style>
</head>

