  <script>
    $(Document).ready(function () {

      var returnFromCard = getParameterByName('returnFromCard');
      if (returnFromCard) {
        $("#vehicle-1-summary").show();
        $("#user-asset-list").show();
        $('#user-asset-list').goTo();
      }

      // vehicle
      $('#add-vehicle-1').click(function () {
        $("#vehicle-1-start").show();
        $("#modal-bg").show();
        $(window).scrollTop(0);
      });
      $('#vehicle-1-start-close').click(function () {
        $("#vehicle-1-start").hide();
        $("#modal-bg").hide();
      });
      $('#vehicle-1-start-cancel').click(function () {
        $("#vehicle-1-start").hide();
        $("#modal-bg").hide();
      });
      $('#vehicle-1-start-add').click(function () {
        $("#vehicle-1-start").hide();
        $("#modal-bg").hide();
        $("#vehicle-1-summary").show();
        $("#user-asset-list").show();
        $('#user-asset-list').goTo();
      });

      $('#asset-options-toggle').click(function () {
        $("#asset-options").toggle();
        $("#plus").toggle();
        $("#plus-close").toggle();
      });

      // home contents
      $('#add-homeContents-1').click(function () {
        window.location.href = '/auth/claim/sp-c2-vehicle-1'
      });

      var returnMode = false;
      $(document).keypress(function (e) {
        switch (e.which) {
          case 96:
            $("#asset-options-toggle").toggle();
            if ($("#asset-options-toggle").is(":visible")) {
              $("#asset-options").hide();
            }
            if ($("#asset-options-toggle").is(":hidden")) {
              $("#asset-options").show();
            }
            break
          default:
        }
      });

    });

    function getParameterByName(name, url) {
      if (!url) url = window.location.href;
      name = name.replace(/[\[\]]/g, '\\$&');
      var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
        results = regex.exec(url);
      if (!results) return null;
      if (!results[2]) return '';
      return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

    (function ($) {
      $.fn.goTo = function () {
        $('html, body').animate({
          scrollTop: $(this).offset().top + 'px'
        }, 0);
        // $('html, body').animate({
        //     scrollTop: $(this).offset().top + 'px'
        // }, 'slow');
        return this; // for chaining...
      }
    })(jQuery);
  </script>
