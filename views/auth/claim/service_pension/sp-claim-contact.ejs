  <script>
    $(Document).ready(function () {

      hideAll();

      $("#rep-nominate-yes").click(function () {
        $("#claim-contact-details").show("fast");
        $("#save-and-next").hide("fast");
      });


      $("#rep-nominate-no").click(function () {
        $("#claim-contact-details").hide("fast");
        $("#save-and-next").show("fast");
      });

      function hideAll() {
        $("#claim-contact-details").hide();
      }

      $(document).keypress(function (e) {
        console.log(e.which)
        switch (e.which) {
          case 96: // tilda
            $("#notes").toggle();
            break;
          default:
        }
      });


    });
  </script>
