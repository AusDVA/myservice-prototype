          <!-- Page content -->
          <div class="margin-above--extra margin-below--extra">
            <div class="form-group">
              <legend class="legend-label margin-below--none">Do you wish to nominate a claim representative for this claim?</legend>
              <span class="uikit-text-input__hint">Your representative can receive updates and make queries about this claim on your behalf.</span>
              <div class="radio-toggle margin-above">
                <label class="on label-left" for="rep-nominate-yes">
                  <input id="rep-nominate-yes" type="radio" name="rep-nominate">
                  <span>Yes</span>
                </label>
                <label class="off label-right" for="rep-nominate-no">
                  <input id="rep-nominate-no" type="radio" name="rep-nominate">
                  <span>No</span>
                </label>
              </div>
            </div>
            <div class="form-group" id="claim-contact-details" class="margin-above--extra">
              <h3 class="margin-above--large">Representative details</h3>
              <!-- <div class="title-field margin-above--large">Representative type</div>
