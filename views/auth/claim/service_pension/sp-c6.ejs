<%
  var progress = JSON.parse(include("c-progressbar")) 
  progress.activeItem = 6;
%>

<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Service Pension - Other assets | MyService</title>
  <%- include(partials+"components/layout/head") %>
  <script src="/docs/js/income-assets.js"></script>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#user-list">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-nom-rep") %>
  <main>
    <div id="main-content"
      class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <div class="container">
        <%- include(forms+"progress-advanced", progress) %>
      </div>
      <!-- Page heading -->
      <h1 class="margin-above--none ss-align--center"><span class="heading">Additional circumstances</span></h1>
    </div>
    <section>
      <div class="container margin-above margin-below--extra">
        <div class="row">
          <div class="col-md-offset-2 col-md-8 margin-below--large">

            <div id="user-list">
              <hr class="margin-below--none">
              <span class="fal fa-list-alt fa-icons"></span>
              <h2 class="margin-above--none heading-width"><span class="partner-label">My</span> additional
                circumstances
              </h2>
              <div id="add-anchor-link-return" class="cursor-pointer-right" onClick="scrollToAdd();">
                <p style="margin-top: 10px;">
                  <span class="fal fa-plus-circle fa-icons"></span>Add additional circumstances
                </p>
              </div>
            </div>
            <div id="add-anchor-link-start" class="cursor-pointer" onClick="scrollToAdd();">
              <p class="margin-above--extra ss-align--center">
                <span class="fal fa-plus-circle fa-icons"></span>Add additional circumstances
              </p>
            </div>

            <!-- Cards -->
            <%- include(partials+"content/income-assets/income-assets--gifts") %>
            <%- include(partials+"content/income-assets/income-assets--maintenance-paid-to-former-partner") %>
            <%- include(partials+"content/income-assets/income-assets--past-employment") %>
            <%- include(partials+"content/income-assets/income-assets--compensation-and-damages") %>
            <!-- Tiles -->
            <div id="add-options">
              <hr>
              <h2 class="margin-above--none margin-below--none ss-align--center"><span
                  class="font-weight-heavy">Additional circumstances</span></h2>


              <span class="hint display-block ss-align--center">Add each of the below items applying to you<span
                  class="partner"> and/or your partner</span>.</span></span>

              <div class="flex-container flex-container--wrap hover-container">
                <%- include(partials+"content/income-assets/income-assets--tile--gifts") %>
                <%- include(partials+"content/income-assets/income-assets--tile--maintenance-paid-to-former-partner") %>
                <%- include(partials+"content/income-assets/income-assets--tile--past-employment") %>
                <%- include(partials+"content/income-assets/income-assets--tile--compensation-and-damages") %>
              </div>
            </div>
          </div>
          <!-- bottom page navigation -->
          <BR />
          <BR />  
          <BR />
          <BR />
          <div class="pagination container container--8-column" style="position: relative;">
            <div id="footer-buttons-mask"
              style="background-color: #ffffff; opacity: .5; position: absolute; width: 100%; height: 100%; z-index: 10; display: none;">
            </div>
            <button class="uikit-btn uikit-btn--tertiary"
              onclick="window.location.href = '/auth/claim/service_pension/sp-c5'">Previous</button>
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel
              claim</button>
            <div class="floated">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim'">Save and
                exit</button>
              <button class="uikit-btn btnNext" onclick="window.location.href = 'sp-c7'">Next</button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <%- include(partials+"components/layout/footer") %>
  <script>
    $(Document).ready(function () {

      $(document).keypress(function (e) {
        switch (e.which) {
          case 49:
            hidePartner();
            break;
          case 50:
            showPartner();
            break;
          default:
        }
      });

      function showPartner() {
        $(".partner").show();
        $(".partner-label").html("Our");
      }

      function hidePartner() {
        $(".partner").hide();
        $(".partner-label").html("My");
      }

    });
  </script>
</body>

</html>