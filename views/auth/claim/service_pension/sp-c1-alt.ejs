  <script>
    $(Document).ready(function () {

      hideAll();

      // gift 1 start
      $('#sp-c-gift').click(function () {
        $("#sp-c1-options").hide("fast");
        $("#close-options").hide("fast");
        $("#gift-1-start").show("fast");
      });
      $('#gift-givenAway-yes').click(function () {
        $("#a1").show("fast");
        $("#sp-c1-gift-b").show("fast");
      });
      $('#gift-givenAway-no').click(function () {
        $("#sp-c1-gift-b").hide();
        $("#a1").show("fast");
      });
      $('#c-ga-09-yes').click(function () {
        $("#c-ga-10").show("fast");
      });
      $('#c-ga-09-no').click(function () {
        $("#c-ga-10").hide("fast");
      });
      $('#gift-1-start-done').click(function () {
        $("#gift-1-start").hide("fast");
        $("#gift-1-summary").show("fast");
        $("#add-another").show("fast");
      });
      $('#gift-1-start-cancel').click(function () {
        $("#sp-c1-options").show("fast");
        $("#gift-1-start").hide("fast");
      });
      // gift 1 summary
      $('#gift-1-summary-edit').click(function () {
        $("#gift-1-summary").hide("fast");
        $("#gift-1-update").show("fast");
        $("#add-another").hide("fast");
      });
      $('#gift-1-summary-remove').click(function () {
        $("#gift-1-summary").hide("fast");
        $("#add-another").hide("fast");
        $("#sp-c1-options").show("fast");
      });
      // gift 1 edit
      $('#gift-1-update-done').click(function () {
        $("#gift-1-update").hide("fast");
        $("#gift-1-summary").show("fast");
        $("#add-another").show("fast");
      });
      $('#gift-1-update-cancel').click(function () {
        $("#gift-1-update").hide("fast");
        $("#gift-1-summary").show("fast");
        $("#add-another").show("fast");
      });
      //
      $('#add-another').click(function () {
        $("#close-options").show("fast");
        $("#options-instructions").hide("fast");
        $("#sp-c1-options").show("fast");
        $("#gift-1-start").hide("fast");
        $("#gift-1-summary").hide("fast");
        $("#add-another").hide("fast");
      });
      $('#close-options').click(function () {
        $("#close-options").hide();
        $("#sp-c1-options").hide();
        $("#gift-1-summary").show("fast");
        $("#add-another").show("fast");
      });

      function hideAll() {
        // list
        $("#close-options").hide();
        // gift
        $("#gift-1-start").hide();
        $("#gift-1-update").hide();
        // $("#sp-c1-gift-b").hide();
        $("#c-ga-10").hide();
        $("#a1").hide();
        //list
        $("#add-another").hide();
      }
    });
  </script>
