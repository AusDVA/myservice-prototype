            <!-- end gift 1 summary -->
            <!-- gift 1 update -->
            <div id="gift-1-update" class="boxed margin-above margin-below">
              <h2 class="margin-above--none"><span class="font-weight-heavy">Gifts (deprived assets)</span></h2>
              <div id="sp-c1-gift-b">
                <div class="form-group margin-above--large">
                  <label class="uikit-text-input__label" for="rank">What type of asset did you give away, surrender or sell ?</label>
                  <select class="uikit-text-input input-half" id="employment" name="employment">
                    <option>-- Select type of asset --</option>
                    <option>Business</option>
                    <option selected="selected">Cash</option>
                    <option>Farm</option>
                    <option>Granny flat</option>
