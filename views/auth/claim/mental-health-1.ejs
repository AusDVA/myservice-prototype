            <div class="floated">
              <button class="uikit-btn btnNext" id="btnNext">Okay, I've got it</button>
            </div>
          </div>

        </div>


      </div>
    </div>

    <%- include(partials+"claims-cancel-modal") %>
    </div>

  </main>

  <%- include(partials+"footer") %>

  <script>
    $(Document).ready(function () {
      $("#btnNext").click(function () {
        window.location.href = "/auth/claim/mental-health-2"
      });
      $("#btnPrev").click(function () {
        window.location.href = "/auth/claim/mental-health-eligibility"
      });
    });
  </script>
