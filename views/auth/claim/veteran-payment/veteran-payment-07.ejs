<%

var progress = JSON.parse(include("veteran-payment-progressbar")) 
progress.activeItem = 8;

%>

<%- include(templates+"header", {
  claim: "Veteran Payment", 
  heading: "Upload visa documents",
  progress
}) %>

<h3>Upload your partner's visa documents</h3>

<section class="mys-file-uploads">
  <div class="mys-file-uploads__items">
    <div class="mys-file-uploads__item-border">
      <div class="mys-file-uploads__item mys-file-uploads__item--message">
        <div class="mys-file-uploads__message">No documents uploaded</div>
        <div>
          <button class="uikit-btn uikit-btn--tertiary">Upload document</button>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include(forms+"pagination", {
    pagination: [
      {
        text: "Previous",
        link: "/auth/claim/veteran-payment/veteran-payment-06"
      },
      {
        text: "Cancel",
        link: "#open-modal"
      },
      {
        text: "Save and exit",
        link: "/auth/claim",
        modifiers: ["floated"]
      },
      {
        text: "Save and next",
        link: "/auth/claim/veteran-payment/veteran-payment-08",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

<%- include("veteran-payment-state-switcher") %>

<script>

  function stateSwitcher() {
    if (immigrationStatus === "citizen") {
      window.location.href = "/auth/claim/veteran-payment/veteran-payment-08";
    }
  }

</script>

<%- include(templates+"footer") %>