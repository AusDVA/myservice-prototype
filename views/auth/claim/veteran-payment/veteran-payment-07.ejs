<%- include(templates+"header", {
  claim: "Veteran Payment", 
  heading: "Upload documents"
}) %>

<div id="partnered">
  <%- include(forms+"legacy-upload", {
      docs: [
        {
          title: "Medical certificate",
          description: "Evidence of your incapacity for work. You must provide this within 4 weeks of submitting your claim."
        },
        {
        title: "Marriage certificate",
        description: "A document provided by the state/territory government or country, where the marriage was registered."
        },
        {
          title: "Partner's Australian passport",
          description: "Current passport issued in your partner's name."
        },
        {
          title: "Partners Australian driver’s licence",
          description: "Current licence with their name & photo. We can accept current learner permit and provisional licence."
        },
        {
          title: "Your Tax Notice of Assessment",
          description: "2018-2019 document that lists your taxable income, the tax owed or refund entitled issued by ATO."
        },
        {
          title: "Partner's Tax Notice of Assessment",
          description: "2018-2019 document that lists your partner's taxable income, the tax owed or refund entitled issued by ATO."
        },
        {
          title: "Your tax return",
          description: "2018-2019 income tax return statement detailing your earnings and deductions submitted to the ATO."
        },
        {
          title: "Your partner's tax return",
          description: "2018-2019 income tax return statement detailing your partner's earnings and deductions submitted to the ATO."
        },
        {
          title: "Your pay summary",
          description: "2018-2019 statement from your employer detailing your wages earned and the amount of tax paid. "
        },
        {
          title: "Your partner's pay summary",
          description: "2018-2019 statement from your partner's employer detailing your wages earned and the amount of tax paid. "
        },
        {
          title: "Your pension income stream",
          description: "A document detailing payments from superannuation issued by your income stream provider."
        },
        {
          title: "Your partner's pension income stream",
          description: "A document detailing payments from superannuation issued by your partner's income stream provider."
        },
        {
          title: "Partner’s current address",
          description: "Provide a document showing your partner’s current address."
        }
      ]
    }) %>
</div>

<div id="single" hidden>
  <%- include(forms+"legacy-upload", {
      docs: [
        {
        title: "Medical certificate",
        description: "Evidence of your incapacity for work. You must provide this within 4 weeks of submitting your claim."
