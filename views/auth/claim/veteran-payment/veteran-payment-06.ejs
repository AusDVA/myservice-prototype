<%- include(templates+"header", {
  title: "Veteran Payment", 
  heading: "Bank details"
}) %>
  
  <%- include(forms+"notice", {
    message: "<p>This will be your nominated bank account for all DVA payments</p>"
  }) %>

  <%- include(partials+"components/form-partials/prepop/bank-details", {
    label: "Provide bank details"
  }); %>

  <%- include(forms+"yes_no", {
    label: "Do you have a tax file number",
    yes_toggle: "#tfn-container",
    no_toggle: "#need-tfn-container"
  }) %>

  <%- include(forms+"notice", {
    message: `<p>You need to apply for a tax file number from the <a href="https://www.ato.gov.au/"> Australian Taxation Office</a> to avoid their payment being taxed at a higher rate.</p>`,
    id: "need-tfn",
    modifiers: ["hidden"]
  }) %>

  <%- include(forms+"text", {
    label: "Tax file number",
    id: "tfn",
    modifiers: ["hidden"]
  }) %>

  <div class="couple" hidden>  
    <%- include(forms+"yes_no", {
      label: "Does your partner have a tax file number",
      yes_toggle: "#tfn-partner-container",
      no_toggle: "#need-tfn-partner-container"
    }) %>

    <%- include(forms+"notice", {
      message: `<p>Your partner needs to apply for a tax file number from the <a href="https://www.ato.gov.au/"> Australian Taxation Office</a> to avoid their payment being taxed at a higher rate.</p>`,
      id: "need-tfn-partner",
      modifiers: ["hidden"]
    }) %>

    <%- include(forms+"text", {
      label: "Partner's tax file number",
      id: "tfn-partner",
      modifiers: ["hidden"]
    }) %>
  </div>


  <p id="save-next" hidden>Choose <b>save and next</b> to continue</p>

  <%- include(forms+"pagination", {
    pagination: [
      {
        text: "Previous",
        link: "/auth/claim/veteran-payment/veteran-payment-05"
      },
      {
        text: "Cancel",
        link: "#open-modal"
      },
      {
        text: "Save and exit",
        link: "/auth/claim",
        modifiers: ["floated"]
      },
      {
        text: "Save and review",
        link: "/auth/claim/veteran-payment/veteran-payment-07",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

  <%- include("veteran-payment-state-switcher") %>

  <script>
    $(document).ready(function () {

      $('input[name=postal]').change(function () {
        var postal = $('input[name=postal]:checked').val();
        if (postal == "yes") {
          $("#postal-reason").show("fast");
          $("#save-next").hide();
        } else {
          $("#postal-reason").hide();
          $("#save-next").hide();
        }
      });

      $('input[name=update_address]').change(function () {
        var updateAddress = $('input[name=update_address]:checked').val();
        if (updateAddress == "yes") {
          $("#save-next").show("fast");
        } else {
          $("#save-next").show("fast");
        }
      });

    });
  </script>

<%- include(templates+"footer") %>