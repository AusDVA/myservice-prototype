<%- include("veteran-payment-state-switcher-02") %>

<script>

  $("#submit").attr('disabled','disabled');

  $('#checkbox-agree').change(function() {
    if (this.checked) {
      $("#submit").removeAttr('disabled');
    } else {
      $("#submit").attr('disabled','disabled');
    }
});

  function stateSwitcher() {

    if (relationshipStatus === "single") {
      $(".partnered").hide();
      $(".single").show();
      $(".citizen").hide();
      $(".immigrant").hide();
    } else {
      $(".single").hide();
      $(".partnered").show();
    }

    switch (relationshipStatus) {
      case "single":
        $(".user-label-a").text("your");
        $(".user-label-b").text("");
        break;
      case "partnered":
        $(".user-label-a").text("you and/or your partner's");
        $(".user-label-b").text("by you and/or your partner");
        break;
      default:
        break;
    }

  }
</script>

