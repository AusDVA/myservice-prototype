  function stateSwitcher() {
    if (commonwealthAllied === "yes") {
      $("#pag-previous").attr("href", "/auth/claim/qualifying-service/qs2a");
    } else {
      $("#pag-previous").attr("href", "/auth/claim/qualifying-service/qs2");
    }
  }
</script>

