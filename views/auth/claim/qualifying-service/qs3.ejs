    docs: [
      {
        title: "Proof of service (optional)",
        description: "For example, certificate of service, discharge signal, or any document that identifies your previous service"
      },
      {
        title: "Evidence of re-education (optional)",
        description: "For example, a re-education certificate"
      }
    ],
  }) %>

<%- include(forms+"pagination", {
    pagination: [
      {
        text: "Previous",
        id: "pag-previous",
        link: "/auth/claim/qualifying-service/qs2"
