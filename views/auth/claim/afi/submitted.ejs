<%- include(templates+"header", {
  title: "Submitted: Application for Increase to Disability Pension", 
  modifiers: ["margin-below--none"]
}) %>

      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <div class="claim-end">

            <div class="pt-claim-type--normal">
              <div class="margin-above ie-success-animation">
                <img src="/docs/images/ico-tick-green-outline.svg" alt="Success tick icon">
              </div>
              <div class="margin-above submitted-animation">
                <%- include(partials+"components/animations/submitted") %>

              </div>
              <div class="cantered-item transition-content transition-content--open pt-claim-animation-start">
                <h1>We're submitting your claim for an increase to your Disability&nbsp;Pension</h1>
              </div>
            </div>

            <div class="transition-content pt-claim-animation-end margin-below--extra">
              <div class="pt-claim-type--normal">
                <h1 class="cantered-item">Your claim for an increase to your Disability Pension has&nbsp;been
                  <span class="font-weight-heavy"> submitted</span>
                </h1>
              </div>

              <hr class="orange-divider">

              <div class="margin-below--extra">
                <h3 class="ss-align--center">We will contact you within 14 days to discuss your claim.
                </h3>
              </div>

  <%- include(forms+"pagination", {
    pagination: [
      {
        text: "Update profile",
        link: "/auth/profile"
      },
      {
        text: "See your claims",
        link: "/auth/claim"
      }
    ]
  }) %>


  <script>
    var timeDelay = 3000;
    setTimeout(
      function () {
        $(".pt-claim-animation-start").toggleClass("transition-content--open");
        $(".pt-claim-animation-end").toggleClass("transition-content--open");
      }, timeDelay);

  </script>

<%- include(templates+"footer") %>