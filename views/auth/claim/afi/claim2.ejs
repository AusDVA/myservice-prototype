<!DOCTYPE html>
<html class="js" lang="en">

<head>

  <title>Employment: Application for Increase to Disability Pension | MyService</title>
  <%- include(partials+"head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"header-topbar") %>
  <%- include(partials+"header-claims") %>
  <%- include(partials+"header-nom-rep") %>

  <main id="main-content">
    <div class="container">
      <div id="progressbar">
        <div id="percentage">
          <p id="percentage_value"></p>
        </div>

      </div>

      <h1>
        <span class="heading">Employment</span>
      </h1>


      <div class="container">
        <div class="form-group">
          <fieldset>
            <legend>
              <label class="uikit-text-input__label" for="employed">Are you employed?</label>
            </legend>
            <div class="radio-toggle">
              <label class="on label-left">
                <input id="employed-yes" type="radio" name="employed" value="yes">
                <span>Yes</span>
              </label>
              <label class="off label-right">
                <input id="employed-no" type="radio" name="employed" value="no">
                <span>No</span>
              </label>
            </div>
          </fieldset>
        </div>
      </div>

      <div class="container">
        <div class="form-group" id="employment-details" style="display:none;">

          <div class="form-group">
            <label class="uikit-text-input__label" for="employer-name">Name of current employer
            </label>
            <input class="uikit-text-input" name="employer-name" id="gp-name" type="text" value="" required="" aria-required="true">
          </div>

          <div class="form-group">
            <label class="uikit-text-input__label" for="hours-worked">Average hours worked per week
            </label>
            <input class="uikit-text-input yyyy" type="text" name="hours-worked" id="hours-worked" maxlength="3" aria-label="3 digit hours">&nbsp; hours per week
          </div>

          <!-- <div class="form-group" id="abilitytowork">
                                    <label class="uikit-text-input__label" for="abilitytowork">Does your condition affect your ability to work?
                                        <span class="hint display-block">For example the hours you can work or type of work you can do.</span>
                                    </label>
                                    <div class="radio-toggle">
                                        <label class="on label-left">
                                            <input id="abilitytowork-yes" type="radio" name="abilitytowork" value="yes">
                                            <span>Yes</span>
                                        </label>
                                        <label class="off label-right">
                                            <input id="abilitytowork-no" type="radio" name="abilitytowork" value="no">
                                            <span>No</span>
                                        </label>
                                    </div>
                                </div> -->
        </div>
      </div>
      <!-- <div class="container">
                            <div class="form-group" id="tellusmore" style="display:none;">
                                <label class="uikit-text-input__label" for="ability-to-work-reason">Tell us more about how your condition affects your ability to work
                                    <span class="hint display-block">(Do we need to give more information to help the user shape their story?)</span>
                                </label>
                                <textarea id="ability-to-work-reason" name="ability-to-work-reason" rows="2"></textarea>
                            </div>
                        </div> -->

      <div class="container">
        <div class="form-group" id="ceaseworkfromcondition" style="display:none;">
          <fieldset>
            <legend>
              <label class="uikit-text-input__label" for="resultofcondition">Did you stop work because of your condition?</label>
            </legend>
            <div class="radio-toggle">
              <label class="on label-left">
                <input id="resultofcondition-yes" type="radio" name="resultofcondition" value="yes">
                <span>Yes</span>
              </label>
              <label class="off label-right">
                <input id="resultofcondition-no" type="radio" name="resultofcondition" value="no">
                <span>No</span>
              </label>
            </div>
          </fieldset>
        </div>
      </div>

      <div class="container">
        <div class="form-group" id="unemployed" style="display:none;">

          <div class="form-group">
            <label class="uikit-text-input__label" for="cease-work-date">Approximately when did you stop working?
              <span class="hint display-block">(MM / YYYY)</span>
            </label>
            <input class="uikit-text-input mm" type="text" name="mm-date-finish-studying" id="mm-date-finish-studying" maxlength="2" aria-label="2 digit month"> /
            <input class="uikit-text-input yyyy" type="text" name="yyyy-date-finish-studying" id="yyyy-date-finish-studying" maxlength="4" aria-label="4 digit year">
          </div>

          <!-- <div class="form-group">
                                    <label class="uikit-text-input__label" for="cease-work-reason">Why did you cease work?
                                        <span class="hint display-block">For example retirement, illness or redundancy.</span>
                                    </label>
                                    <textarea id="cease-work-reason" name="cease-work-reason" rows="2"></textarea>
                                </div> -->


        </div>
      </div>

      <div class="container">
        <div id="save-and-next" style="display:none;">
          <p>Choose
            <b>Save and next</b> to continue your claim.</p>
        </div>
      </div>

      <div class="pagination">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim/afi/claim1'">Previous</button>
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel claim</button>
        <div class="floated">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim'">Save and exit</button>
          <button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/auth/claim/afi/claim3'">Save and next</button>
        </div>
      </div>

      <%- include(partials+"claims-cancel-modal") %>
    </div>

  </main>

  <%- include(partials+"footer") %>


  <script>
    // Progress percentage
    document.getElementById("percentage").style.width = "60%";
    document.getElementById("percentage_value").textContent = "60%";

    $("#employed-yes").click(function () {
      $("#employment-details").show();
      $("#ceaseworkfromcondition").hide();
      $("#unemployed").hide();
      $("#save-and-next").hide();
    });
    $("#employed-no").click(function () {
      // $("#save-and-next").show();
      // $("#unemployed").show();
      $("#ceaseworkfromcondition").show();
      $("#employment-details").hide();
    });

    $("#resultofcondition-yes").click(function () {
      $("#save-and-next").hide();
      $("#unemployed").show();
    });
    $("#resultofcondition-no").click(function () {
      $("#unemployed").hide();
      $("#save-and-next").show();
    });

    $("#abilitytowork-yes").click(function () {
      $("#save-and-next").hide();
      $("#tellusmore").show();
    });
    $("#abilitytowork-no").click(function () {
      $("#tellusmore").hide();
      $("#save-and-next").show();
    });

  </script>

</body>

</html>
