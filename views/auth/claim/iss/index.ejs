<script>
  function stateSwitcher() {
    hideAll();
    console.log( state )
    switch (state) {
      case "Draft claim in progress":
        $(".draft-claim").show();
        break;
      case "No draft claim in progress":
        $(".default").show();
        break;
      default:
        break;
    }
}

function hideAll(){
  $(".draft-claim").hide();
  $(".default").hide();
}
</script>
