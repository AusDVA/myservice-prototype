<%- include(templates+"header", {
  claim: "Commonwealth Seniors Health Card",
  heading: "Account-based pensions",
  progress: {
    activeItem: 3,
      points: [
        {
          text: "Your income",
          link: "/auth/claim/cshc/c-01"
        },
        {
          text: "Current year estimates",
          link: "/auth/claim/cshc/c-02"
        },
        {
          text: "Account-based pensions",
