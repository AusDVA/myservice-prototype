        <p role="alert">This website needs JavaScript to work properly.</p>
    </noscript>
    <nav class="uikit-skip-link">
        <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
    </nav>
    <% include ../../../global/partials/header-topbar-new.ejs %>
    <main>
        <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
            <div class="container margin-above--none">
                <!-- Progress bar -->
                <div class="col-md-12">
                    <nav>
                        <ul class="progress-container">
                            <li class="progress-step progress-step">
                                <a href="sp-c1">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Savings</p></a>
                            </li>
                            <li class="progress-step progress-step">
                                <a href="sp-c2">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Investments</p>
                  </a>
                            </li>
                            <li class="progress-step progress-step--active">
                                <a href="sp-c3">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Income</p>
                  </a>
                            </li>
                            <li class="progress-step progress-step">
                                <a href="sp-c4">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Property &amp; businesses</p>
                  </a>
                            </li>
                            </li>
                            <li class="progress-step progress-step">
                                <a href="sp-c5">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Other assets</p>
                  </a>
                            </li>
                            <li class="progress-step progress-step--last">
                                <a href="sp-c6">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Additional circumstances</p>
                  </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- Page heading -->
            <h1 class="margin-above--none ss-align--center"><span class="heading">Income</span></h1>
        </div>
        <section>
            <div class="container margin-above margin-below--extra">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8 margin-below--large">
                        <div id="user-list">
                            <hr class="margin-below--none">
                            <h2 class="margin-above--none" style="float; left; width: 400px; display: inline-block;" ><icon class="fal fa-list-alt" style="font-size: 1.3em; vertical-align: -15%;"></icon>&nbsp;&nbsp;My income</h2>
                            <div id="add-anchor-link-return" style="cursor: pointer; float:right; display: none;">
                                <p style="margin-top: 10px;">
                                    <icon class="fal fa-plus-circle" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;Add other income
                                </p>
                            </div>
                        </div>
                        <div id="add-anchor-link-start" style="cursor: pointer;">
                            <p class="margin-above--extra ss-align--center">
                                <icon class="fal fa-plus-circle" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;Add income
                            </p>
                        </div>
                        <!-- Cards -->
                        <% include ../../partials/income-assets--other-payments.ejs %>
                        <!-- Tiles intro -->
                        <div id="add-options">
                            <hr>
                            <h2 id="add-options" class="margin-above--none margin-below--none ss-align--center"><span class="font-weight-heavy">Income</span></h2>
                            <span class="hint display-block ss-align--center">Add all your income, and your partner's income, so we can calculate your payments.</span>
                            <div class="flex-container flex-container--wrap hover-container">
                                <!-- Tiles -->
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-briefcase" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Employment income</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">Income from work performed as an employee by you and/or your partner.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-route" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Past employment</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">If you or your partner have ceased paid employment in the last 12 months.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-envelope-open-dollar" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Super pension</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">Superannuation income, pension or disability payments.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-passport" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Foreign pension</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">Income received from a government agency or other organisation outside Australia.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-box-usd" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Annuities &amp; pensions</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">A series of regular payments made for a lifetime or a fixed period by a financial institution, superannuation fund or retirement savings account.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <div class="flex-item flex-item--centred card card--claims card--claims-col-3 hover-element" id="sp-c-home-contents-add">
                                    <a class="card-container">
                                        <h2 class="card__title">
                                            <icon class="fal fa-globe-europe" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;
                                            <span class="font-weight-heavy">Foreign income &amp; assets</span>
                                        </h2>
                                        <p class="card__supporting-text text-fullwidth">Foreign Assets with incoming producing potential.</p>
                                        <div class="card__button">
                                            <button class="uikit-btn uikit-btn--tertiary small">Add</button>
                                        </div>
                                    </a>
                                </div>
                                <% include ../../partials/income-assets--tile--other-payments.ejs %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <BR /><BR /><BR /><BR />
            <!-- bottom page navigation -->
            <div class="pagination">
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/sp-c2'">Previous</button>
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel claim</button>
                <div class="floated">
                    <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/claims'">Save and exit</button>
                    <button class="uikit-btn btnNext" onclick="window.location.href = '/sp-c4'">Save and next</button>
                </div>
            </div>
