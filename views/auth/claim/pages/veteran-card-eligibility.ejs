<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Add claim: Veteran Card | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../global/partials/header-topbar-new.ejs %>


  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <div class="container margin-above--none">
        <h1 class="margin-above--none ss-align--center">
          <span class="heading">Before you start</span>
        </h1>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">

          <div class="margin-above--extra margin-below--extra">
            <h2 class="ss-align--center margin-below--none">Check your eligibility</h2>

            <div class="form-group margin-above--extra" id="q1">
              <fieldset>
                <label class="legend-label ss-align--center">Have you ever been a member of the Permanent Forces?</label>
                <div class="radio-toggle radio-toggle--center">
                  <label class="on label-left">
                    <input type="radio" id="permanentYes" name="PermanentQuestion" value="yes">
                    <span>Yes</span>
                  </label>
                  <label class="off label-right">
                    <input type="radio" id="permanentNo" name="PermanentQuestion" value="no">
                    <span>No</span>
                  </label>
                </div>
              </fieldset>
            </div>

            <div class="form-group margin-above" id="q2">
              <fieldset>
                <label class="legend-label ss-align--center">Have you ever been a member of the Reserves?</label>
                <div class="radio-toggle radio-toggle--center">
                  <label class="on label-left">
                    <input type="radio" id="reservistYes" name="ReserveQuestion" value="yes">
                    <span>Yes</span>
                  </label>
                  <label class="off label-right">
                    <input type="radio" id="reservistNo" name="ReserveQuestion" value="no">
                    <span>No</span>
                  </label>
                </div>
              </fieldset>
            </div>


            <p id="choose-next" class="margin-above text-fullwidth ss-align--center">Choose
              <b>next</b> to continue.</p>

          </div>

          <div class="pagination pagination--ss-reverse-order">
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel</button>
            <div class="floated">
              <button class="uikit-btn btnNext" id="btnNext">Next</button>
            </div>
          </div>

        </div>


      </div>
    </div>

    <% include ../partials/cancel-modal.ejs %>
    </div>

  </main>

  <% include ../../../global/partials/footer.ejs %>


  <script>

    $(Document).ready(function () {
      $("#btnNext").click(function () { window.location.href = "/veteran-card-1" });
    });

    $("#q2").hide();
    $("#choose-next").hide();

    $("input[name$='PermanentQuestion']").click(function () {
      if (this.value === 'yes') {
        iseligibile = true
        $("#q2").hide();
        $("#choose-next").show();
      }
      else if (this.value === 'no') {
        $("#q2").show();
        $("#choose-next").hide();
      }
    });

    $("input[name$='ReserveQuestion']").click(function () {
      if (this.value === 'yes') {
        iseligibile = true
        $("#choose-next").show();
      }
      else if (this.value === 'no') {
        $("#choose-next").show();
      }
    });

  </script>

</body>

</html>