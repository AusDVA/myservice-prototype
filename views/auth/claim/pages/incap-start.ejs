<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Add claim: Incapacity Payments | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../global/partials/header-topbar-new.ejs %>

  <main id="main-content">

    <div class="container margin-below--extra">
      <div class="row">
        <div class="col-md-offset-2 col-md-8">

          <h1 class="margin-above margin-below">
            <span class="heading">Before you start</span>
          </h1>

          <div class="form-group current-job">
            <legend class="legend-label ss-align--center">Will you be leaving the ADF in the next 3 months?</legend>
            <div class="radio-toggle radio-toggle--center">
              <label class="on label-left" for="leavingADF-yes">
                <input id="leavingADF-yes" type="radio" name="leavingADF">
                <span>Yes</span>
              </label>
              <label class="off label-right" for="leavingADF-no">
                <input id="leavingADF-no" type="radio" name="leavingADF">
                <span>No</span>
              </label>
            </div>
          </div>

          <div class="form-group leavingdate margin-above--extra" style="display:none;">
            <label class="uikit-text-input__label ss-align--center" for="dd-leavingdate">When are you leaving? <span class="hint display-block">(dd / mm / yyyy)</span>
            </label>
            <div class="ss-align--center">
              <input class="uikit-text-input dd" type="text" name="dd-leavingdate" id="dd-leavingdate" maxlength="2" required aria-required="true" aria-label="2 digit day">
              /
              <input class="uikit-text-input mm" type="text" name="mm-leavingdate" id="mm-leavingdate" maxlength="2" required aria-required="true" aria-label="2 digit month">
              /
              <input class="uikit-text-input yyyy" type="text" name="yyyy-leavingdate" id="yyyy-leavingdate" maxlength="4" required aria-required="true" aria-label="4 digit year"></div>
          </div>

          <!-- Save and next -->

          <div class="form-group save-and-next ss-align--center margin-above--extra" style="display:none;">
            <p class="text-fullwidth">Choose <b>save and next</b> to continue.</p>
          </div>

        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-8 margin-above--extra">
          <div class="pagination pagination--ss-reverse-order">
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/claims-make'">Back to Claims</button>
            <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/claims-make'">Cancel</button>
            <div class="floated">
              <button class="uikit-btn btnNext" id="btnNext">Save and next</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include ../partials/cancel-modal.ejs %>

  </main>

  <% include ../../../global/partials/footer.ejs %>


  <script>

    $(Document).ready(function () {
      localStorage.clear();
      $("#btnNext").click(function () { window.location.href = "/incap-progress" });
    });

    // Show and hide leaving date
    $("#leavingADF-yes").click(function () {
      $(".leavingdate").show();
      $(".save-and-next").hide();
    });
    $("#leavingADF-no").click(function () {
      $(".leavingdate").hide();
      $(".save-and-next").show();
    });

  </script>

</body>

</html>