                    <label class="on label-left">
                      <input id="eligibilityVeteranSignificantlyInjured-yes" type="radio" name="eligibilityVeteranSignificantlyInjured">
                      <span>Yes</span>
                    </label>
                    <label class="off label-right">
                      <input id="eligibilityVeteranSignificantlyInjured-no" type="radio" name="eligibilityVeteranSignificantlyInjured">
                      <span>No</span>
                    </label>
                  </div>
                </div>

                <!-- 34 -->
                <div class="form-group pt-flow--veteran pt-flow--claimant">
                  <legend class="legend-label" id="question_id34"></legend>
                  <div class="radio-toggle">
                    <label class="on label-left">
                      <input id="eligibilityStudentFullTimeStudy-yes" type="radio" name="eligibilityStudentFullTimeStudy">
                      <span>Yes</span>
                    </label>
                    <label class="off label-right">
                      <input id="eligibilityStudentFullTimeStudy-no" type="radio" name="eligibilityStudentFullTimeStudy">
                      <span>No</span>
                    </label>
                  </div>
                </div>

                <!-- 35 -->
                <div class="form-group pt-flow--veteran pt-flow--claimant">
                  <legend class="legend-label" id="question_id35"></legend>
