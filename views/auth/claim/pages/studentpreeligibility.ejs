                <!-- 32 -->
                <div class="form-group pt-flow--student">
                  <legend class="legend-label" id="question_id40"></legend>
                  <div class="radio-toggle">
                    <label class="on label-left">
                      <input id="eligibilityPersonType-student" type="radio" name="eligibilityPersonType">
                      <span>Student</span>
                    </label>
                    <label class="off label-right">
                      <input id="eligibilityPersonType-carer" type="radio" name="eligibilityPersonType">
                      <span>Carer</span>
                    </label>
                  </div>
                </div>

                <!-- 32 -->
                <div class="form-group pt-flow--student">
                  <legend class="legend-label" id="question_id32"></legend>
                  <div class="radio-toggle">
                    <label class="on label-left">
                      <input id="eligibilityFullTimeStudy-yes" type="radio" name="eligibilityFullTimeStudy">
                      <span>Yes</span>
                    </label>
                    <label class="off label-right">
                      <input id="eligibilityFullTimeStudy-no" type="radio" name="eligibilityFullTimeStudy">
                      <span>No</span>
                    </label>
                  </div>
                </div>

                <!-- 33a -->
                <div class="form-group pt-flow--student">
                  <legend class="legend-label" id="question_id33a"></legend>
