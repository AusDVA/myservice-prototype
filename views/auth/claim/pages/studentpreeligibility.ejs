                    </label>
                  </div>
                </div>


                <!-- 36 -->
                <div class="form-group pt-flow--veteran pt-flow--claimant">
                  <legend class="legend-label" id="question_id36"></legend>
                  <div class="radio-toggle">
                    <label class="on label-left">
                      <input id="eligibilityVeteranSignificantlyInjuredDeceased-yes" type="radio" name="eligibilityVeteranSignificantlyInjuredDeceased">
                      <span>Yes</span>
                    </label>
                    <label class="off label-right">
                      <input id="eligibilityVeteranSignificantlyInjuredDeceased-no" type="radio" name="eligibilityVeteranSignificantlyInjuredDeceased">
                      <span>No</span>
                    </label>
                  </div>
                </div>

                <div class="form-group pt-outcome">
                  <p>Outcome:</p>
                  <p class="pt-outcome--yes" id="question_id37"></p>
                  <p class="pt-outcome--maybe" id="question_id38"></p>
                  <p class="pt-outcome--no" id="question_id39"></p>
                </div>

              </fieldset>
            </form>



            <div class="pagination">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href='/student-assistance-landing'">Back to Home</button>

