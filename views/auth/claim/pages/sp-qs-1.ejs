</body>
<script>
$(document).ready(function() {

    $("#message").hide();
    $("#operation-card").hide();
    $("#op-1").hide();
    $("#sp-2").hide();
    $("#service-period-card").hide();

    //show operation card 
    $('#add-operation-period-btn').click(function() {
        $("#add-service-period-footer").hide();
        $("#footer-buttons-mask").show();
        $(myForm).trigger("reset");
        $("#operation-card").show("fast");
        $("#sp-1").hide();
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);

    });

    var firstSummaryAdded = false;
    $('#operation-history-add').click(function() {
        $("#footer-buttons-mask").hide();
        $("#add-service-period-footer").show();
        $("#operation-card").hide();
        $("#sp-1").show("fast");
        $("#op-1").show("fast");
        $("#timeline-1").show();
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);
        if (firstSummaryAdded) {
            $('<div class="timeline-1a"></div>').clone().appendTo('#op-1');
            cloneOpHistory();
        }
        firstSummaryAdded = true;
    });

    function cloneOpHistory() {
        $('#op-1-summary').clone().appendTo('#op-1');
    }

    $('#operation-history-cancel').click(function() {
        $("#add-service-period-footer").show();
        $("#footer-buttons-mask").hide();
        $("#operation-card").hide();
        $("#add-service-period-btn").show("fast");
        $("#sp-1").show("fast");
    });

    // 2nd service period

    $('#add-service-period-btn').click(function() {
        $("#footer-buttons-mask").show();
        $("#add-service-period-footer").hide();
        $("#service-period-card").show("fast");
        $("#sp-1").hide();
        $("#sp-2").hide();
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);
    });



    $('#service-period-add-btn').click(function() {
        $("#footer-buttons-mask").hide();
        $("#add-service-period-footer").show();
        $("#sp-1").show("fast");
        $("#sp-2").show("fast");
        $("#service-period-card").hide();
        $("#add-operation-period-btn-2").show();
    });

});


function typeSelected(event) {
    console.log("fdsfdsfds")
    var field = document.getElementById("operation-other");
    var select = document.getElementById("operation-name");
    var selectedString = select.options[select.selectedIndex].value;
    if (selectedString == "Other") {
        field.style.display = 'block';
    } else {
        field.style.display = 'none';
    }
}
</script>

