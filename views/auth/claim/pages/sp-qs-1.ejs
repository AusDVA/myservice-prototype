                            <!-- Adding operation card -->
                            <div id="operation-card" class="boxed margin-above margin-below--large">
                                <h2 class="margin-above--none">
                    <icon class="fal fa-map-marker-alt" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;<span class="font-weight-heavy">Operation</span></h2>
