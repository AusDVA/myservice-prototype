<script>
$(document).ready(function() {

    $("#operation-card").hide();
    $("#op-1").hide();
    $("#sp-2").hide();
    $("#service-period-card").hide();

    //show operation card 
    $('#add-operation-period-btn').click(function() {
        $("#operation-card").show("fast");
        $("#add-service-period-btn").hide();
        $("#sp-1").hide();
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);
    });

    var firstSummaryAdded = false;
    $('#operation-history-add').click(function() {
        $("#operation-card").hide();
        $("#add-service-period-btn").show("fast");
        $("#sp-1").show("fast");
        $("#op-1").show("fast");
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);
        $('<div class="timeline-1a"></div>').clone().appendTo('#op-1');
        if (firstSummaryAdded) {
            cloneOpHistory();
        }
        firstSummaryAdded = true;
    });

    function cloneOpHistory() {
        $('#op-1-summary').clone().appendTo('#op-1');
        $('<div class="timeline-1a"></div>').clone().appendTo('#op-1');
    }

    // 2nd service period

    $('#add-service-period-btn').click(function() {
        $("#service-period-card").show("fast");
        $("#sp-1").hide();
        $("#add-service-period-btn").hide();
        $('html, body').animate({
            scrollTop: $("#main-content").offset().top
        }, 1000);
    });

    $('#service-period-add-btn').click(function() {
        $("#sp-1").show("fast");
        $("#sp-2").show("fast");
        $("#add-service-period-btn").hide();
        $("#service-period-card").hide();
        // add service period 
        var operations = $("#operational-yes").is(":checked");
        if (operations) {
            $("#add-operation-period-btn-2").show();
        } else {
            $("#add-operation-period-btn-2").hide();
            $("#timeline-sp-2").hide();
        }
    });

    $('#service-period-cancel-btn').click(function() {
        $("#sp-1").show("fast");
        // $("#sp-2").show("fast");
        $("#add-service-period-btn").hide();
        $("#service-period-card").hide();
    });

    // 1st period op button

    var showOperationsButton = getParameterByName('operations');
    if (showOperationsButton == "true") {
        $("#add-operation-period-btn").show();
        $("#timeline-1").show();
    }

    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, '\\$&');
        var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

});
</script>

