              <!-- G -->
              <div class="form-group" id="partner-details-other">
                <fieldset>
                  <legend class="legend-label">Excluding this claim, is your partner currently in receipt of, or has your partner previously received, or is your partner applying for
                    any of the following (select all that apply):</legend>
                  <p class="uiToolKitCheckBox">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input" type="checkbox" name="dva-payments">
                      <span class="uikit-control-input__text">DVA payments</span>
                    </label>
                  </p>

                  <p class="uiToolKitCheckBox">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input" type="checkbox" name="centrelink">
                      <span class="uikit-control-input__text">Centrelink payments</span>
                    </label>
                  </p>

                  <p class="uiToolKitCheckBox">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input" type="checkbox" name="adf-payments">
                      <span class="uikit-control-input__text">Australian Defence Force Compensation</span>
                    </label>
                  </p>

                  <p class="uiToolKitCheckBox">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input" type="checkbox" name="other-comp">
                      <span class="uikit-control-input__text">Other compensation</span>
                    </label>
                  </p>
                </fieldset>

                <fieldset>
                  <legend class="legend-label">Is your partner blind or visually impaired?</legend>
                  <div class="radio-toggle">
                    <label class="on label-left" for="partner-blind-yes">
                      <input id="partner-blind-yes" type="radio" name="partner-blind">
                      <span>Yes</span>
                    </label>
                    <label class="off label-right" for="partner-blind-no">
