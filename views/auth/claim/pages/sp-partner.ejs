                  <fieldset>
                    <div class="form-group">
                      <label class="uikit-text-input__label">Partnerâ€™s date of birth
                        <span class="hint">(dd / mm / yyyy)</span>
                      </label>
                      <input class="uikit-text-input dd" type="text" name="enlistStartDay" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
                      <input class="uikit-text-input mm" type="text" name="enlistStartMonth" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
                      <input class="uikit-text-input yyyy" type="text" name="enlistStartYear" maxlength="4" required aria-required="true" aria-label="4 digit year">
                    </div>
                  </fieldset>

                  <fieldset>
                    <legend class="legend-label">Is your partnerâ€™s home address the same as your own?</legend>
                    <div class="radio-toggle">
                      <label class="on label-left" for="aus-citizen-yes">
                        <input id="aus-citizen-yes" type="radio" name="aus-citizen">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right" for="aus-citizen-no">
                        <input id="aus-citizen-no" type="radio" name="aus-citizen">
                        <span>No</span>
                      </label>
                    </div>

                    <div class="form-group" id="partners-home-address">
                      <label class="uikit-text-input__label" for="tags">Address line 1</label>
                      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">


                      <label class="uikit-text-input__label" for="tags">Address line 2</label>
                      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">


                      <label class="uikit-text-input__label" for="tags">Suburb</label>
                      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">

                      <label class="uikit-text-input__label" for="tags">State</label>
                      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">


                      <label class="uikit-text-input__label" for="tags">Postcode</label>
                      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">
                    </div>

                    <legend class="legend-label margin-above--large">Is your partnerâ€™s postal address the same as your own?</legend>
                    <div class=" radio-toggle">
                      <label class="on label-left" for="aus-postal-yes">
                        <input id="aus-postal-yes" type="radio" name="aus-postal">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right" for="aus-postal-no">
                        <input id="aus-postal-no" type="radio" name="aus-postal">
                        <span>No</span>
                      </label>
                    </div>

                    <legend class="legend-label margin-above--large">Does your partner currently hold a Commonwealth Seniors Health Card (CSHC) from Centrelink?</legend>
                    <div class="radio-toggle">
                      <label class="on label-left" for="partner-csh-yes">
                        <input id="partner-csh-yes" type="radio" name="partner-csh">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right" for="partner-csh-no">
                        <input id="partner-csh-no" type="radio" name="partner-csh">
                        <span>No</span>
                      </label>
                    </div>

                    <label class="uikit-text-input__label margin-above--large" for="tags">What is the Customer Reference Number (CRN) on the card?</label>
                    <input class="uikit-text-input" name="tags" id="tags" type="text" value="">


                    <legend class="legend-label margin-above--large">Is your partner receiving (or applying for) a payment from Centrelink?
                    </legend>
                    <p>This includes for example, age pension, disability support pension, ABSTUDY, payments under the New Enterprise Incentive Scheme (NEIS)</p>
                    <div class="radio-toggle">
                      <label class="on label-left" for="partner-centrelink-yes">
                        <input id="partner-centrelink-yes" type="radio" name="partner-centrelink">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right" for="partner-centrelink-no">
                        <input id="partner-centrelink-no" type="radio" name="partner-centrelink">
                        <span>No</span>
                      </label>
                    </div>

                    <label class="uikit-text-input__label margin-above--large" for="tags">Payment type</label>
                    <input class="uikit-text-input" name="tags" id="tags" type="text" value="">

                    <label class="uikit-text-input__label margin-above--large" for="tags">Amount received per fortnight</label>
                    <input class="uikit-text-input" name="tags" id="tags" type="text" value="$0.00">

                    <label class="uikit-text-input__label margin-above--large" for="tags">Customer Reference Number (CRN)</label>
                    <input class="uikit-text-input" name="tags" id="tags" type="text" value="">


                    <label class="uikit-text-input__label margin-above--large">Date of application
                      <span class="hint">(dd / mm / yyyy)</span>
                    </label>
                    <input class="uikit-text-input dd" type="text" name="enlistStartDay" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
                    <input class="uikit-text-input mm" type="text" name="enlistStartMonth" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
                    <input class="uikit-text-input yyyy" type="text" name="enlistStartYear" maxlength="4" required aria-required="true" aria-label="4 digit year">
                </div>

                <label class="uikit-text-input__label" for="tags">Regional office</label>
                <input class="uikit-text-input" name="tags" id="tags" type="text" value="">

              </div><!-- end of partner details -->
              </fieldset>

