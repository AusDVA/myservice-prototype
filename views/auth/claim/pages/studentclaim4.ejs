<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>Student Claim</title>
  <link href="docs/css/main.css" rel="stylesheet">
  <style>
    .pt-flow--veteran,
    .pt-flow--student,
    .pt-flow--claimant {
      display: none;
    }
  </style>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../global/partials/header-topbar.ejs %>
    <% include ../../../global/partials/header-claims.ejs %>
      <% include ../partials/help-button.ejs %>
        <main>
          <div class="container" id="main-content">
            <div id="progressbar">
              <div id="percentage"></div>
            </div>
            <h1>Student Claims (Step 4: Financial details)</h1>
            <div id="optional-fields-message">All fields are required unless marked (optional).</div>


            <fieldset>

              <div class="tip--wrapper">Tax info</div>
              <!-- 26 -->
              <div class="form-group pt-flow--veteran pt-flow--claimant">
                <legend class="legend-label" id="question_id26"></legend>
                <p class="uiToolKitCheckBox">
                  <label class="uikit-control-input">
                    <input class="uikit-control-input__input" value="no-one" type="radio" name="whoReceivesFTB">
                    <span class="uikit-control-input__text">No one</span>
                  </label>
                </p>
                <p class="uiToolKitCheckBox">
                  <label class="uikit-control-input">
                    <input class="uikit-control-input__input" value="myself" type="radio" name="whoReceivesFTB">
                    <span class="uikit-control-input__text">Myself</span>
                  </label>
                </p>
                <p class="uiToolKitCheckBox">
                  <label class="uikit-control-input">
                    <input class="uikit-control-input__input" value="split-care" type="radio" name="whoReceivesFTB">
                    <span class="uikit-control-input__text">Shared care</span>
                  </label>
                </p>
              </div>

              <!-- 26a -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCentrelinkCustomer">
                <label class="uikit-text-input__label" for="centrelinkCRN" id="question_id26a"></label>
                <input class="uikit-text-input input-half" name="centrelinkCRN" id="centrelinkCRN" type="text" value="">
              </div>

              <!-- 26b -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCentrelinkCustomer">
                <label class="uikit-text-input__label" for="percentageCare" id="question_id26b"></label>
                <input class="uikit-text-input input-small uikit-text-input--number" name="percentageCare" id="percentageCare" type="number">
                <span class="input-support-text input-support-text--after">%</span>
              </div>

              <!-- 26b 1 -->
              <div class=" form-group uikit-page-alerts pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCarePercentageLow">
                <p id="question_id26b1"></p>
              </div>

              <!-- 26b 2 -->
              <div class=" form-group uikit-page-alerts pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCarePercentageHigh">
                <p id="question_id26b2"></p>
              </div>


              <!-- 26c -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCentrelinkCustomer">
                <label class="uikit-text-input__label" for="otherCareGiverName" id="question_id26c"></label>
                <input class="uikit-text-input input-half" name="otherCareGiverName" id="otherCareGiverName" type="text" value="">
              </div>

              <!-- 26d -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfCentrelinkCustomer">
                <label class="uikit-text-input__label" for="otherCareGiverContact" id="question_id26d"></label>
                <input class="uikit-text-input input-half" name="otherCareGiverContact" id="otherCareGiverContact" type="text" value="">
              </div>

              <!-- 27 -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-studentAge--mature">
                <label class="uikit-text-input__label" for="studentTFN" id="question_id27"></label>
                <input class="uikit-text-input input-half" name="studentTFN" id="studentTFN" type="number" value="">
              </div>

              <!-- 28 -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant">
                <legend class="legend-label" id="question_id28"></legend>
                <div class="radio-toggle">
                  <label class="on label-left ">
                    <input type="radio" name="educationAllowanceTaxed" value="yes">
                    <span>Yes</span>
                  </label>
                  <label class="off label-right ">
                    <input type="radio" name="educationAllowanceTaxed" value="no">
                    <span>No</span>
                  </label>
                </div>
              </div>

              <!-- 28 a -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant pt-showIfEducationAllowanceTaxed">
                <label class="uikit-text-input__label" for="howMuchTax" id="question_id28a"></label>
                <span class="input-support-text">$</span>
                <input class="uikit-text-input input-small uikit-text-input--number" name="howMuchTax" id="howMuchTax" type="number">

              </div>

              <!-- 28 a i -->
              <h2>Bank details</h2>
              <p id="question_id28ai"></p>

              <!-- 29 -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant" id="">
                <label class="uikit-text-input__label" for="accountName" id="question_id29"> </label>
                <input class="uikit-text-input input-half" name="accountName" id="accountName" type="text" value="">
              </div>

              <!-- 30 -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant" id="">
                <label class="uikit-text-input__label" for="bSB" id="question_id30"></label>
                <input class="uikit-text-input input-half" name="bSB" id="bSB" type="text" value="">
              </div>

              <!-- 31 -->
              <div class="form-group pt-flow--veteran pt-flow--student pt-flow--claimant" id="accountnumber">
                <label class="uikit-text-input__label" for="accountNumber" id="question_id31"> </label>
                <input class="uikit-text-input input-half" name="accountNumber" id="accountNumber" type="text" value="">
              </div>




            </fieldset>

            <div class="pagination">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/studentclaim3'">Previous</button>
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel claim</button>
              <div class="floated">
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/index-claims'">Save and exit</button>&nbsp;
                <button class="uikit-btn btnNext" onclick="window.location.href = '/studentclaim5'">Save and review</button>
              </div>
            </div>
            <% include ../partials/cancel-modal.ejs %>
          </div>

        </main>

        <% include ../../../global/partials/footer.ejs %>
          <% include ../partials/panel-help.ejs %>

            <script>

              // Progress percentage
              // document.getElementById("percentage").style.width ="75%";
              document.getElementById("percentage").style.width = "80%";




            </script>

</body>

</html>