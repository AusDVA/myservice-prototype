                      <option value="veterancard">Veteran Card</option>
                      <option value="mentalhealth">Free mental health treatment</option>
                      <option value="incap">Incapacity Payments</option>
                      <option value="afi">Increase your disability pension</option>
                      <option value="education">Education allowance</option>
                      <option value="dhoas">DHOAS subsidy certificate</option>
                    </select>
                  </div>
                  <div class="action-group__reveal--closed" id="entitlement-vc">
                    <p class="margin-below--none margin-above--mid">This text will need to be updated.</p>
                    <button class="uikit-btn small margin-above--mid" onclick="window.location.href='/veteran-card-1'">
                      <b>Access now</b>
