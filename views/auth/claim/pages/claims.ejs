  <script>
    $(".toggle-arrow").click(function () {
      $(".simple-accordion").toggleClass('simple-accordion--open simple-accordion--closed');
    });

    function goToByScroll(id) {
      id = id.replace("-link", "");
      $('html,body').animate({
        scrollTop: $("#" + id).offset().top
      },
        'slow');
    }
    $("#claim-activity-link").click(function (e) {
      e.preventDefault();
      goToByScroll($(this).attr("id"));
    });


    $("#entitlements").change(function () {
      if ($('#entitlements :selected').val() == "veterancard") {
        $("#entitlement-vc").removeClass('action-group__reveal--closed');
        $("#entitlement-vc").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-vc").removeClass('action-group__reveal--open');
        $("#entitlement-vc").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "mentalhealth") {
        $("#entitlement-mh").removeClass('action-group__reveal--closed');
        $("#entitlement-mh").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-mh").removeClass('action-group__reveal--open');
        $("#entitlement-mh").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "education") {
        $("#entitlement-student").removeClass('action-group__reveal--closed');
        $("#entitlement-student").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-student").removeClass('action-group__reveal--open');
        $("#entitlement-student").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "incap") {
        $("#entitlement-incap").removeClass('action-group__reveal--closed');
        $("#entitlement-incap").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-afi").removeClass('action-group__reveal--open');
        $("#entitlement-afi").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "afi") {
        $("#entitlement-afi").removeClass('action-group__reveal--closed');
        $("#entitlement-afi").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-afi").removeClass('action-group__reveal--open');
        $("#entitlement-afi").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "dhoas") {
        $("#entitlement-dhoas-subsidy").removeClass('action-group__reveal--closed');
        $("#entitlement-dhoas-subsidy").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-dhoas-subsidy").removeClass('action-group__reveal--open');
        $("#entitlement-dhoas-subsidy").addClass('action-group__reveal--closed');
      }
    });
  </script>

