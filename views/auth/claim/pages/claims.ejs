        <script>
          function scrollToAdd() {
            $('html, body').animate({
              scrollTop: $("#claims-tiles").offset().top
            }, 1000);
          }

          $(document).keypress(function (e) {
            switch (e.which) {
              case 49:
                showScenario(1);
                break;
              case 50:
                showScenario(2);
                break;
              case 51:
                showScenario(3);
                break;
              default:
            }
            // console.log( e.which );
          });

          function showScenario(myScenario) {

            switch (myScenario) {
              case 1:
                $("#claim-activity").hide();
                $("#show-toggle-mask").show();
                break;
              case 2:
                $("#claim-activity").show();
                $("#line-4").show();
                $("#line-5").show();
                $("#line-6").show();
                $("#line-7").show();
                $("#show-toggle-mask").show();
                break;
              case 3:
                $("#line-4").hide();
                $("#line-5").hide();
                $("#line-6").hide();
                $("#line-7").hide();
                $("#line-8").hide();
                $("#line-9").hide();
                $("#line-10").hide();
                $("#claim-activity").show();
                $("#show-toggle-mask").hide();
                break;
              default:
                break
            }
          }

          function showToggle() {
            console.log($("#show-more-button").html())
            if ($("#show-more-button").html() == "Show more") {
              $("#show-more-button").html('Show less');
              $("#line-8").show();
              $("#line-9").show();
              $("#line-10").show();
              $("#show-toggle-mask").addClass("inactive");
            } else {
              $("#show-more-button").html('Show more');
              $("#line-8").hide();
              $("#line-9").hide();
              $("#line-10").hide();
              $("#show-toggle-mask").removeClass("inactive");
            }
          }



          $(".toggle-arrow").click(function () {
            $(".simple-accordion").toggleClass('simple-accordion--open simple-accordion--closed');
          });

          function goToByScroll(id) {
            id = id.replace("-link", "");
            $('html,body').animate({
              scrollTop: $("#" + id).offset().top
            },
              'slow');
          }
          $("#claim-activity-link").click(function (e) {
            e.preventDefault();
            goToByScroll($(this).attr("id"));
          });


          $("#entitlements").change(function () {
            if ($('#entitlements :selected').val() == "veterancard") {
              $("#entitlement-vc").removeClass('action-group__reveal--closed');
              $("#entitlement-vc").addClass('action-group__reveal--open');
            } else {
              $("#entitlement-vc").removeClass('action-group__reveal--open');
              $("#entitlement-vc").addClass('action-group__reveal--closed');
            }
            if ($('#entitlements :selected').val() == "mentalhealth") {
              $("#entitlement-mh").removeClass('action-group__reveal--closed');
              $("#entitlement-mh").addClass('action-group__reveal--open');
            } else {
              $("#entitlement-mh").removeClass('action-group__reveal--open');
              $("#entitlement-mh").addClass('action-group__reveal--closed');
            }
            if ($('#entitlements :selected').val() == "education") {
              $("#entitlement-student").removeClass('action-group__reveal--closed');
              $("#entitlement-student").addClass('action-group__reveal--open');
            } else {
