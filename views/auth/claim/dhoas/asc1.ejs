<%- include(templates+"header", {
  title: "Defence Home Ownership Assistance Scheme", 
  heading: "Application for Subsidy Certificate"
}) %>

  <%- include(forms+"radio", {
    label: "What is the purpose of this loan?",
    boxes: [
      "Purchasing a new home",
      "Purchasing land and/or constructing a home",
      "Enlarging, repairing, renovating, or creating a permanent improvement to a home",
      {
        text: "Refinancing an existing home loan that was used for one or more of the above purposes",
        inject: "#why-refinance-container"
      }
    ]
  }) %>

  <%- include(forms+"textarea", {
    label: "Please detail why you are refinancing your existing home loan, including any non DHOAS purposes",
    modifiers: ["hidden"],
    id: "why-refinance"
  }) %>


    <%- include(forms+"radio", {
      label: "Where do you currently live?",
      boxes: [
        "Service residence",
        "Rental accommodation property",
        "On base accommodation",
        "Own home",
        {
          text: "Other",
          inject: "#please-specify-container"
        }
      ]
    }) %>

  <%- include(forms+"text", {
    label: "Please specify",
    modifiers: ["hidden"],
    id: "please-specify"
  }) %>

  <%- include(forms+"yes_no", {
    label: "Have you ever had a Defence subsidised loan?",
    yes_toggle: "#defence-subsidised-loan-container"
  }) %>

  <%- include(forms+"checkbox", {
    label: "Select all that apply",
    id: "defence-subsidised-loan",
    modifiers: ["hidden"],
    boxes: [
      "Defence Service Home Loan Scheme (DSH)",
      "Defence Home Owner Scheme (DHOS)",
      {
        text: "Defence Home Ownership Assistance Scheme (DHOAS)",
        inject: "#dhoas-loan-container"
      }
    ]
  }) %>

  <%- include(forms+"text", {
    label: "Why are you lodging an additional application for DHOAS?",
    modifiers: ["hidden"],
    id: "dhoas-loan"
  }) %>

  <%- include(forms+"pagination", {
    pagination: [
      {
        text: "Cancel application",
        link: "#open-modal"
      },
      {
        text: "Save and exit",
        link: "/auth/claim",
        modifiers: ["floated"]
      },
      {
        text: "Save and next",
        link: "/auth/claim/dhoas/asc2",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

<%- include(templates+"footer") %>