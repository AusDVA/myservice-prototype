<%- include(templates+"header", {
  title: "Subsidy authorisation request | Property details", 
  heading: "Property details"
}) %>

  <%- include(forms+"prepop/address", {
    label: "Address of mortgaged and subsidised property",
    modifiers: ["australiaOnly"]
  }) %>

  <%- include(forms+"yes_no", {
    label: "Is your postal address different to the subsidised property address?",
    yes_toggle: "#why-different-container"
  }) %>

  <%- include(forms+"textarea", {
    label: "Please provide a reason",
    id: "why-different",
    modifiers: ["hidden"]
  }) %>

  <%- include(forms+"yes_no", {
    label: "Would you like us to update your postal address to your subsidised property address from the date of occupancy?",
    hint: "This will only update your postal address for DHOAS correspondence.",
    modifiers: ["hintNewLine"]
  }) %>

  <%- include(forms+"pagination", {
    pagination: [
      {
        text: "Cancel application",
        link: "#open-modal"
      },
      {
        text: "Save and exit",
        link: "/auth/claim",
        modifiers: ["floated"]
      },
      {
        text: "Save and next",
        link: "/auth/claim/dhoas/sar2",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

<%- include(templates+"footer") %>
