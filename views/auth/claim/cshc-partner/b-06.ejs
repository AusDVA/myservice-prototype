<%

var progress = JSON.parse(include("b-progressbar")) 
progress.activeItem = 6;

%>

<%- include(templates+"header", {
  claim: "Commonwealth Seniors Health Card Partner",
  heading: "Payment details",
  progress
}) %>
  
  <h2 class="margin-above--large margin-below">Provide payment details</h2>
  
  <%- include(forms+"notice", {
    message: "This will be your nominated bank account for all DVA payments."
  }) %>

  <%- include(forms+"prepop/bank-details", {
    label: ""
  }) %>

  <%- include(forms+"yes_no", {
    label: "Do you have a tax file number (TFN)?",
    yes_toggle: "#tfn-container"
  }) %>

  <%- include(forms+"text", {
    id: "tfn",
    modifiers: ["hidden", "inputShort"],
    label: "Tax file number (TFN)"
  }) %>

  <%- include(forms+"pagination", {
    pagination: [
      {
        link: "/auth/claim/cshc-partner/b-05",
        text: "Previous"
      },
      {
        link: "#claim-cancel-modal",
        text: "Cancel claim"
      },
      {
        link: "/auth/claim",
        text: "Save and exit",
        modifiers: ["floated"]
      },
      {
        link: "/auth/claim/cshc-partner/prog-03",
        text: "Save and next",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

  <%- include(forms+"modals/claim-cancel") %>

  <%- include("b-scripts") %>

<%- include(templates+"footer") %>