<div id="state--unknown-noqs" hidden>
  <%- include(forms+"notice", {
    message: `<p>You and/or your partner can make a claim for <a href="#">Qualifying Service (QS)</a>. Having your QS determind, will allow you to apply for a range of benefits suc has CSHC and Service Pension.</p>

      <p>For more information, go to the <a rel="external" href="https://www.dva.gov.au/factsheet-is58-qualifying-service-post-second-world-war-conflicts">Factsheet IS58 - Qualifying Service</a></p>`
  }) %>

  <%- include(forms+"radio", {
    label: "What is your relationship status with the veteran?",
    id: "unkown-noqs--veteran-relationship",
    boxes: [
      "Married",
      "De facto",
      {
        text: "Separated",
        hint: "(while still legally married)"
      },
      "Divorced",
      "Widowed"
    ]
  }) %>

  <%- include("a-02--partial-divorce-block") %>

  <div class="veteran-details has-previous-names" hidden>
    <%- include(forms+"date", {
      customClass: "de-facto--living-together",
      modifiers: ["hidden"],
      label: "Date commenced living together"
    }) %>

    <%- include(forms+"date", {
      customClass: "married--married-date",
      modifiers: ["hidden"],
      label: "Date of marriage"
    }) %>

    <%- include(forms+"date", {
      customClass: "separation--date-separated",
      modifiers: ["hidden"],
      label: "Date of separation"
    }) %>

    <h3>Veteran details</h3>    

    <%- include("a-02--partial-partner-questions") %>

    <%- include(forms+"text", {
      label: "File number",
      hint: "(optional)"
    }) %>

    <%- include(forms+"text", {
      label: "Service number",
      hint: "(optional)"
    }) %>


    <%- include(forms+"text", {
      label: "PMKeyS number",
      hint: "(optional)"
    }) %>
  </div>

  <form class="current-relationship has-previous-names" hidden>
    <h2>Your current relationship</h2>
    
    <%- include(forms+"yes_no", {
      label: "Are you currently in a new relationship?",
      id: "unkown-noqs--new-relationship-q"
    }) %>

    <div class="current-relationship-type" hidden>
      <%- include(forms+"radio", {
        label: "What is your new relationship status?",
        id: "unkown-noqs--new-relationship-status",
        boxes: [
          "Married",
          "De facto"
        ]
      }) %>

      <div class="current-relationship-details" hidden>
        <%- include(forms+"date", {
          customClass: "de-facto--living-together",
          modifiers: ["hidden"],
          label: "Date commenced living together"
        }) %>

        <%- include(forms+"date", {
          customClass: "married--married-date",
          modifiers: ["hidden"],
          label: "Date of marriage"
        }) %>

        <%- include("a-02--partial-non-veteran-details") %>

        <div class="has-partner-centrelink">
          <%- include(forms+"yes_no", {
            label: "Has this person applied for or do they receive any benefits from Centrelink?",
            customClass: "partner-centrelink-paymments"
          }) %>

          <%- include(forms+"yes_no", {
            label: "Has this person applied for or do they currently hold a Commonwealth Seniors Health Card (CSHC) from Centrelink?",
            customClass: "partner-centrelink-has-cshc"
          }) %>

          <%- include(forms+"text", {
            label: "What is your partner's Centrelink Customer Reference Number (CRN)?",
            modifiers: ["hidden"],
            customClass: "partner-centrelink-cshc"
          }) %>
        </div>
      </div>
    </div>

    <%- include("a-02--partial-divorce-block") %>
  </form>


  <script>
    $("#unkown-noqs--veteran-relationship-container").on("change", "input", function() {
      $("#state--unkown-noqs .divorce-blocker").hide();
      $("#state--unkown-noqs .separation--date-separated").hide();
      $("#state--unkown-noqs .de-facto--living-together").hide();
      $("#state--unkown-noqs .married--married-date").hide();
      $("#state--unkown-noqs .veteran-details").hide();
      $("#state--unkown-noqs .current-relationship").hide();
      $("#state--unkown-noqs .divorce-blocker").last().hide();
      $("#state--unkown-noqs .current-relationship-type").hide();
      $("#state--unkown-noqs .current-relationship").trigger("reset");
      $("#state--unkown-noqs .date-of-death").hide();

      switch ($("#unkown-noqs--veteran-relationship-container :checked").val()) {
        case "divorced":
          $("#state--unkown-noqs .divorce-blocker").first().show();
          break;
        case "married":
          $("#state--unkown-noqs .veteran-details .married--married-date").show();
          $("#state--unkown-noqs .veteran-details").show();
          break;
        case "defacto":
          $("#state--unkown-noqs .veteran-details").show();
          $("#state--unkown-noqs .veteran-details .de-facto--living-together").show();
          break;
        case "widowed":
          $("#state--unkown-noqs .veteran-details").show();
          $("#state--unkown-noqs .date-of-death").show();
          break;
        case "separated":
          $("#state--unkown-noqs .veteran-details").show();
          $("#state--unkown-noqs .current-relationship").show();
          $("#state--unkown-noqs .separation--date-separated").show();
          break;
      }
    })

    $("#unkown-noqs--new-relationship-q-container").on("change", "input", function() {
      $("#state--unkown-noqs .divorce-blocker").last().hide();
      $("#state--unkown-noqs .current-relationship-type").hide();
      
      if ($("#unkown-noqs--new-relationship-q-container :checked").val() === "yes") {
        if ($("#unkown-noqs--veteran-relationship-container :checked").val() === "separated") {
          $("#state--unkown-noqs .divorce-blocker").last().show();
        } else {
          $("#state--unkown-noqs .current-relationship-type").show();
        }
      }
    })

    $("#unkown-noqs--new-relationship-status-container").on("change", "input", function() {
      $("#state--unkown-noqs .de-facto--living-together").show();
      $("#state--unkown-noqs .de-facto--living-together").show();

      switch ($("#unkown-noqs--new-relationship-status-container :checked").val()) {
        case "married":
          $("#state--unkown-noqs .current-relationship-details .married--married-date").show();
          break;
        case "defacto":
          $("#state--unkown-noqs .current-relationship-details .de-facto--living-together").show();
      }

      $("#state--unkown-noqs .current-relationship-details").show();
    })
  </script>
</div>