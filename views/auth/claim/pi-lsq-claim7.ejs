<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Lifestyle Questionnaire submitted | MyService</title>
  <%- include(partials+"head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"header-topbar") %>
  <%- include(partials+"header-claims") %>
  <%- include(partials+"header-nom-rep") %>
  <main>
    <div class="container" id="main-content">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <div class="claim-end">

            <div class="pt-claim-type--normal">
              <div class="margin-above ie-success-animation">
                <img src="../../../docs/images/ico-submitted.svg" alt="Success tick icon">
              </div>
              <div class="margin-above submitted-animation">
                <%- include(partials+"animations/submitted") %>

              </div>
              <div class="cantered-item transition-content transition-content--open pt-claim-animation-start">
                <h1>We're submitting your Lifestyle Assessment</h1>
              </div>
            </div>

            <div class="transition-content pt-claim-animation-end margin-below--extra">
              <div class="pt-claim-type--normal">
                <h1 class="cantered-item">Your Lifestyle Assessment has been
                  <span class="font-weight-heavy"> submitted</span>
                </h1>
              </div>

              <hr class="orange-divider">

              <div class="margin-below--extra">
                <h3 class="ss-align--center">We will use your Lifestyle Assessment to determine your lifestyle rating and a delegate will be in contact with you&nbsp;shortly.
                </h3>
              </div>


              <div class="pagination">
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile'">Update profile</button>
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim?user=LSQuser-submitted'">Back to home</button>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include(partials+"footer") %>


  <script>
    var timeDelay = 3000;
    setTimeout(
      function () {
        $(".pt-claim-animation-start").toggleClass("transition-content--open");
        $(".pt-claim-animation-end").toggleClass("transition-content--open");
      }, timeDelay);

  </script>

</body>

</html>
