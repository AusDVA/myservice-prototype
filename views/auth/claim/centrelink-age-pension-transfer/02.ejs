        modifiers: ["floated"]
      },
      {
        text: "Save and next",
        link: "/auth/claim/centrelink-age-pension-transfer/03",
        id: "save-next-button",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

<script>

function stateSwitcher() {
      resetPage()
      switch (state) {
        case "Veteran":
          $("#partner-details").show();
          break;
        case "Partner":
        $("#veteran-details").show();
          break;
        default:
          break;
      }
    }

  $("input:radio").prop("checked", false);

  $('input[name=vet-receiving]').change(function () {
	var myVal = $('input[name=vet-receiving]:checked').val();
    $("#vet-details-2").hide();
    $("#save-next").hide();
    doUnBlock();
	if (myVal == "yes") {
		$("#vet-details-2").show();
	} else {
		$("#block-prompt-container").show();
    doBlock();
  }
});

  $('input[name=relationship-status]').change(function () {
    $("#save-next").hide();
    $("#partner-details").hide();
    $("#veteran-details").hide();
    $("#divorce-date-container").hide();
    doUnBlock();
    switch ( $(this).val() ) {
      case "single":
        if ( state == "veteran") {
          $("#save-next").show();
        } else {
          $("#save-next").hide();
          doBlock();
        }
        break;
      case "married":
        if ( state == "veteran") {
          $("#partner-details").show();
        } else {
          $("#veteran-details").show();
        }
        break;
      case "defacto":
        if ( state == "veteran") {
          $("#partner-details").show();
        } else {
          $("#veteran-details").show();
        }
        break;
      case "separatedwhilestilllegallymarried":
      if ( state == "veteran") {
          $("#save-next").show();
        } else {
          $("#save-next").hide();
          doBlock();
        }
        break;
      case "divorced":
      if ( state == "veteran") {
          $("#divorce-date-container").show();
        } else {
          $("#save-next").hide();
          doBlock();
        }
        break;
      case "widowed":
      if ( state == "veteran") {
          $("#save-next").show();
        } else {
          $("#save-next").hide();
          doBlock();
        }
        break;
      default:
    }
  });

  function resetPage(){
    $("#save-next").hide();
    $("#partner-details").hide();
    $("#veteran-details").hide();
    $('input[name="relationship-status"]').prop('checked',false);
    doUnBlock();
  }

function doBlock(){
    $("#save-next-button").attr("disabled", "disabled");
    $("#save-exit-button").attr("disabled", "disabled");
    $("#block-prompt-container").show();
  }
  function doUnBlock(){
    $("#save-next-button").removeAttr("disabled");
    $("#save-exit-button").removeAttr("disabled");
    $("#block-prompt-container").hide();
  }

</script>
