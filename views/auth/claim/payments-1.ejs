<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Manage your Claims | MyService</title>
  <% include ../../../partials/head.ejs %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../partials/header-topbar.ejs %>
  <% include ../../../partials/header-authenticated.ejs %>
  <% include ../../../partials/header-nom-rep.ejs %>
  <main>
    <section>


      <div class="section-feature">
        <div id="main-content" class="container">
          <h1 class="margin-below--small ss-align--center margin-above--small">
            <span class="heading">Payment activity</span>
          </h1>
        </div>
      </div>

      <div class="section-feature--separator">
        <div class="container">
        </div>
      </div>


      <div class="container margin-above margin-below--extra" id="claim-activity">
        <% if (locals.liveFeature.includes('featureLsa')) { %>

        <div class="form-group">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim/lump-sum-advance-request'">Request lump sum advance</button>
        </div>

        <% } %>
        <section class="widget margin-above">
          <div class="row widget-content widget--justclaims">
            <div class="col-md-12">
              <table class="table-claims table-responsive">
                <thead>
                  <tr>
                    <th class="widget-activity">Payment activity</th>
                    <th class="widget-actions">Actions</th>
                  </tr>
                </thead>
                <tr>
                  <td>
                    <p class="status-icon status-submitted">
                      <legend class="legend-label" for="radio-buttons">$380.80 - Service pension</legend>
                      <legend class="legend-label" for="radio-buttons">Processed<span class="hint"> - 13 May 2018</span></legend>

                    </p>
                  </td>
                  <td class="widget-actions">
                    <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = '/auth/claim/afi-claimdetail'">View</button>
                    <!-- <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = '#open-deleteclaimmodal'">Withdraw</button> -->
                  </td>
                </tr>

                <tr>
                  <td>
                    <p class="status-icon status-submitted">
                      <legend class="legend-label" for="radio-buttons">$760.32 - Lump sum payment</legend>
                      <legend class="legend-label" for="radio-buttons">Processed<span class="hint"> - 25 April 2018</span></legend>
                    </p>
                  </td>
                  <td class="widget-actions">
                    <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = 'viewDhoasDetail'">View</button>
                  </td>
                </tr>
                <tr>
                  <td>
                    <p class="status-icon status-approved">
                      <legend class="legend-label" for="radio-buttons">$500 - Lump sum advance request</legend>
                      <legend class="legend-label" for="radio-buttons">Approved <span class="hint"> - 10 January 2018</span></legend>
                    </p>
                  </td>
                  <td class="widget-actions">
                    <!-- so i have the href location later <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = 'viewNLHCClaimDetail'">View</button> -->
                    <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = '/auth/claim/lump-sum-advance-view'">View</button>
                  </td>
                </tr>

                <tr>
                  <td>
                    <p class="status-icon status-submitted">
                      <legend class="legend-label" for="radio-buttons">$340.32 - Service pension</legend>
                      <legend class="legend-label" for="radio-buttons">Processed<span class="hint"> - 25 April 2018</span></legend>
                    </p>
                  </td>
                  <td class="widget-actions">
                    <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = 'viewDhoasDetail'">View</button>
                  </td>
                </tr>
              </table>


            </div>
          </div>
        </section>


        <% include ../../../partials/claims-dhoas-start-modal.ejs %>

      </div>

    </section>
  </main>
  <% include ../../../partials/footer.ejs %>

  <script>


  </script>

</body>


</html>
