<%#- include(templates+"header", {
  claim: "Legacy"
})  %>
<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Lifestyle Questionnaire, Employment | MyService</title>
<%- include(partials+"components/layout/head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-claims") %>
  <%- include(partials+"components/layout/header-nom-rep") %>

  <main id="main-content">
    <div class="section-feature border-bottom--mild">
      <div class="container">
        <div class="row">

          <!-- Progress bar -->
          <div class="topnav" id="myTopnav">
            <a href="javascript:void(0);" class="icon first" onclick="myFunction()">Menu <i class="fa fa-bars"></i></a>
            <a href="/auth/claim/pi-lsq-start">Start</a>
            <a href="/auth/claim/pi-lsq-claim1c">Mobility</a>
            <a href="/auth/claim/pi-lsq-claim2c">Recreational activities</a>
            <a href="/auth/claim/pi-lsq-claim3c">Personal relationships</a>
            <a href="/auth/claim/pi-lsq-claim4c">Domestic activities</a>
            <a href="/auth/claim/pi-lsq-claim5c" class="active">Employment</a>
            <a href="/auth/claim/pi-lsq-claim6c" class="last">Review and Submit</a>
          </div>
          <div class="col-xs-12">
            <nav>
              <ul class="progress-container">
                <li class="progress-step progress-step--done">
                  <a href="/auth/claim/pi-lsq-start">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Start</p>
                  </a>
                </li>
                <li class="progress-step progress-step--done">
                  <a href="/auth/claim/pi-lsq-claim1c">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Mobility</p>
                  </a>
                </li>
                <li class="progress-step progress-step--done">
                  <a href="/auth/claim/pi-lsq-claim2c">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Recreational activities</p>
                  </a>
                </li>
                <li class="progress-step progress-step--done">
                  <a href="/auth/claim/pi-lsq-claim3c">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Personal relationships</p>
                  </a>
                </li>
                <li class="progress-step progress-step--done">
                  <a href="/auth/claim/pi-lsq-claim4c">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Domestic activities</p>
                  </a>
                </li>
                <li class="progress-step progress-step--active">
                  <span class="progress-step__icon"></span>
                  <p class="progress-step-label">Employment</p>
                </li>
                <li class="progress-step">
                  <a href="/auth/claim/pi-lsq-claim6c">
                    <span class="progress-step__icon"></span>
                    <p class="progress-step-label">Review and submit</p>
                  </a>
                </li>
                <li class="progress-step progress-step--last">
                  <span class="progress-step__icon"></span>
                  <p class="progress-step-label">Done</p>
                </li>
              </ul>
            </nav>
          </div>
          <!-- Heading -->
          <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8">

            <h1 class="margin-below--none ss-align--center margin-above--none">
              <span class="heading">Employment</span>
            </h1>
            <p class="margin-above--mid ss-align--center text-fullwidth">This section is about the psychological and physical impact your conditions have on your ability to work.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="container margin-above--extra">
        <div class="row">
          <div class="col-sm-12">

            <div class="container">
              <div class="row">
                <div class="form-group">
                  <fieldset>
                    <h3 for="employed">Are you employed?</h3>
                    <div class="radio-toggle">
                      <label class="on label-left">
                        <input id="employed-yes" type="radio" name="employed" value="yes">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right">
                        <input id="employed-no" type="radio" name="employed" value="no">
                        <span>No</span>
                      </label>
                    </div>
                  </fieldset>
                </div>
              </div>

              <div class="row margin-below--large">
                <div class="form-group" id="reason-unemployed" style="display:none;">
                  <fieldset>
                    <h3>Did you stop working because of your condition?</h3>
                    <div class="radio-toggle">
                      <label class="on label-left">
                        <input id="reason-unemployed-yes" type="radio" name="reason-unemployed" value="yes">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right">
                        <input id="reason-unemployed-no" type="radio" name="reason-unemployed" value="no">
                        <span>No</span>
                      </label>
                    </div>
                  </fieldset>
                </div>
              </div>
              <div id="save-and-next" style="display:none;">
                <p>Choose
                  <b>save and next</b> to continue your Lifestyle Questionnaire.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container" id="employment-rating" style="display:none;">
        <div class="row">
          <div class="col-sm-12">
            <h3>Complete the statement below based on your worst day</h3>
          </div>
          <div class="col-sm-12 margin-below--extra action-group">
            <div class="natural-language-statement">
              <label for="mobility" class="mys-label-nl">The effect my conditions have on my ability to work is &nbsp;</label>
              <span class="mys-dropdown mys-dropdown-nl">
                <select class="uikit-text-input mys-dropdown__select" id="mobility" name="mobility">
                  <option value="">Choose an option</option>
                  <option value="minimal">minimal</option>
                  <option value="low">low</option>
                  <option value="mild">mild</option>
                  <option value="moderate">moderate</option>
                  <option value="high">high</option>
                  <option value="veryhigh">very high</option>
                  <option value="extreme">extreme</option>
                </select>
              </span>

              <div class="action-group__reveal--closed" id="mobility-minimal">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>minimal</b> effect is a minor impact on your ability to work.
                    <br>
                    <i>For example, you have minimal disruptions to your usual employment activities.</i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-low">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>low</b> effect is a slight impact on your ability to work.
                    <br>
                    <i>For example, you are able to work but are occasionally affected by your conditions. You need to take occasional breaks or experience infrequent discomfort
                      while working.
                    </i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-mild">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>mild</b> effect is a small reduction in your ability to work.
                    <br>
                    <i>Your duties or workload may have changed. You may require modifications to your workplace to complete your tasks.
                    </i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-moderate">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>moderate</b> effect is a considerable reduction in your ability to work.
                    <br>
                    <i>For example, you are unable to work full time in your occupation or have had to change occupations.</i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-high">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>high</b> effect means that you are currently unable to work but may return to work in the near future.
                    <br>
                    <i>For example, a number of months.</i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-veryhigh">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>A
                    <b>very high</b> effect means you are currently unable to work and will not be able to return to work for an extended period.
                    <i>For example, a number of years.</i>
                  </p>
                </div>
              </div>

              <div class="action-group__reveal--closed" id="mobility-extreme">
                <div class="uikit-page-alerts uikit-page-alerts--info">
                  <p>An
                    <b>extreme</b> effect means your conditions are preventing you from returning to work indefinitely.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <fieldset>
              <div class="form-group">
                <h3 class="uikit-text-input__label" for="textArea">Tell us in your own words how your ability to work has been affected
                  <span class="hint display-block">The more detail you provide the more accurate our Lifestyle Rating will be.</span>
                </h3>
                <textarea id="textArea" name="statementText" rows="6"></textarea>
              </div>
            </fieldset>
          </div>
        </div>
      </div>

      <div class="pagination">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim/pi-lsq-claim4c'">Previous</button>
        <div class="floated">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim?user=LSQuser'">Save and exit</button>&nbsp;
          <button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/auth/claim/pi-lsq-claim6c'">Review and submit</button>
        </div>
      </div>
      <%- include(partials+"content/modals/claims-cancel-modal") %>
    </div>

  </main>

  <%- include(partials+"components/layout/footer") %>


  <script>
    // Progress percentage
    document.getElementById("percentage").style.width = "80%";
    document.getElementById("percentage_value").textContent = "80%";

    $("#employed-yes").click(function () {
      $("#reason-unemployed").hide();
      $("#save-and-next").hide();
      $("#employment-rating").show();
      $("#employment-toggles").show();
    });
    $("#employed-no").click(function () {
      $("#employment-rating").hide();
      $("#employment-toggles").hide();
      $("#save-and-next").hide();
      $("#reason-unemployed").show();
    });

    $("#reason-unemployed-yes").click(function () {
      $("#save-and-next").hide();
      $("#employment-rating").show();
      $("#employment-toggles").hide();
    });
    $("#reason-unemployed-no").click(function () {
      $("#employment-rating").hide();
      $("#save-and-next").show();
    });


    // Dynamic content for mobility rating drop-down
    $("#mobility").change(function () {
      // minimal
      if ($('#mobility :selected').val() == "minimal") {
        $("#mobility-minimal").removeClass('action-group__reveal--closed');
        $("#mobility-minimal").addClass('action-group__reveal--open');
      } else {
        $("#mobility-minimal").removeClass('action-group__reveal--open');
        $("#mobility-minimal").addClass('action-group__reveal--closed');
      }
      // low
      if ($('#mobility :selected').val() == "low") {
        $("#mobility-low").removeClass('action-group__reveal--closed');
        $("#mobility-low").addClass('action-group__reveal--open');
      } else {
        $("#mobility-low").removeClass('action-group__reveal--open');
        $("#mobility-low").addClass('action-group__reveal--closed');
      }
      // mild
      if ($('#mobility :selected').val() == "mild") {
        $("#mobility-mild").removeClass('action-group__reveal--closed');
        $("#mobility-mild").addClass('action-group__reveal--open');
      } else {
        $("#mobility-mild").removeClass('action-group__reveal--open');
        $("#mobility-mild").addClass('action-group__reveal--closed');
      }
      // moderate
      if ($('#mobility :selected').val() == "moderate") {
        $("#mobility-moderate").removeClass('action-group__reveal--closed');
        $("#mobility-moderate").addClass('action-group__reveal--open');
      } else {
        $("#mobility-moderate").removeClass('action-group__reveal--open');
        $("#mobility-moderate").addClass('action-group__reveal--closed');
      }
      // high
      if ($('#mobility :selected').val() == "high") {
        $("#mobility-high").removeClass('action-group__reveal--closed');
        $("#mobility-high").addClass('action-group__reveal--open');
      } else {
        $("#mobility-high").removeClass('action-group__reveal--open');
        $("#mobility-high").addClass('action-group__reveal--closed');
      }
      // very high
      if ($('#mobility :selected').val() == "veryhigh") {
        $("#mobility-veryhigh").removeClass('action-group__reveal--closed');
        $("#mobility-veryhigh").addClass('action-group__reveal--open');
      } else {
        $("#mobility-veryhigh").removeClass('action-group__reveal--open');
        $("#mobility-veryhigh").addClass('action-group__reveal--closed');
      }
      // extreme
      if ($('#mobility :selected').val() == "extreme") {
        $("#mobility-extreme").removeClass('action-group__reveal--closed');
        $("#mobility-extreme").addClass('action-group__reveal--open');
      } else {
        $("#mobility-extreme").removeClass('action-group__reveal--open');
        $("#mobility-extreme").addClass('action-group__reveal--closed');
      }
    });
  </script>

  <!--responsive progress bar-->

  <script>
    function myFunction() {
      var x = document.getElementById("myTopnav");
      if (x.className === "topnav") {
        x.className += " responsive";
      } else {
        x.className = "topnav";
      }
    }
  </script>

</body>

</html>