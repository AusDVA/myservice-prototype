<%- include(templates+"header", {
    claim: "Support Assessment",
    heading: "Domestic activities",
    progress: {
      activeItem: 4,
        points: [
        {
          text: "Mobility",
          link: "/auth/claim/support-assessment-b/sa-02"
        },
        {
            text: "Recreational activities",
            link: "/auth/claim/support-assessment-b/sa-03"
          },
          {
            text: "Personal relationships",
            link: "/auth/claim/support-assessment-b/sa-04"
          },
          {
            text: "Domestic activities",
            link: "/auth/claim/support-assessment-b/sa-05"
          },
          {
            text: "Employment",
            link: "/auth/claim/support-assessment-b/sa-06"
          },
          {
            text: "Treatments",
            link: "/auth/claim/support-assessment-b/sa-07"
          },
        ]
      }
  }) %>

<%- include(forms+"button_radio", {
    label: "Does it take longer for you to complete your domestic activities?",
    hint: "Such as cleaning, cooking or gardening.",
    id: "domestic-longer",
    boxes: [
    "Yes",
    "No"
  ],
    modifiers: ["hintNewLine"]
  }) %>

<%- include(forms+"textarea", {
  label: "Tell us more",
  id: "domestic-longer-more",
  modifiers: ["hidden"]
}) %>

<%- include(forms+"button_radio", {
    label: "Do you need help with domestic activities?",
    hint: "Such as assistance from a carer or home maintenance services.",
    id: "domestic-help",
    boxes: [
    "Yes",
    "No"
  ],
    modifiers: ["hintNewLine"]
  }) %>

<%- include(forms+"textarea", {
  label: "Tell us more",
  id: "domestic-help-more",
  modifiers: ["hidden"]
}) %>

<%- include(forms+"button_radio", {
    label: "Have you had to stop performing any domestic activities?",
    id: "domestic-stop",
    boxes: [
    "Yes",
    "No"
  ]
  }) %>

<%- include(forms+"textarea", {
  label: "Tell us more",
  id: "domestic-family-more",
  hint: "Mention things that are difficult or not safe for you to do.",
  modifiers: ["hidden", "hintNewLine"]
}) %>

<%- include(forms+"button_radio", {
    label: "Have your immediate family taken over any domestic activities you normally undertook?",
    id: "domestic-family",
    boxes: [
    "Yes",
    "No"
  ]
  }) %>

<%- include(forms+"textarea", {
  label: "Tell us more",
  id: "domestic-stop-more",
  hint: "Reflect back on your difficult days or remind you of the times they've helped.",
  modifiers: ["hidden", "hintNewLine"]
}) %>

<%- include(forms+"pagination", {
    pagination: [
      {
        link: "/auth/claim/support-assessment-b/sa-04",
        text: "Previous"
      },
      {
        link: "#claim-cancel-modal",
        text: "Cancel claim"
      },
      {
        link: "/auth/claim",
        text: "Save and exit",
        modifiers: ["floated"]
      },
      {
        link: "/auth/claim/support-assessment-b/sa-06",
        text: "Save and next",
        id: "btnNext",
        modifiers: ["floated", "primary"]
      }
    ]
  }) %>

<script>
  $(".form-group input").click(function () {
    $(this).val() === "yes" ? $(this).parent().parent().parent().parent().next().find("textarea").parent().show() :
      $(this).parent().parent().parent().parent().next().find("textarea").parent().hide();
  });
</script>

<%- include(forms+"modals/claim-cancel") %>
<%- include(templates+"footer") %>