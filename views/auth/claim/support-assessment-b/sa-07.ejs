          },
        ]
      }
  }) %>

<%- include(forms+"button_radio", {
    label: "Have you undertaken any treatment for your conditions?",
    id: "undertake-treatment",
    boxes: [
        "Yes",
        "No"
    ]
  }) %>

<%- include(forms+"textarea", {
    label: "Tell us more",
    id: "undertake-treatment-more",
    modifiers: ["hidden"]
  }) %>


<%- include(forms+"button_radio", {
    label: "Are you still undergoing treatment?",
    id: "still-treatment",
    boxes: [
        "Yes",
        "No"
    ],
    modifiers: ["hidden"]
  }) %>

<%- include(forms+"textarea", {
  label: "Tell us more",
  id: "still-treatment-more",
  modifiers: ["hidden"]
}) %>

<%- include(forms+"button_radio", {
    label: "Have you been advised that further treatment will not improve your conditions?",
    id: "been-advised",
    boxes: [
        "Yes",
        "No"
    ],
    modifiers: ["hidden"]
  }) %>

<script>

  $(document).ready(function () {
    $("#undertake-treatment-1").click(function () {
      $("#been-advised-container").hide();
      $("#still-treatment-container").show();
      $("#undertake-treatment-more-container").show();
    })

    $("#undertake-treatment-2").click(function () {
      $("#still-treatment-container").hide();
      $("#undertake-treatment-more-container").hide();
      $("#still-treatment-more-container").hide();
      $("#been-advised-container").show();
    })

    $("#been-advised-2").click(function () {
      $("#undertake-treatment-2").show();
    })

    $("#still-treatment-1").click(() => {
      $("#still-treatment-more-container").show();
    })

    $("#still-treatment-2").click(() => {
      $("#still-treatment-more-container").hide();
    })


  });

  function hideAll() {

  }
</script>

