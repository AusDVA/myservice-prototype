<%- include(templates+"header", {
  claim: "Support for employment",
  heading: "Claim details"
}) %>

  <%- include(forms+"checkbox", {
    label: "Tell us about your situation",
    hint: "Select all that apply:",
    modifiers: ["hintNewLine"],
    boxes: [
      {
        text: "Underemployment",
        hint: "(Someone highly skilled who is working in a low-skilled, low-wage or less than full-time job.)"
      },
      "Unemployed",
      "Need assistance to change careers",
      "Need help adjusting to civilian workplace"
    ]
  }) %>

  <%- include(forms+"yes_no", {
    label: "Have you received a similar service as part of your Defence Transition?"
  }) %>

  <%- include(forms+"radio", {
    label: "Your preferred contact method with employment service providers?",
    boxes: [
      "Email",
      "Phone"
    ]
  }) %>

  <%- include(forms+"pagination", {
    pagination: [
      {
        text: "Previous",
        link: "/auth/claim/support-for-employment/sfe-01"
      },
      {
        text: "Cancel claim",
        link: "#claim-cancel-modal"
      },
      {
        text: "Save and exit",
        link: "/auth/claim",
        modifiers: ["floated"]
      },
      {
        text: "Save and next",
        link: "#",
        id: "btnNext",
        modifiers: ["primary", "floated"]
      }
    ]
  }) %>

  <%- include(forms+"modals/claim-cancel") %>

  <%- include("sfe-state-switcher") %>

  <script>
    $("#btnNext").on("click", function() {
      if (localStorage.getItem("sfe-service-provided") === "true") {
        $(this).attr("href", "/auth/claim/support-for-employment/sfe-03");
      } else {
        $(this).attr("href", "/auth/claim/support-for-employment/sfe-02a");
      }
    })
  </script>

<%- include(templates+"footer") %>