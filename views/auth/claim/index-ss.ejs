<div id="state-switcher">
  <h3>State switcher</h3>

  <%- include(partials+"components/form-partials/radio", {
          label: "User",
          boxes: [
            "Claims",
            "No claims"
          ],
          id: "user"
        }); %>

</div>

<script>

  $(document).ready(function () {
    /* --- State switcher --- */
    /* Toggle switcher */
    $(document).keypress(function (e) {
      switch (e.which) {
        case 96: //tilda
          $('#state-switcher').toggle();
          break;
        default:
      }
    });

    $("#user-1").prop("checked", true);
    $('#user-container').change(function () {
      var mySelection = $('input[name=user]:checked').parent().find("span").text().trim().toLowerCase();
      stateSwitcher(mySelection)
    });

  });
</script>
