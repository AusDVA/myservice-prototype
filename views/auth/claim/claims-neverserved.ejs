<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Claims | MyService</title>
<%- include(partials+"components/layout/head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-authenticated") %>
  <%- include(partials+"components/layout/header-nom-rep") %>
  <main>
    <section>
      <div id="main-content" class="section-feature section-feature--bg margin-above--none padding-above--mid padding-below--mid">
        <div class="container">
          <h1 class="margin-below--small margin-above--small">
            <span class="heading">Claims</span>
          </h1>

          <div class="skip-link padding-above--none
              small-handheld-skip">
            <button class="uikit-btn uikit-btn--tertiary margin-below" id="claim-activity-link">See all claims</button>
          </div>

          <div class="container claims-accordion simple-accordion simple-accordion--open margin-below">
            <div class="row simple-accordion__trigger">
              <div class="col-sm-12">
                <h2 class="margin-above--none margin-below--none">
                  <a class="toggle-arrow">
                    <b>Get the entitlements you deserve</b>
                  </a>
                </h2>
              </div>
            </div>
            <div class="row simple-accordion__body margin-below--extra">
              <div class="col-sm-12 claims-accordion--singleclaim">
                <h2 class="simple-accordion__heading">Claim now for
                  <br>
                  <b>education assistance</b>
                </h2>
                <p>Get help with the cost of education for you or your family.</p>
                <button class="uikit-btn" onclick="window.location.href='/auth/claim/studentpreeligibility?flow=studentFlow'">Get started</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container margin-above--extra margin-below--extra" id="claim-activity">
        <h2 class="simple-accordion__heading">
          <center>
            <b>Manage and track your claims</b>
          </center>
        </h2>
        <section class="widget">
          <div class="widget-header">
            <h2 class="simple-accordion__heading">
              <span class="widget-header__title">
                <img src="/docs/images/ico-claims.svg" alt="Claim activity logo">Claim activity
              </span>
            </h2>
          </div>
          <div class="row widget-content">
            <div class="col-md-12 widget--noclaims">
              <p class="text-fullwidth">You have no claims.</p>
            </div>
          </div>
        </section>
        <p>This page is seen by those who have never served (for example parent/guardians or students).</p>
        <p>
          <a href="/auth/claim/claim">Back to start ></a>
        </p>
      </div>

    </section>
  </main>
  <%- include(partials+"components/layout/footer") %>

  <script>
    $(".toggle-arrow").click(function () {
      $(".simple-accordion").toggleClass('simple-accordion--open simple-accordion--closed');
    });

    function goToByScroll(id) {
      id = id.replace("-link", "");
      $('html,body').animate({
          scrollTop: $("#" + id).offset().top
        },
        'slow');
    }
    $("#claim-activity-link").click(function (e) {
      e.preventDefault();
      goToByScroll($(this).attr("id"));
    });

    $("#entitlements").change(function () {
      if ($('#entitlements :selected').val() == "mentalhealth") {
        $("#entitlement-mh").removeClass('action-group__reveal--closed');
        $("#entitlement-mh").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-mh").removeClass('action-group__reveal--open');
        $("#entitlement-mh").addClass('action-group__reveal--closed');
      }
      if ($('#entitlements :selected').val() == "education") {
        $("#entitlement-student").removeClass('action-group__reveal--closed');
        $("#entitlement-student").addClass('action-group__reveal--open');
      } else {
        $("#entitlement-student").removeClass('action-group__reveal--open');
        $("#entitlement-student").addClass('action-group__reveal--closed');
      }
    });
  </script>

</body>


</html>