<script>
  var state;
  $.urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
    if (results == null) {
      return 0;
    }
    return results[1] || 0;
  }
  state = $.urlParam('state');
  updatePage();
  function updatePage(){
    hideAll();
    switch (state) {
      case "disab":
        $(".type-a").show();
        break;
      case "other":
      $(".type-b").show();
        break;
      default:
      $(".type-a").show();
        break;
    }
  }
  function hideAll(){
    $(".type-a").hide();
    $(".type-b").hide();
  }
</script>
