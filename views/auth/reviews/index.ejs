              customClass: ["margin-below--none"]
            }); %>

          <div id="requests">
            <hr>
            <%- include(partials+"components/form-partials/notice", {
              message: "Your travel booking has been updated successfully.",
              type: "success",
              id: "success",
              modifiers: ["hidden"],
              customClass: ["margin-below--none"]
            }); %>
            <%- include(partials+"components/form-partials/notice", {
              message: "Your travel booking has been cancelled successfully.",
              type: "success",
              id: "cancel-success",
