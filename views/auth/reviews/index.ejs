                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr id="blank" class="placeholder" hidden>
                  <td colspan="5">You currently have no requests.</td>
                </tr>

                <tr id="item-1">
                  <td data-title="Date submitted">2 September 2020
                  </td>
                  <td data-title="Reference">33657809</td>
                  <td data-title="Details">
                    <div>Disability pension</div>
                    <div>Internal review</div>
                  </td>
                  <td data-title="Status">Incomplete</td>
                  <td>
                    <button class="edit-trip uikit-btn uikit-btn--borderless margin-right--none">Delete</button><BR />
                    <button class="uikit-btn uikit-btn--borderless margin-right--none cancel-return">Resume</button>
                  </td>
                </tr>
               
                <tr id="item-2">
                  <td data-title="Date submitted">16 July 2020
                  </td>
                  <td data-title="Reference">33657900</td>
                  <td data-title="Details">
                    <div>MRCA Compensation</div>
                    <div>VRB Appeal</div>
                  </td>
                  <td data-title="Status">In progress</td>
                  <td>
                    <button class="edit-trip uikit-btn uikit-btn--borderless margin-right--none">View</button>
                  </td>
                </tr>

                <tr id="item-3"> 
                  <td data-title="Date submitted">16 July 2020
                  </td>
                  <td data-title="Reference">33657900</td>
                  <td data-title="Details">
                    <div>MRCA Compensation</div>
                    <div>Internal review</div>
                  </td>
                  <td data-title="Status">Finalised</td>
                  <td>
                    <button class="edit-trip uikit-btn uikit-btn--borderless margin-right--none">View</button>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="mys pagination" id="pagination"><a href="#1">«</a><a class="active" href="#1">1</a><a href="#2">2</a><a href="#3">3</a><a href="#4">4</a><a href="#5">5</a><a href="#6">6</a><a href="#7">7</a><a href="#3">»</a></div>
          </div>
      </div>

  </main>

  <%- include(partials+"components/layout/footer") %>
  <%- include("index-ss") %>
  <%#- include("cancel-return-modal") %>
  <%#- include("cancel-return-only-modal") %>
  <%#- include("cancel-modal") %>
</body>
<script>

  var state;
  // var cohort;

  $.urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
    if (results == null) {
      return 0;
    }
    return results[1] || 0;
  }
  state = $.urlParam('state');
  // $("#cohort-1").prop("checked", true);
  // $("#past-trips-2").prop("checked", true);
  stateSwitcher();

  function stateSwitcher() {
    $("#blank").hide();
    $("#item-1").hide();
    $("#item-2").hide();
    $("#item-3").hide();
    switch (state) {
      case "none":
        $("#blank").show();
        break;
      case "many":
        $("#item-1").show();
        $("#item-2").show();
        $("#item-3").show();
        // $("#past-trips-2").prop("checked", true);
        break;
      case "one-one-way":
        $("#item-1").show();
        $("#item-2").show();
        $("#item-3").hide();
        // $("#cancel-success-container").show();
        break;
      case "one-return":
        $("#item-3").show();
        // $("#cancel-success-container").show();
        break;
      case "no-returns":
        $("#item-1").show();
        $("#item-3").show();
        $("#item-1").removeClass("return-a");
        // $("#cancel-success-container").show();
        break;
      default:
        $("#item-1").show();
        $("#item-2").show();
        $("#item-3").show();
        break;
    }
   
  }

  $(".edit-trip").click(function () {
    window.location = "/auth/transport/book-edit";
  });

 
</script>

</html>