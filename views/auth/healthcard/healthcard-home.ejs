      <main>
        <section>
          <div class="section-feature margin-above--none" id="main-content">
            <div class="container">
              <div class="row">
                <div class="col-md-6">
                  <h1 class="margin-below--small">
                    <span class="heading">Health Card</span>
                  </h1>
                  <p class="medium-text">You can use your DVA Health Card (White Card) to access health services for your accepted conditions.
                  </p>
                </div>
                <div class="col-md-6 margin-above">
                  <div id="whitecard" class="healthcard-container">
                    <img src="../../../docs/images/health-card.png" style="width:22em;">
                    <div id="card-number">
                      <span class="card-text">VX000000</span>
                    </div>
                    <div id="card-name">
                      <span class="card-text">ROBERT JOHNSON</span>
                    </div>
                    <div id="card-date">
                      <span class="card-text">12 / 22</span>
										</div>
										<div><a href="#">Request a replacement card</a></div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </section>


        <div class="container margin-above--extra">
          <h2>
            <span class="font-weight-heavy">Accepted conditions</span>
