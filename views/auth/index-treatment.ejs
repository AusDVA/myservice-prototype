  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include header-authenticated-landing-page.ejs %>
  <main>

    <section class="hero-main">
      <div class="container" id="main-content">
        <h1>Welcome <span class="pt-current-user-name-full"></span></h1>
        <p>This is your MyService home page where you can access your claims and profile information.</p>
