<!DOCTYPE html>
<html class="js"
      lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width"
        name="viewport">
  <title>Home | MyService</title>
  <link href="docs/css/main.css"
        rel="stylesheet">
</head>

<body class="uikit-body uikit-grid">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link"
       href="#main-content">Skip to main content</a>
  </nav>
  <% include ../global/partials/header-topbar.ejs %>
    <% include ../global/partials/header-onboarding-page.ejs %>
      <main>
        <section>
          <div class="container">
            <div class="row margin-below ss-align--center">
              <div class="col-sm-12">
                <h1 class="margin-below--none">Link your DVA account to MyGov</h1>
                <h2 class="margin-above--none">If you don't already have an account with DVA you can register for one now.</h2>
              </div>
            </div>


            <!-- start initial buttons -->

            <div id="initial-buttons"
                 class="transition-content transition-content--open">
              <div class="row">
                <div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
                  <a id="myservice-btn"
                     class="uikit-btn uikit-btn--block uikit-btn--tertiary margin-below">Link a
                    <img class="uikit-btn__middle-image"
                         src="../../docs/images/ico-myservice-chevron.svg">

                    <span class="uikit-btn__highlight-text">MyService</span> account</a>
                </div>
              </div>


              <div class="row">
                <div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
                  <a id="myaccount-btn"
                     class="uikit-btn uikit-btn--block uikit-btn--tertiary ">Link using MyAccount</a>
                </div>
              </div>

              <div id="existing-new-divider"
                   class="row ">
                <div class="col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                  <div class="strike">
                    <span class="strike__text">or</span>
                  </div>
                </div>
              </div>

              <div class="row ">
                <div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
                  <a href="/register"
                     id="new-account-btn"
                     class="uikit-btn uikit-btn--tertiary uikit-btn--block">Register a new account</a>
                </div>
              </div>

              <div id="linking-code"
                   class="row ss-align--center margin-above margin-below--extra ">
                <div class="col-sm-12">
                  <a href="#">I have an activation code</a>
                </div>
              </div>
            </div>
            <!-- end initial buttons -->

            <div id="myservice-content"
                 class="transition-content">

              <div class="row">
                <div class="col-md-offset-2 col-md-8">
                  <div class="margin-below border-all">
                    <div class="row ss-align--center margin-above margin-below">
                      <div class="col-sm-offset-2 col-sm-8 ss-align">
                        <div class="form-group margin-below">
                          <h3 class="ss-align--center margin-above--none">Enter your MyService login details</h3>


                          <hr class="margin-above--none margin-below--mid">

                          <label class="uikit-text-input__label"
                                 for="myservice-username">Email
                          </label>
                          <input class="uikit-text-input"
                                 name="myservice-username"
                                 id="myservice-username"
                                 type="email"
                                 value="">
                          <br />
                          <a href=""
                             class="pt-myservice-forgot">Forgot email</a>
                        </div>
                        <div class="form-group margin-below">
                          <label class="uikit-text-input__label"
                                 for="myservice-password">Password</label>
                          <input class="uikit-text-input"
                                 name="myservice-password"
                                 id="myservice-password"
                                 type="password"
                                 value="">
                          <button class="uikit-btn uikit-btn--tertiary show-password">Show</button>
                          <br />
                          <a href=""
                             class="pt-myservice-forgot">Forgot password</a>
                        </div>
                        <hr class="margin-above--none margin-below--none">
                        <div class="ss-align--center">
                          <button class="uikit-btn uikit-btn--tertiary pt-cancel-btn"
                                  onclick="">Cancel</button>
                          <button class="uikit-btn pt-myservice-next"
                                  onclick="location.href='onboarding';">Next</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>

            <div id="myaccount-content"
                 class="transition-content">

              <div class="row">
                <div class="col-md-offset-2 col-md-8">
                  <div class="margin-below border-all">
                    <div class="row ss-align--center margin-above margin-below">
                      <div class="col-sm-offset-2 col-sm-8 ss-align">
                        <div class="form-group margin-below field pt-username">
                          <h3 class="ss-align--center margin-above--none">Enter your MyAccount login details</h3>
                          <hr class="margin-above--none margin-below--mid">
                          <label class="uikit-text-input__label"
                                 for="myaccount-username">Username
                            <span class="input-error-message">Enter your username rather than your email address</span>
                          </label>
                          <input class="uikit-text-input"
                                 name="myaccount-username"
                                 id="myaccount-username"
                                 type="email"
                                 value="">
                          <br />
                          <a href=""
                             class="pt-myaccount-forgot">Forgot username</a>
                        </div>
                        <div class="form-group margin-below">
                          <label class="uikit-text-input__label"
                                 for="myaccount-password">Password</label>
                          <input class="uikit-text-input"
                                 name="myaccount-password"
                                 id="myaccount-password"
                                 type="password"
                                 value="">
                          <button class="uikit-btn uikit-btn--tertiary show-password">Show</button>
                          <br />
                          <a href=""
                             class="pt-myaccount-forgot">Forgot password</a>
                        </div>
                        <hr class="margin-above--none margin-below--none">
                        <div class="ss-align--center">
                          <button class="uikit-btn uikit-btn--tertiary pt-cancel-btn"
                                  onclick="">Cancel</button>
                          <button class="uikit-btn pt-myservice-next"
                                  onclick="location.href='onboarding';">Next</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            <div id="myaccount-linking-code-content"
                 class="transition-content">
              <div class="row margin-below--extra">
                <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">

                  <div class="timebox--wrapper">
                    <img src="../../../docs/images/ico-phone-blue.svg"
                         alt="Phone icon">
                    <p>Can't remember your username and/or password?
                    </p>
                    <p>Call us on 1234982374 and we'll give you an activation code.</p>
                  </div>


                </div>
              </div>


            </div>

            <div id="linking-code-content"
                 class="transition-content">

              <div class="row ss-align--center margin-below--extra">
                <div class="col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
                  <div class="ss-align--center margin-below border-all">
                    <div class="margin-above margin-below">
                      <div class="form-group margin-below">
                        <label class="uikit-text-input__label"
                               for="linking-code">Enter your activation&nbsp;code</label>
                        <input class="uikit-text-input input-half ss-align--center"
                               name="linking-code"
                               type="text"
                               value="">
                      </div>
                      <button class="uikit-btn uikit-btn--tertiary pt-cancel-btn"
                              onclick="">Cancel</button>
                      <button class="uikit-btn pt-linking-code-next"
                              onclick="location.href='onboarding';">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          </div>

        </section>
      </main>

      <% include ../global/partials/footer-limbo.ejs %>



        <script>
          $(document).ready(function ($) {

            $('input[name="mygov-linking"]').prop('checked', false);

            $(".show-password").click(function () {

              var passwordField = $(this).closest('.form-group').find('input');
              if ($(passwordField).attr("type") == "password") {
                $(passwordField).attr("type", "text");
                $(this).text('Hide');

              } else {
                $(passwordField).attr("type", "password");
                $(this).val('Show');
                $(this).text('Show');
              }
            });

            function initLinking() {
              $('#initial-buttons').removeClass('transition-content--open');
              $('#myservice-content').removeClass('transition-content--open');
              $('#myaccount-content').removeClass('transition-content--open');
              $('#linking-code-content').removeClass('transition-content--open');
              $('#myaccount-linking-code-content').removeClass('transition-content--open');
            }

            $("#myaccount-username").keyup(function () {
              if (this.value.indexOf('@') > -1) {
                $(this).closest(".field").addClass("has-error");
              } else {
                $(this).closest(".field").removeClass("has-error");
              }
            });


            $("#myservice-btn").click(function () {
              initLinking();
              $("#myservice-content").toggleClass("transition-content--open");

            });

            $("#myaccount-btn").click(function () {
              initLinking();
              $("#myaccount-content").toggleClass("transition-content--open");
            });

            $("#linking-code").click(function () {
              initLinking();
              $("#linking-code-content").toggleClass("transition-content--open");
            });

            $('.pt-myaccount-forgot').click(function (e) {
              e.preventDefault();
              initLinking();
              $("#myaccount-linking-code-content").toggleClass("transition-content--open");
              $("#linking-code-content").toggleClass("transition-content--open");
            });

            $(".pt-cancel-btn").click(function () {
              initLinking();
              $('#initial-buttons').toggleClass('transition-content--open');
            });


          });



        </script>

</body>

</html>