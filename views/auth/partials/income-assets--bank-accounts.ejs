<!-- Summary card -->
<div id="bank-accounts-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-university fa-icons"></span><span class="font-weight-heavy">Bank account</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Account type</h4>
          </div>
          <div class="value">Savings account
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Account owner</h4>
          </div>
          <div class="value">Jointly owned
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('bank-accounts');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="bank-accounts-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;"><span class="fal fa-university fa-icons"></span><span class="font-weight-heavy">Bank account
      </span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated" onclick="removeSummary('bank-accounts');">&nbsp;Delete item&nbsp;</button>
  </div>
  <div id="card-details" class="margin-below--large">
    <div id="sp-c1-gift-b">
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="tags">
          <p class="margin-below--mid">Include term deposit, joint accounts, accounts you hold under any other name or money held in church or charitable development funds within Australia
            and Overseas.</p>
        </label>
        <p class="margin-below--mid">Include details of the account your pension will be paid into.</p>
        <p>Do NOT include bonds and debentures or any superannuation funds you hold. You will be asked about these in a later question.</p>
      </div>
    </div>
    <form id="myForm">
      <input type="reset" style="display:none">
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="drop-down">Payment received by</label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
          <option>-- Select one --</option>
          <option>Me</option>
          <option>My partner</option>
          <option>Both me and my partner</option>
        </select>
      </div>
      <div class="form-group">
        <label class="uikit-text-input__label" for="drop-down">Account type
          <br />
        </label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
          <option>-- Select an item --</option>
          <option>Cash management account</option>
          <option>Cheque account</option>
          <option id="church-account">Church/Charity account</option>
          <option>Savings account</option>
          <option>Term deposit</option>
          <option>Overseas account</option>
        </select>
      </div>
      <!-- <div class="form-group" id="church-account-ref">
                                    <label class="uikit-text-input__label" for="Input field">Church/Charity Account/Reference No.</label>
                                    <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
                                </div> -->
      <div class="bank-details-container">
      </div>
      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Current balance </label>
        <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required aria-required="true">
      </div>
      </label>
      <select class="uikit-text-input input-half" style="max-width: 80px;" id="drop-down" name="drop-down">
        <option>-- Select an item --</option>
        <option data-symbol="$" data-placeholder="0.00">USD</option>
        <option data-symbol="€" data-placeholder="0.00">EUR</option>
        <option data-symbol="£" data-placeholder="0.00">GBP</option>
        <option data-symbol="¥" data-placeholder="0">JPY</option>
        <option data-symbol="$" data-placeholder="0.00">CAD</option>
        <option data-symbol="$" data-placeholder="0.00" selected>AUD</option>
      </select>
    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('bank-accounts');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>
<!-- card end -->