<!-- Summary card -->
<div id="managed-investments-summary" class="plain-text-info" style="display:none;">
    <div class="review__wrapper">
        <div class="review__content--item boxed row">
            <div class="review__content--label col-sm-10">
                <h2 class="margin-above--none">
                    <span class="fal fa-file-certificate fa-icons"></span><span class="font-weight-heavy">Managed investments</span></h2>
                <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Type</h4>
                    </div>
                    <div class="value">Funeral bonds
                    </div>
                </div>
                <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Owner</h4>
                    </div>
                    <div class="value">Myself
                    </div>
                </div>
                <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Company</h4>
                    </div>
                    <div class="value">Foresters friendly society
                    </div>
                </div>
                 <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Current value</h4>
                    </div>
                    <div class="value">$78,000.00
                    </div>
                </div>
            </div>
            <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('managed-investments');">&nbsp;Edit&nbsp;</button>
            </div>
        </div>
    </div>
</div>
<!-- Open card -->
<div id="managed-investments-card" class="boxed margin-above margin-below" style="display: none;">
    <div>
        <h2 class="margin-above--none" style="display: inline-block;">
            <span class="fal fa-file-certificate fa-icons"></span><span class="font-weight-heavy">Managed investments</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary
        small warning floated" onclick="removeSummary('managed-investments');">&nbsp;Delete item&nbsp;
        </button>
    </div>
    <h4 class="margin-below--mid margin-above--none">Add any Investment trusts, personal investment plans, insurance bonds, &amp; pre paid funerals<span class="partner"> held by you (and/or your partner)</span></h4>
    <p class="margin-below--mid">Additional line goes here.</p>
    <hr>
    <form id="myForm">
        <input type="reset" style="display:none">
        <div class="form-group">
            <label class="uikit-text-input__label" for="drop-down">Managed investment type</span>
            </label>
            <select class="uikit-text-input input-half" id="investmentType" name="drop-down" onchange="typeSelected()">
                <option>-- Select an item --</option>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Funeral bonds</option>
                <option>Pre-paid funeral</option>
            </select>
        </div>
        <div id="funeral-bonds" style="display: none;">
            <div class="uikit-page-alerts margin-above--large" role="alert">
                <p>Do not include details of Pre-paid Funerals.</p>
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="drop-down">Owner of the Funeral Bonds</label>
                <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
                    <option selected="selected">-- Select one --</option>
                    <option>Myself</option>
                    <option>My partner</option>
                    <option>My partner and I</option>
                </select>
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="tags">Company from which you purchased the Bonds <BR /><span class="hint">Name of Friendly Society or Life Insurance company </span></label>
                <input class="uikit-text-input" name="tags" id="tags" type="text" value="">
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="Input field">Amount invested <span class="hint">(excluding fees)</span></label>
                <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required aria-required="true">
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="Input field">Current value</label>
                <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required aria-required="true">
            </div>
            <div class="uikit-page-alerts margin-above--large" role="alert">
                <p>You will need to attach a copy of the relevant supporting document.</p>
            </div>
        </div>
        <div id="prepaid-funerals" style="display: none;">
            <div class="uikit-page-alerts margin-above--large" role="alert">
                <p>Do not include the details of Funeral Bonds.</p>
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="drop-down">Owner of the Pre-paid Funeral</label>
                <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
                    <option selected="selected">-- Select one --</option>
                    <option>Myself</option>
                    <option>My partner</option>
                    <option>My partner and I</option>
                </select>
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="tags">Funeral director who arranged the pre-paid funeral</label>
                <input class="uikit-text-input" name="tags" id="tags" type="text" value="">
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="Input field">Amount paid for the pre-paid funeral plan</label>
                <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required aria-required="true">
            </div>
        </div>
    </form>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
        <button id="addButton" class="uikit-btn" onclick="addSummary('managed-investments'); ">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary" onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
</div>
<script>
function typeSelected(event) {
    var select = document.getElementById("investmentType");
    var selectedString = select.options[select.selectedIndex].value;
    if (selectedString == "Funeral bonds") {
        hideInvestmentTypes();
        var selected = document.getElementById("funeral-bonds");
        selected.style.display = 'block';
    } else if (selectedString == "Pre-paid funeral") {
        hideInvestmentTypes();
        var selected = document.getElementById("prepaid-funerals");
        selected.style.display = 'block';
    }
}

function hideInvestmentTypes() {
    var selected = document.getElementById("funeral-bonds");
    selected.style.display = 'none';
    var selected = document.getElementById("prepaid-funerals");
    selected.style.display = 'none';
}
</script>