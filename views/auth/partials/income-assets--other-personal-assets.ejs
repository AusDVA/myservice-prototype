<!-- Summary card -->
<div id="other-personal-assets-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-ellipsis-h-alt" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Other personal assets</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Asset type:</h4>
          </div>
          <div class="value">Art
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Market value</h4>
          </div>
          <div class="value">$65,000
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('other-personal-assets');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="other-personal-assets-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-ellipsis-h-alt" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;<span class="font-weight-heavy">Other personal assets</span></h2><button id="deleteButton"
      class="uikit-btn uikit-btn--tertiary small warning floated" onclick="removeSummary('other-personal-assets');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <p class="margin-below--mid margin-above">Include valuable or collectible items that are not included in your Home Contents value.</p>
    <p> This includes items such as jewellery, antiques, collectibles, coins and medals.</p>
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->
      <div class="form-group">
        <label class="uikit-text-input__label" for="other-personal-assets">Do you (and/or your partner) have any other assets which you have not already told us about?</label>
        <div class="radio-toggle">
          <label class="on label-left" for="yes-other-personal-assets">
            <input id="yes-other-personal-assets" type="radio" name="other-personal-assets">
            <span>Yes</span>
          </label>
          <label class="off label-right" for="no-other-personal-assets">
            <input id="no-other-personal-assets" type="radio" name="other-personal-assets">
            <span>No</span>
          </label>
        </div>
      </div>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="radio-buttons">Who owns this asset?</label>
        <p class="uiToolKitCheckBox margin-above">
          <label class="uikit-control-input">
            <input id="single" class="uikit-control-input__input" type="radio" name="radio-ex">
            <span class="uikit-control-input__text">You</span>
          </label>
        </p>
        <p class="uiToolKitCheckBox">
          <label class="uikit-control-input">
            <input id="married" class="uikit-control-input__input" type="radio" name="radio-ex">
            <span class="uikit-control-input__text">Partner</span>
          </label>
        </p>
        <p class="uiToolKitCheckBox margin-below--large">
          <label class="uikit-control-input">
            <input id="defacto" class="uikit-control-input__input" type="radio" name="radio-ex" checked="checked">
            <span class="uikit-control-input__text">Jointly</span>
          </label>
        </p>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="drop-down">Other Personal Asset Type</span>
        </label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
          <option>-- Select an item --</option>
          <option>Jewellery</option>
          <option>Art</option>
          <option>Antiques</option>
          <option>Licenses ( Taxi, fishing etc)</option>
          <option>Coins or Medals (Hobby)</option>
          <option>Other</option>
        </select>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Description</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">What is the current market value ?<span class="hint"><br>If you do not have a valuation, provide your estimate of the
            current market value.</span></label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="date">Date of Valuation
          <span class="hint">(DD / MM / YYYY)<br>If you do not have a valuation for the asset, provide the date of the most recent valuation. If you do not have a valuation, record
            today's date.</span>
        </label>
        <input class="uikit-text-input dd" type="text" name="dd-date" id="dd-date" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
        <input class="uikit-text-input mm" type="text" name="mm-date" id="mm-date" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
        <input class="uikit-text-input yyyy" type="text" name="yyyy-date" id="yyyy-date" maxlength="4" required aria-required="true" aria-label="4 digit year">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Amount owing (if any)</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="$0.00" required aria-required="true">
      </div>

    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('other-personal-assets');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary" onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>