
<!-- Summary card -->
<div id="other-personal-assets-summary" class="plain-text-info" style="display:none;">
    <div class="review__wrapper">
        <div class="review__content--item boxed row">
            <div class="review__content--label margin-below">
                <h2 class="margin-above--none" style="display: inline-block;">
                     <span class="fal fa-ellipsis-h-alt" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Other personal assets</span></h2>
                </h2>
                <button class="uikit-btn uikit-btn--tertiary small floated" onClick="editCard('other-personal-assets');">&nbsp;Edit&nbsp;</button>
            </div>
            <div class="review__table">
                <div class="tr">
                    <div class="td"><b>Asset type</b></div>
                    <div class="td">Art</div>
                </div>
                <div class="tr">
                    <div class="td"><b>Current market value</b></div>
                    <div class="td">$65,000</div>
                </div>
                 <div class="tr">
                    <div class="td"><b>Owner</b></div>
                    <div class="td">My partner</div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Open card -->
<div id="other-personal-assets-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-ellipsis-h-alt fa-icons"></span><span class="font-weight-heavy">Other personal assets</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated"
      onclick="removeSummary('other-personal-assets');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <h4 class="margin-below--mid margin-above--none">Any other valuable assets <span class="partner">belonging to you (and/or your partner)</span> that you have not already told us about.</h4>
  <p class="margin-below--mid">Include items such as jewellery, art, antiques, licenses (taxi, fishing etc), collections such as coins (hobby) or any other valuable asset.</p>
  <p class="margin-below--mid">Do NOT add items included in your home content value.</p>
  <hr>
  <form id="myForm">
    <input type="reset" style="display:none">
    <!-- form goes here -->
    <div class="form-group">
      <label class="uikit-text-input__label" for="drop-down">Asset Type</span>
      </label>
      <select class="uikit-text-input input-half" id="assetType" name="drop-down" onchange="typeSelected()">
        <option>-- Select an item --</option>
        <option>Jewellery</option>
        <option>Art</option>
        <option>Antiques</option>
        <option>Licenses (Taxi, fishing etc)</option>
        <option>Collections such as coins (Hobby)</option>
        <option>Other</option>
      </select>
    </div>
    <div class="form-group margin-above--large" id="asset-description" style="display: none;">
      <label class="uikit-text-input__label" for="tags">Asset description</label>
      <input class="uikit-text-input" name="tags" id="tags" type="text" value="">
    </div>
    <div class="form-group margin-above--large">
      <label class="uikit-text-input__label" for="Input field">What is the current market value ?<span class="hint"><br>Provide an estimate if unsure of the current market value.</span></label>
      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
    </div>
    <div class="form-group margin-above--large">
      <label class="uikit-text-input__label" for="Input field">Amount owing
        <span class="hint">(if any)</label>
      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="$0.00" required aria-required="true">
    </div>
    <div class="form-group margin-above--large partner">
      <label class="uikit-text-input__label" for="drop-down">Owner of this asset</label>
      <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
        <option selected="selected">-- Select one --</option>
        <option>Me</option>
        <option>My partner</option>
        <option>Both me and my partner</option>
      </select>
    </div>
  </form>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('other-personal-assets');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>
<script>
  function typeSelected(event) {
    var field = document.getElementById("asset-description");
    var select = document.getElementById("assetType");
    var selectedString = select.options[select.selectedIndex].value;
    if (selectedString == "Other") {
      field.style.display = 'block';
    } else {
      field.style.display = 'none';
    }
  }
</script>