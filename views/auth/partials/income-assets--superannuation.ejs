<!-- Summary card -->
<div id="superannuation-summary" class="plain-text-info" style="display:none;">
    <div class="review__wrapper">
        <div class="review__content--item boxed row">
            <div class="review__content--label col-sm-10">
                <h2 class="margin-above--none">
                    <span class="fal fa-piggy-bank fa-icons"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Superannuation</span></h2>
                <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Name of institution</h4>
                    </div>
                    <div class="value">MLC</div>
                </div>
                <div class="key-value-group margin-above">
                    <div class="key">
                        <h4>Account owner</h4>
                    </div>
                    <div class="value">Both my partner and I</div>
                </div>
            </div>
            <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('superannuation');">&nbsp;Edit&nbsp;</button>
            </div>
        </div>
    </div>
</div>
<!-- Open card -->
<div id="superannuation-card" class="boxed margin-above margin-below" style="display: none;">
    <div>
        <h2 class="margin-above--none" style="display: inline-block;">
            <span class="fal fa-piggy-bank fa-icons"></span>&nbsp;<span class="font-weight-heavy">Superannuation</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary
        small warning floated" onclick="removeSummary('superannuation');">&nbsp;Delete item&nbsp;
        </button>
    </div>
    <div id="card-details" class="margin-below--large">
         <h4 class="margin-below--mid margin-above--none">Add any superannuation accounts held by you<span class="partner"> and/or your partner</span>.</h4>
        <p class="margin-below--mid">Includes investments in a public unit trust, an insurance bond, a friendly society or a superannuation fund in the accumulation phase which is not paying you a pension.</p>
            <hr>
        <form id="myForm">
            <input type="reset" style="display:none">
            <!-- form goes here -->
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="drop-down">Account owner</label>
                <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
                    <option selected="selected">-- Select an item --</option>
                    <option>Me</option>
                    <option>My partner</option>
                    <option>Jointly owned (with any other party)</option>
                </select>
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="Input field">Name of the Institution/Fund Manager</label>
                <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
            </div>
            <div class="form-group margin-above--large">
                <label class="uikit-text-input__label" for="Input field">Product name</label>
                <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
            </div>
        </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
        <button id="addButton" class="uikit-btn" onclick="addSummary('superannuation');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary" onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
</div>