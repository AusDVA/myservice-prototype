<!-- Summary card -->
<div id="vehicles-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-car" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Vehicles</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Vehicle type:</h4>
          </div>
          <div class="value">Car
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Vehicle description</h4>
          </div>
          <div class="value">2015 Audi Q5
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Market value:</h4>
          </div>
          <div class="value">$35,600
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('vehicles');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="vehicles-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-car" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;<span class="font-weight-heavy">Vehicles</span></h2>
    <button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated" onclick="removeSummary('vehicles');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->
      <div class="form-group margin-above--large">
        <div class="form-group margin-above--large">
          <p class="margin-below--mid margin-above--none">
            Include all vehicles you (and/or your partner) own, including;
            <ul>
              <li>motor vehicles,</li>
              <li>boats,</li>
              <li>caravans, or</li>
              <li>trailers.</li>
            </ul>
            <p> Do NOT include boats or caravans you live in or any farm vehicles.</p>
            <hr>
        </div>
        <fieldset class="margin-above--large margin-below--large">
          <label class="uikit-text-input__label" for="rank">Vehicle type</label>
          <select class="uikit-text-input input-half" id="vehicle-type-edit" name="vehicle-type-edit">
            <option>-- Select type of vehicle --</option>
            <option>Boat</option>
            <option selected="selected">Car</option>
            <option>Caravan</option>
            <option>Motorbike</option>
            <option>Trailer</option>
            <option>Truck</option>
            <option>Other vehicle</option>
          </select>
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle make</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="Toyota">
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle model</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="Corolla">
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle year</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="2010">
      </div>
      </fieldset>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="tags">Market value of the vehicle</label>
        <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="10,000.00" required
          aria-required="true">
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label legend-label margin-below--none" for="tags">Amount owing on this vehicle</label>
        <span class="hint display-block margin-above--none">Leave blank if you do not owe any money on this vehicle</span>
        <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required
          aria-required="true">
      </div>
      <label class="uikit-text-input__label" for="drop-down">Owner of this vehicle </label>
      <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
        <option>-- Select one --</option>
        <option>Me</option>
        <option>My partner</option>
        <option>Both me and my partner</option>
      </select>
      </fieldset>
    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button class="uikit-btn" onclick="addSummary('vehicles');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>