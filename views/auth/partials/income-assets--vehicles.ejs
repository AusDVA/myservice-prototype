<!-- Summary card -->
<div id="vehicles-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <icon class="fal fa-car" style="font-size: 1.7em; vertical-align: -15%;"></icon>&nbsp;&nbsp;<span class="font-weight-heavy">Vehicles</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Key</h4>
          </div>
          <div class="value">Value
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Key</h4>
          </div>
          <div class="value">Value
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('vehicles');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="vehicles-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-car" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;<span class="font-weight-heavy">Vehicles</span></h2>
    <button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated" onclick="removeSummary('vehicles');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <p>Tell us about your financial assets. This information helps us to calculate your payments.</p>
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->
      <div class="form-group margin-above--large">
        <div class="form-group">
          <label class="uikit-text-input__label" for="toggle-buttons-vehicle">Do you (and/or your partner) own any motor vehicles, boats, caravans or trailers? <span class="hint"><br>Do
              NOT include a boat or caravan you live in, or any farming vehicles</span></label>
          <div class="radio-toggle">
            <label class="on label-left" for="yes-vehicle">
              <input id="yes-vehicle" type="radio" name="toggle-buttons-vehicle">
              <span>Yes</span>
            </label>
            <label class="off label-right" for="no-vehicle">
              <input id="no-vehicle" type="radio" name="toggle-buttons-vehicle">
              <span>No</span>
            </label>
          </div>
        </div>
        <div class="form-group margin-above--large">
          <label class="uikit-text-input__label" for="radio-buttons">Who owns the vehicle?</label>
          <p class="uiToolKitCheckBox margin-above">
            <label class="uikit-control-input">
              <input id="single" class="uikit-control-input__input" type="radio" name="radio-ex">
              <span class="uikit-control-input__text">You</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input id="married" class="uikit-control-input__input" type="radio" name="radio-ex">
              <span class="uikit-control-input__text">Partner</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox margin-below--large">
            <label class="uikit-control-input">
              <input id="defacto" class="uikit-control-input__input" type="radio" name="radio-ex" checked="checked">
              <span class="uikit-control-input__text">Jointly</span>
            </label>
          </p>
        </div>
        <fieldset class="margin-above--large margin-below--large">
          <label class="uikit-text-input__label" for="rank">Vehicle type</label>
          <select class="uikit-text-input input-half" id="vehicle-type-edit" name="vehicle-type-edit">
            <option>-- Select type of vehicle --</option>
            <option>Boat</option>
            <option selected="selected">Car</option>
            <option>Caravan</option>
            <option>Motorbike</option>
            <option>Trailer</option>
            <option>Truck</option>
            <option>Other vehicle</option>
          </select>
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle make</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="Toyota">
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle model</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="Corolla">
      </div>
      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label">Vehicle year</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="2010">
      </div>
      </fieldset>
      <fieldset class="margin-above--large margin-below--large">
        <div class="form-group margin-above--large">
          <label class="uikit-text-input__label" for="tags">What is the market value of the vehicle?</label>
          <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="10,000.00" required aria-required="true">
        </div>
        <div class="form-group margin-above--large">
          <label class="uikit-text-input__label" for="tags">Please enter the amount outstanding if any money is owed on this vehicle</label>
          <span class="sign-dollar">&#36;</span> <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="0.00" required aria-required="true">
        </div>
      </fieldset>
    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button class="uikit-btn" onclick="addSummary('vehicles');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary" onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>