<!-- Summary card -->
<div id="life-insurance-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-umbrella" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Life insurance</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Policy belongs to:</h4>
          </div>
          <div class="value">You
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Insurance company:</h4>
          </div>
          <div class="value">Allianz
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Policy number:</h4>
          </div>
          <div class="value">123 456 789
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Surrender value:</h4>
          </div>
          <div class="value">$90,000
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('life-insurance');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="life-insurance-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-umbrella" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;<span class="font-weight-heavy">Life insurance</span></h2><button id="deleteButton"
      class="uikit-btn uikit-btn--tertiary small warning floated" onclick="removeSummary('life-insurance');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <p class="margin-below--mid margin-above">Includes conventional life insurance, whole of life insurance, endowment insurance and pure endowment insurance policies. </p>
    <p> Does not include products such as term insurance, trauma insurance, total and permanent disablement insurance, income protection insurance or business insurance policies, insurance
      bonds or friendly society bonds
    </p>
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->
      <div class="form-group margin-below--large">
        <label class="uikit-text-input__label" for="insurance-policy">Do you (and/or your partner) have an insurance policy that can be cashed in?</label>
        <div class="radio-toggle">
          <label class="on label-left" for="yes-insurance-policy">
            <input id="yes-insurance-policy" type="radio" name="insurance-policy">
            <span>Yes</span>
          </label>
          <label class="off label-right" for="no-insurance-policy">
            <input id="no-insurance-policy" type="radio" name="insurance-policy">
            <span>No</span>
          </label>
        </div>
      </div>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="radio-buttons">Who owns this policy?</label>
        <p class="uiToolKitCheckBox margin-above">
          <label class="uikit-control-input">
            <input id="single" class="uikit-control-input__input" type="radio" name="radio-ex">
            <span class="uikit-control-input__text">You</span>
          </label>
        </p>
        <p class="uiToolKitCheckBox">
          <label class="uikit-control-input">
            <input id="married" class="uikit-control-input__input" type="radio" name="radio-ex">
            <span class="uikit-control-input__text">Partner</span>
          </label>
        </p>
        <p class="uiToolKitCheckBox margin-below--large">
          <label class="uikit-control-input">
            <input id="defacto" class="uikit-control-input__input" type="radio" name="radio-ex" checked="checked">
            <span class="uikit-control-input__text">Jointly</span>
          </label>
        </p>
      </div>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="Input field">Name of insurance company:</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Policy number</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Surrender value</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('life-insurance');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary" onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>