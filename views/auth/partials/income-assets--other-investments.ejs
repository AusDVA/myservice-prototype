<!-- Summary card -->
<div id="other-investments-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-file-certificate fa-icons"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Other investments</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Type of investment</h4>
          </div>
          <div class="value">Bullion – Gold, Silver or Platinum
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Current value</h4>
          </div>
          <div class="value">$22,000
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('other-investments');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="other-investments-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-file-certificate fa-icons"></span>&nbsp;<span class="font-weight-heavy">Other investments</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated"
      onclick="removeSummary('other-investments');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <p class="margin-below--mid margin-above">Include bullion (Gold, Silver and Platinum), Coins/Medals (purchased as an investment opportunity) and any financial investments not declared
      elsewhere within this claim.</p>
    <p>Do NOT include real estate in Australia, private trusts, private companies or business.</p>
    <p>You will be asked about these in later questions.</p>
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->

      <div class="form-group">
        <label class="uikit-text-input__label" for="financial-investments">Do you (and/or your partner) have any money invested in, or do you receive income from, any other financial
          investments not declared elsewhere</label>
        <div class="radio-toggle">
          <label class="on label-left" for="yes-financial-investments">
            <input id="yes-financial-investments" type="radio" name="financial-investments">
            <span>Yes</span>
          </label>
          <label class="off label-right" for="no-financial-investments">
            <input id="no-financial-investments" type="radio" name="financial-investments">
            <span>No</span>
          </label>
        </div>
      </div>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="drop-down">Who owns the account?</label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
          <option selected="selected">-- Select one --</option>
          <option>Me</option>
          <option>My partner</option>
          <option>Both me and my partner</option>
        </select>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="drop-down">Type of Investment
        </label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
          <option>-- Select an item --</option>
          <option>Bullion – Gold, Silver or Platinum</option>
          <option>Coins or Medals (Investment)</option>
          <option>Other</option>
        </select>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Description</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Current value of investment</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('other-investments');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>