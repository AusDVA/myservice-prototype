<!-- Summary card -->
<div id="super-pension-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
    <div class="review__content--item boxed row">
      <div class="review__content--label col-sm-10">
        <h2 class="margin-above--none">
          <span class="fal fa-envelope-open-dollar fa-icons"></span>&nbsp;&nbsp;<span class="font-weight-heavy">Super pension</span></h2>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Owner of account</h4>
          </div>
          <div class="value">You
          </div>
        </div>
        <div class="key-value-group margin-above">
          <div class="key">
            <h4>Pension</h4>
          </div>
          <div class="value">Pension
          </div>
        </div>
      </div>
      <div class="col-sm-2" style="margin: 0;"><button class="uikit-btn uikit-btn--tertiary" onClick="editCard('super-pension');">&nbsp;Edit&nbsp;</button>
      </div>
    </div>
  </div>
</div>
<!-- Open card -->
<div id="super-pension-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-envelope-open-dollar fa-icons"></span>&nbsp;<span class="font-weight-heavy">Super pension</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated"
      onclick="removeSummary('super-pension');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <p class="margin-below--mid margin-above">Superannuation income, pension or disability payments received from an employer provided defined benefit superannuation fund. Includes
      payments from ComSuper, Defence Force Retirement Death Benefits (DFRDB), Military Superannuation Benefits Scheme (MSBS), State Government and bank employee superannuation funds.</p>
    <form id="myForm">
      <input type="reset" style="display:none">
      <!-- form goes here -->
      <div class="form-group">
        <label class="uikit-text-input__label" for="super-pension">Do you (and/or your partner) receive or are you entitled to receive or are you presently applying for superannuation
          defined benefit income, pension or disability payments?</label>
        <div class="radio-toggle">
          <label class="on label-left" for="yes-super-pension">
            <input id="yes-super-pension" type="radio" name="super-pension">
            <span>Yes</span>
          </label>
          <label class="off label-right" for="no-super-pension">
            <input id="no-super-pension" type="radio" name="super-pension">
            <span>No</span>
          </label>
        </div>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="radio-super-pension">Who is the owner of the account</label>
        <p class="uiToolKitCheckBox">
          <label class="uikit-control-input">
            <input class="uikit-control-input__input" type="radio" name="radio-super-pension">
            <span class="uikit-control-input__text">You</span>
          </label>
        </p>
        <p class="uiToolKitCheckBox">
          <label class="uikit-control-input">
            <input class="uikit-control-input__input" type="radio" name="radio-super-pension">
            <span class="uikit-control-input__text">Your Partner</span>
          </label>
        </p>
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Provider who is paying the pension</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="date">Start Date
          <span class="hint">(DD / MM / YYYY)</span>
        </label>
        <input class="uikit-text-input dd" type="text" name="dd-date" id="dd-date" maxlength="2" required aria-required="true" aria-label="2 digit day"> /
        <input class="uikit-text-input mm" type="text" name="mm-date" id="mm-date" maxlength="2" required aria-required="true" aria-label="2 digit month"> /
        <input class="uikit-text-input yyyy" type="text" name="yyyy-date" id="yyyy-date" maxlength="4" required aria-required="true" aria-label="4 digit year">
      </div>

      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Product reference number:</label>
        <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
      </div>

      <div class="uikit-page-alerts" role="alert">
        <p>You will need to attach your latest statement of benefit from the paying authority in the documents section. </p>
      </div>


    </form>
  </div>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('super-pension');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>