<div id="state-switcher">
  <h3>State switcher</h3>
  <%- include(partials+"components/form-partials/radio", {
    label: "Card states",
    id: "card-states",
    boxes: [
      "White",
      "Gold",
      "Card on way",
      "Conditions but no card"
    ]
  }); %>
</div>


<script>

  $(document).ready(function () {
    /* Toggle switcher */
    $(document).keypress(function (e) {
      switch (e.which) {
        case 96: //tilda
          $('#state-switcher').toggle();
          break;
        default:
      }
    });

    $("#card-states-1").prop("checked", true);

    $('input[name=card-states]').change(function () {
      selectedOption = $(this).val();
      hideAll();
      switch (selectedOption) {
        case "white":
          $("#veteran-white").show();
          $(".card-regular").show();
          break;
        case "gold":
          $("#veteran-gold").show();
          $(".card-regular").show();
          break;
        case "cardonway":
          $("#veteran-white-on-way").show();
          $(".card-regular").show();
          break;
        case "conditionsbutnocard":
          $(".card-regular").hide();
          $(".card-no-card").show();
          break;
        default:
          break;
      }
    });

    function hideAll() {
      $("#veteran-no-card").hide();
      $("#veteran-white-on-way").hide();
      $("#veteran-gold").hide();
      $("#veteran-white").hide();
      $("#veteran-gold-tpi").hide();
      $("#cshc").hide();
      $(".card-no-card").hide();
    }

  });
</script>