                  <button class="uikit-btn uikit-btn--tertiary small">Delete</button>
                </td>
              </tr>
              <tr>
                <td>ANZ</td>
                <td>Online Saver</td>
                <td>218123</td>
                <td>Joint</td>
                <td>$57,213</td>
                <td>
                  <button class="uikit-btn uikit-btn--tertiary small">Edit</button>
                  <button class="uikit-btn uikit-btn--tertiary small">Delete</button>
                </td>
              </tr>
            </table>

            <table class="data-centred">
              <caption>Real estate</caption>
              <tr>
                <th style="width: 15%">Type</th>
                <th style="width: 15%">Address</th>
                <th style="width: 15%">Owner</th>
                <th style="width: 15%">Value</th>
                <th style="width: 15%">Balance</th>
                <th style="width: 25%">Actions</th>
              </tr>
