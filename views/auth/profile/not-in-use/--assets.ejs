      <div class="container" id="main-content">
        <div class="row margin-above">
          <div class="col-sm-3">

            <% include ../../../partials/profile-side-nav.ejs %>
          </div>
          <div class="col-sm-9">
            <% include ../../../partials/breadcrumb-profile-assets.ejs %>
            <h2>Income and assets</h2>

            <div class="summary">
              <h3>Summary</h3>
              <div class="row">
                <div class="col-md-7">
                  <table>
                    <tr>
                      <th style="width: 50%">Pension type:</th>
