<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Agreement: Nom Rep | MyService</title>
  <% include ../../../../partials/head.ejs %>
</head>

<body class="uikit-body uikit-grid uikit-refactor future nom-reps">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>


  <% include ../../../../partials/header-topbar.ejs %>

  <% include ../../../../partials/header-authenticated.ejs %>

  <% include ../../../../partials/header-nom-rep.ejs %>


  <main>
    <section>
      <div class="container margin-above margin-below--extra" id="claim-activity">
        <section class="widget">
          <div class="row margin-above">
            <div class="col-sm-3">
              <ul class="secondary-navigation">
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile">Personal details</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/contact">Contact details</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/account">Account settings</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/history">Service history</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/relationships">Relationships</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/account">Income and assets</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/history">Bank details</a>
                </li>
                <li class="secondary-navigation__item secondary-navigation__item--active">
                  <a class="secondary-navigation__link" href="/auth/profile/nomrep/agreements-concept">Representation</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/contact">Overseas travel</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/account">Honours and military awards</a>
                </li>
                <li class="secondary-navigation__item">
                  <a class="secondary-navigation__link" href="/auth/profile/history">Commemoration preferences</a>
                </li>
              </ul>
            </div>

            <div class="col-sm-9">
              <h1 class="margin-above--none margin-below--mid">Representation</h1>
              <table class="agreements-concept table-responsive clean">
                <thead>
                  <tr>
                    <th id="myRepsBtnConcept">
                      <span class="fa-stack">
                        <i class="fal fa-circle fa-stack-2x"></i>
                        <i class="fal fa-hands-helping fa-stack-1x"></i>
                      </span>
                      <legend class="legend-label">My representatives</legend>
                    </th>
                    <th id="iRepresentConcept" class="on-load-state">
                      <div class="iRepresentConcept">As a representative you can assist people with their DVA matters.<br />
                        <a href="/auth/profile/nomrep/form-client-1">Become a representative</a>
                      </div>
                    </th>
                  </tr>

                </thead>
                <tbody>
                  <tr>
                    <td colspan="2">
                      <p>Representatives assist veterans and their families when dealing with DVA.</p>
                    </td>
                  </tr>
                  <tr>
                    <td colspan="2"><button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/auth/profile/nomrep/rep-details'">Add a representative</button>
                    </td>
                  </tr>


                </tbody>
              </table>
              <!-- end who represents me table -->



            </div>
            <!-- end rep listing col -->
          </div>
          <!-- end row -->
        </section>
      </div>
    </section>
  </main>


  <% include ../../../../partials/footer.ejs %>
</body>
<script>
  $(document).ready(function () {

    $('#myRepsBtn').click(function () {
      $('#myReps').show();
      $('#myReps1').show();
      $('#myReps2').show();
      $('#myReps3').show();
      $('#myReps4').show();
      $('#myReps5').show();
      $('#iRep').hide();
      $('#iRep1').hide();
      $('#myRepsHead').show();
      $('#iRepHead').hide();
      $('#becomeRep').hide();
      $('#addRep').show();
      $('#myRepsBtn').removeClass('active-state');
      $('#iRepresent').addClass('active-state');
      $('#myRepsBtn').removeClass('on-load-state');
    });
    $('#iRepresent').click(function () {
      $('#iRep').show();
      $('#iRep1').show();
      $('#iRepHead').show();
      $('#myReps').hide();
      $('#myReps1').hide();
      $('#myReps2').hide();
      $('#myReps3').hide();
      $('#myReps4').hide();
      $('#myReps5').hide();
      $('#becomeRep').show();
      $('#addRep').hide();
      $('#myReps1').hide();
      $('#myRepsHead').hide();
      $('#myRepsBtn').addClass('active-state');
      $('#iRepresent').removeClass('active-state');
      $('#iRepresent').removeClass('on-load-state');
    });
  });
</script>

</html>
