<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../../partials/header-topbar.ejs %>
<% include ../../../../partials/header-nom-rep.ejs %>
  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <div class="container margin-above--none">
        <!-- Progress bar -->

      </div>
      <!-- Page heading -->
      <h1 class="margin-above--none ss-align--center">
        <span class="heading">Authorisation request summary</span>
      </h1>
    </div>
    <div class="container">

      <div class="form-group">

        <div class="flex-container flex-container--wrap">

          <div class="flex-item flex-item--centred receipt">

            <h3>Luke Smith has requested to act on your behalf.</h3>
            <p>Review the summary below and accept or decline this request.</p>


            <!-- summary cards -->
            <div class="review__content--item boxed row margin-below--extra" id="summary-1">
              <div class="review__content--label col-sm-10">
                <h3 class="margin-above--none margin-below--mid">Luke Smith</h3>
                <legend class="margin-below--none legend-label">Role type: <span class="hint"> Act on behalf </span></legend>
                <legend class="margin-below--none legend-label">Online access: <span class="hint"> Yes </span></legend>
                <legend class="margin-below--none legend-label">Receiving correspondence: <span class="hint"> Yes </span></legend>
                <legend class="margin-below--none legend-label">Receiving payment: <span class="hint"> No</span></legend>
                <legend class="margin-below--none legend-label">Representation date: <span class="hint"> 01 / 01 / 2000 to indefinite</span></legend>
              </div>
              <div class="col-sm-2 "></div>
            </div>


          </div>
        </div>


        <div class="pagination">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile/nomrep/'">Cancel</button>

          <div class="floated">
            <button class="uikit-btn uikit-btn--tertiary small float" onclick="window.location.href = '/auth/claim'">Decline</button>
            <button class="uikit-btn small float" onclick="window.location.href = '/auth/claim'">Accept</button>
          </div>
          <!-- waiting for sam -->
        </div>

      </div>
    </div><!-- bottom page navigation end -->

    </div><!-- form-group end -->
    </div> <!-- container end -->
