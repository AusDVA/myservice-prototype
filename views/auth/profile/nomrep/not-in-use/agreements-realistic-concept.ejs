<script>
  $(document).ready(function () {

    $('#IRepBtnConcept').click(function () {
      $(this).addClass('top-bar-blue');
      $('#removeBox').removeClass('box-on-click');
      $('#removeBox1').addClass('box-on-click');
      $('#myRepsBtnConcept').removeClass('top-bar-blue');
      $('#myRepsBtnConcept').removeClass('addBorderBack');
      $('#liz').hide();
      $('#alice').hide();
      $('#richard').show("fast");
    });
    $('#myRepsBtnConcept').click(function () {
      $(this).addClass('top-bar-blue');
      $('#removeBox').addClass('box-on-click');
      $('#removeBox1').removeClass('box-on-click');
      $('#IRepBtnConcept').removeClass('top-bar-blue');
      $('#myRepsBtnConcept').addClass('addBorderBack');
      $('#liz').show("fast");
      $('#alice').show("fast");
      $('#richard').hide();
    });

  });

</script>

