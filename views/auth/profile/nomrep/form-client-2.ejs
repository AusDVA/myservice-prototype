<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Client Details Full: Nom Rep | MyService</title>
  <% include ../../../../partials/head.ejs %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../../partials/header-topbar.ejs %>
  <% include ../../../../partials/header-nom-rep.ejs %>
  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <div class="container margin-above--none">
        <h1 class="margin-above--none ss-align--center">
          <span class="heading">Client's contact details</span>
        </h1>
      </div>
    </div>
    <div class="container">
      <form class="pt-submit-form">
        <div class="form-group margin-above--large">
          <div class="row">
            <div class="col-sm-12">
              <fieldset class="margin-above--large">
                <legend>Client's contact details</legend><br />
                <div class="form-group">
                  <label class="uikit-text-input__label" for="emailAddress">Email address</label>
                  <input class="uikit-text-input input-half" name="emailAddress" id="emailAddress" type="text" value="">
                </div>
                <div class="form-group">
                  <label class="uikit-text-input__label" for="mobilePhoneNo">Mobile phone number</label>
                  <input class="uikit-text-input input-half" name="mobilePhoneNo" id="mobilePhoneNo" type="text" value="">
                </div>
                <div class="form-group">
                  <label class="uikit-text-input__label" for="homeNumber">Home phone number
                    <span class="hint display-block">Include your area code (for example, "03" for Victoria)</span>
                  </label>
                  <input class="uikit-text-input" name="homeNumber" id="homeNumber" type="text" value="">
                </div>

                <legend class="margin-above--mid">Postal address </legend>
                <% include ../../../../partials/address-postal.ejs %>
                <br>
                <legend>Client's residential address</legend>
                <div class="form-group">
                  <label class="uikit-control-input">
                    <input class="uikit-control-input__input sameAsPostal" type="checkbox" name="sameAsPostal" value="true" checked>
                    <span class="uikit-control-input__text">Same as postal address</span>
                  </label>
                </div>
                <div class="pt-showIfAdditionalAddress">
                  <% include ../../../../partials/address-residential.ejs %>
                </div>
            </div>
          </div>
        </div>
      </form>
      <div class="pagination">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile/nomrep/form-client-1'">Previous</button>
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#warning'">Cancel</button>
        <div class="floated">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile/nomrep/'">Save and exit</button>
          <button class="uikit-btn btnNext" id="btnNext">Save and next</button>
        </div>
      </div>
    </div>

    <div id="warning" class="modal-window">
      <div>
        <a href="#modal-close" title="Close" class="modal-close">Close</a>
        <h2>Your application will be cancelled</h2>
        <p>Are you sure you want to cancel this application?</p>
        <div class="modal-buttons">
          <button class="uikit-btn" onclick="window.location.href = '#modal-close'">Stay on this page</button>
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile/nomrep/'">Leave page</button>
        </div>
      </div>
    </div>



  </main>
  <% include ../../../../partials/footer.ejs %>


  <script>
    $('#btnNext').click(function () {

      event.stopImmediatePropagation();
      event.preventDefault();
      var data = ($('.pt-submit-form'));

      writeClient(data);

      window.location.href = '/auth/profile/nomrep/form-client-3';

    });

  </script>


</body>

</html>
