<script>

  function stateSwitcher() {

    $(".flag").hide();
    $(".box-info").hide();
    $(".edited1").hide();
    $(".added1").hide();

    switch (pageState) {
      case "default":
        $(".tophr").show();
        $(".declared").show();
        $("#save-exit").attr('disabled', 'disabled');
        $("#submit").attr('disabled', 'disabled');
        localStorage.setItem("coc-state", "default");
        break;
      case "update1":
        $(".edited1").show();
        $(".box-info").show();
        $("#save-exit").removeAttr('disabled');
        $("#submit").removeAttr('disabled');
        localStorage.setItem("coc-state", "update1");
        break;
      case "update2":
        $(".edited1").show();
        $(".added1").show();
        $(".box-info").show();
        $("#save-exit").removeAttr('disabled');
        $("#submit").removeAttr('disabled');
        localStorage.setItem("coc-state", "update2");
        break;
      default:
        break;
    }

    switch (assessed) {
      case "assets":
        $("#assets").show();
        $("#income").hide();
        break;
      case "income":
        $("#income").show();
        $("#assets").hide();
        break;
      default:
        break;
    }

  }


$("#linktosubmit").click(function() {
  $("html, body").animate(
    {
     scrollTop: $("#submit").offset().top
    },
      500
    );
});






</script>