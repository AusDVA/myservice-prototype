<!-- Open card -->
<div id="money-loaned-update-card" class="boxed margin-above margin-below" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-handshake fontawesome-icon"></span><span class="font-weight-heavy">Money loaned
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change",
      id: "date-change"
    }); %>
    <%- include(partials+"components/form-partials/text", {
      label: "Reason for deleting",
      hint: "(optional)"
    }); %>

    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" id="delete-bank-account" class="uikit-btn" onClick="confirmDeletePrePop('money-loaned-update')">Delete money
        loaned</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>

  </div>

  <div class="edit-content">
    <div class="review__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-handshake fontawesome-icon"></span><span class="font-weight-heavy">Money loaned
        </span></h2><button id="deleteButton"
        class="uikit-btn uikit-btn--tertiary small warning floated box__delete-button"
        onclick="deletePrePop('money-loaned-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <div class="review__table">
        <div class="tr">
          <div class="td"><b>Name of borrower</b></div>
          <div class="td">Sonny Jim</div>
        </div>
        <div class="tr">
          <div class="td"><b>Date loaned</b></div>
          <div class="td">12/02/2014</div>
        </div>
      </div>

      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
        label: "Balance of loan",
        modifiers: ["dollarSign"]
      }); %>

        <!-- start owner -->
        <div class="form-group margin-above--large">
          <label class="uikit-text-input__label" for="drop-down">Reason for variation</label>
          <select class="uikit-text-input input-half ownerType" name="drop-down">
            <option selected="selected">-- Select an item --</option>
            <option>Repayments</option>
            <option>Additional loan</option>
            <option>Gifts</option>
          </select>
        </div>

        <!-- start owner -->
        <div class="form-group margin-above--large partner" hidden>
          <label class="uikit-text-input__label" for="drop-down">Account owner</label>
          <select class="uikit-text-input input-half ownerType" name="drop-down">
            <option selected="selected">-- Select an item --</option>
            <option>Myself</option>
            <option>My partner</option>
            <option>Jointly with my partner</option>
          </select>
        </div>

        <%- include(partials+"components/form-partials/date", {
        label: "Date of change"
      }); %>

        <%- include(partials+"components/form-partials/notice", {
        message: "You will need to provide evidence of money loaned in the documents section."
      }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('money-loaned-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button> &nbsp;<button
        class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->