<!-- Summary card -->
<div id="money-loaned-update-summary" class="box boxed">
  <div class="box__header">
    <h2 class="box__heading">
      <i class="fal fa-handshake fontawesome-icon"></i>
      <span class="font-weight-heavy">Money loaned</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
      onClick="editCard('money-loaned-update');">&nbsp;Edit&nbsp;</button>
  </div>
  <div class="box__table">
    <div class="tr partner">
      <div class="td"><b>Lender</b></div>
      <div class="td">Jointly with my partner</div>
    </div>
    <div class="tr">
      <div class="td"><b>Date issued</b></div>
      <div class="td">12/12/2000</div>
    </div>
    <div class="tr">
      <div class="td"><b>Balance outstanding</b></div>
      <div class="td">$45,122.00</div>
    </div>
  </div>
  <div class="status-label status-label--edited margin-above" style="display: none !important;">EDITED</div>
</div>

<!-- Summary card deleted-->
<div id="money-loaned-update-summary-deleted" class="box boxed box--deleted" style="display: none;">
  <div class="box__header ">
    <h2 class="box__heading disabled-opacity">
      <i class="fal fa-handshake fontawesome-icon"></i>
      <span class="font-weight-heavy">Money loaned</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="undoDeletePrePop('money-loaned-update');">&nbsp;Undo delete&nbsp;</button>
  </div>
  <div class="box__table disabled-opacity">
    <div class="tr partner">
      <div class="td"><b>Lender</b></div>
      <div class="td">Jointly with my partner</div>
    </div>
    <div class="tr">
      <div class="td"><b>Date issued</b></div>
      <div class="td">12/12/2000</div>
    </div>
    <div class="tr">
      <div class="td"><b>Balance outstanding</b></div>
      <div class="td">$45,122.00</div>
    </div>
  </div>
  <div class="status-label status-label--deleted margin-above" style="display: none;">DELETED</div>
</div>

<!-- Open card -->
<div id="money-loaned-update-card" class="box boxed box--open" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-handshake fontawesome-icon"></span><span class="font-weight-heavy">Money loaned
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change/disposal"
    }); %>
   
    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" id="delete-bank-account" class="uikit-btn"
        onClick="confirmDeletePrePop('money-loaned-update')">Delete</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>
  </div>
  <div class="edit-content">
    <div class="box__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-handshake fontawesome-icon"></span><span class="font-weight-heavy">Money loaned
        </span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning box__delete-button "
        onclick="deletePrePop('money-loaned-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <!-- <h3>Last submitted:</h3> -->
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Name of borrower</b></div>
          <div class="td">Sonny Jim</div>
        </div>
        <div class="tr partner">
          <div class="td"><b>Lender</b></div>
          <div class="td">Jointly with my partner</div>
        </div>
        <div class="tr">
          <div class="td"><b>Date loaned</b></div>
          <div class="td">12/02/2014</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
          label: "Balance of loan",
          modifiers: ["dollarSign"]
        }); %>
  
          <!-- start owner -->
          <div class="form-group margin-above--large">
            <label class="uikit-text-input__label" for="drop-down">Reason for loan variation</label>
            <select class="uikit-text-input input-half ownerType" name="drop-down">
              <option selected="selected">-- Select an item --</option>
              <option>Repayments</option>
              <option>Additional loan</option>
              <option>Gifts</option>
            </select>
          </div>
  
          <%- include(partials+"components/form-partials/date", {
          label: "When did the change occur?"
        }); %>
  
          <%- include(partials+"components/form-partials/notice", {
          message: "You will need to provide evidence of money loaned in the documents section."
        }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('money-loaned-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button> &nbsp;<button
        class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->