<script>

  $("#perm-close-container").prop('checked', false);
  $("#perm-close-container").on("change", "input[type='radio']", function () {
      if ($(this).val() === "yes") {
        $("#delete-bank-account").removeAttr('disabled');
      } else {
        $("#delete-bank-account").attr('disabled','disabled');
      }
    })

    $("#delete-bank-account").on("click", function () {
      $("#bank-accounts-card").hide();
      $("#bank-accounts-summary-deleted").show();
      $("#add-anchor-link-return").show();
    })

    $("#cancel-delete").on("click", function () {
      $(".delete-content").hide();
      $(".edit-content").show();

      // cancelCard(cardType)
    })


</script>
