<!-- Summary card -->
<div id="maintenance-update-summary" class="box boxed">
  <div class="box__header">
    <h2 class="box__heading">
      <i class="fal fa-hand-holding-usd fontawesome-icon"></i>
      <span class="font-weight-heavy">Maintenance payments</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
      onClick="editCard('maintenance-update');">&nbsp;Edit&nbsp;</button>
  </div>
  <div class="box__table">
    <div class="tr">
      <div class="td"><b>Paid by</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment amount</b></div>
      <div class="td">$2400</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment frequency</b></div>
      <div class="td">Fortnightly</div>
    </div>
  </div>
  <div class="status-label status-label--edited margin-above" style="display: none !important;">EDITED</div>
</div>

<!-- Summary card deleted-->
<div id="maintenance-update-summary-deleted" class="box boxed box--deleted" style="display: none;">
  <div class="box__header ">
    <h2 class="box__heading disabled-opacity">
      <i class="fal fa-hand-holding-usd fontawesome-icon"></i>
      <span class="font-weight-heavy">Maintenance payments</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="undoDeletePrePop('maintenance-update');">&nbsp;Undo delete&nbsp;</button>
  </div>
  <div class="box__table disabled-opacity">
    <div class="tr">
      <div class="td"><b>Paid by</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment amount</b></div>
      <div class="td">$2400</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment frequency</b></div>
      <div class="td">Fortnightly</div>
    </div>
  </div>
  <div class="status-label status-label--deleted margin-above" style="display: none;">DELETED</div>
</div>

<!-- Open card -->
<div id="maintenance-update-card" class="box boxed box--open" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-hand-holding-usd fontawesome-icon"></span><span class="font-weight-heavy">Maintenance payments
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change/disposal"
    }); %>
   
    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" class="uikit-btn"
        onClick="confirmDeletePrePop('maintenance-update')">Delete</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>
  </div>
  <div class="edit-content">
    <div class="box__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-hand-holding-usd fontawesome-icon"></span><span class="font-weight-heavy">Maintenance paid to former partner
        </span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning box__delete-button "
        onclick="deletePrePop('maintenance-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <!-- <h3>Last submitted:</h3> -->
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Paid by</b></div>
          <div class="td">Myself</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
        label: "Payment amount",
        modifiers: ["dollarSign"]
      }); %>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="drop-down">Frequency</label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
            <option selected="selected">-- Select one --</option>
            <option>Weekly</option>
            <option>Fortnightly</option>
            <option>Monthly</option>
            <option>Quarterly</option>
            <option>Half yearly</option>
            <option>Annually</option>
            <option>Once off</option>
        </select>
    </div>

        <%- include(partials+"components/form-partials/date", {
        label: "When did the change occur?"
      }); %>

      <%- include(partials+"components/form-partials/notice", {
        message: "You will need to provide evidence of maintenance paid to a former partner in the documents section."
      }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('maintenance-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button> &nbsp;<button
        class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->