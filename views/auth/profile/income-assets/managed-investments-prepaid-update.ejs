<!-- Open card -->
<div id="managed-investments-prepaid-update-card" class="boxed margin-above margin-below" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-file-certificate fontawesome-icon"></span><span class="font-weight-heavy">Managed investments,
        funeral bonds and pre paid funerals
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change",
      id: "date-change"
    }); %>
    <%- include(partials+"components/form-partials/text", {
      label: "Reason for deleting",
      hint: "(optional)"
    }); %>

    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" id="delete-bank-account" class="uikit-btn"
        onClick="confirmDeletePrePop('managed-investments-prepaid-update')">Delete managed investments</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>

  </div>
  <div class="edit-content">
    <div>
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-file-certificate fontawesome-icon"></span><span class="font-weight-heavy">Managed investments,
          funeral bonds and pre-paid funerals
        </span></h2><button id="deleteButton"
        class="uikit-btn uikit-btn--tertiary small warning floated box__delete-button"
        onclick="deletePrePop('managed-investments-prepaid-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <!-- <h3>Last submitted:</h3> -->
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Investment type</b></div>
          <div class="td">Pre-paid funeral</div>
        </div>
        <div class="tr">
          <div class="td"><b>Description</b></div>
          <div class="td">XYZ investments</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
        label: "Amount invested in pre-paid funeral",
        modifiers: ["dollarSign"]
      }); %>

        <!-- start owner -->
        <div class="form-group margin-above--large owner-partner" hidden>
          <label class="uikit-text-input__label" for="drop-down">Account owner</label>
          <select class="uikit-text-input input-half ownerType" name="drop-down">
            <option selected="selected">-- Select an item --</option>
            <option>Myself</option>
            <option>My partner</option>
            <option>Jointly with my partner</option>
            <option>Jointly with any other party</option>
          </select>
        </div>
        <div class="form-group margin-above--large owner-single">
          <label class="uikit-text-input__label" for="drop-down">Account owner</label>
          <select class="uikit-text-input input-half ownerType" name="drop-down">
            <option selected="selected">-- Select an item --</option>
            <option>Myself</option>
            <option>Jointly with any other party</option>
          </select>
        </div>
        <div class="form-group margin-above--large other-party-amount" style="display: none;">
          <label class="uikit-text-input__label" for="Input field">% Owned</label>
          <input class="uikit-text-input input-small" name="Input field" id="Input field" type="text" value="" required
            aria-required="true">
        </div>


        <%- include(partials+"components/form-partials/date", {
        label: "Date of change"
      }); %>

        <%- include(partials+"components/form-partials/notice", {
        message: "You will need to provide a copy of the pre-paid funeral plan or any other supporting document in the documents section."
      }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('managed-investments-prepaid-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button>
      &nbsp;<button class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
