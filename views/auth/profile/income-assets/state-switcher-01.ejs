<div id="state-switcher">
  <h3>State switcher</h3>

  <%- include(partials+"components/form-partials/radio", {
    label: "State",
    boxes: [
      "Default",
      "Update 1",
      "Update 2"
    ],
    id: "page-state"
  }); %>

</div>

<script>

  var pageState;

  $(document).ready(function () {
    $(document).keypress(function (e) {
      switch (e.which) {
        case 96: //tilda
          $('#state-switcher').toggle();
          break;
        default:
      }
    });

    if (localStorage.getItem("updates") === "true") {
      pageState = "update1";
      $("#page-state-2").prop("checked", true);
    } else {
      pageState = "default";
      $("#page-state-1").prop("checked", true)
    }

    $('input[name=page-state]').change(function () {
      pageState = $(this).val();
      stateSwitcher();
    });

    stateSwitcher();

  });

</script>