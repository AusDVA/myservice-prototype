<%- include(templates+"header", {
  claim: "Profile - Income & Assets", 
  heading: "Shares"
}) %>

<script src="/docs/js/income-assets-profile.js"></script>


<style>
  .updated {
    border-radius: 0px;
    background-color: #2B7DCE;
    display: inline-block;
    font-size: 12px;
    font-weight: bold;
    color: white;
    padding: 0 5px 0 5px;
    text-transform: capitalize;
    display: none;
  }

  .deleted {
    border-radius: 0px;
    background-color: red;
    display: inline-block;
    font-size: 12px;
    font-weight: bold;
    color: white;
    padding: 0 5px 0 5px;
    text-transform: capitalize;
  }
</style>

<!-- User list and category messaging -->
<div id="user-list">
  <hr class="margin-below--none">
  <h2 class="margin-above--none heading-width">
    <span class="fal fa-list-alt fa-icons"></span><span class="partner-label">My</span> bank accounts
  </h2>
  <div id="add-anchor-link-return" class="cursor-pointer-right" onClick="showNewCard('bank-accounts-new');">
    <p style="margin-top: 10px;">
      <span class="fal fa-plus-circle fa-icons"></span>Add bank account
    </p>
  </div>
</div>
<div id="add-anchor-link-start" class="cursor-pointer" onClick="scrollToAdd();" hidden>
  <p class="margin-above--extra margin-below--extra ss-align--center">
    <span class="fal fa-plus-circle fa-icons"></span>Add bank account
  </p>
</div>
<!-- Cards -->
<%- include("income-assets--bank-accounts-update") %>
<%- include("income-assets--bank-accounts-add") %>
<div id="main-pagination" class="pagination" style="position: relative;">
  <button id="continue" class="uikit-btn btnNext" onClick="goBack()">Back to list</button>
</div>
</div>

<%- include(partials+"components/layout/footer") %>
<%- include("bank-accounts-ss") %>

<script>

  function stateSwitcher() {

    switch (pageState) {
      case "emptylist":
        $("#bank-accounts-summary").hide();
        $("#add-anchor-link-start").show();
        $("#add-anchor-link-return").hide();
        break;
      case "populatedlist":
        $("#bank-accounts-summary").show();
        $("#add-anchor-link-start").hide();
        $("#add-anchor-link-return").show();
        break;
      default:
        break;
    }

  }

  function goBack() {
    if ($("#bank-accounts-summary").is(":visible")) localStorage.setItem("coc-state", "update1");
    // if ($("#bank-accounts-summary").is(":visible") && $("#bank-accounts-new-summary").is(":visible")) localStorage.setItem("coc-state", "update2");
    window.location.href = 'start.ejs';
  }

</script>
