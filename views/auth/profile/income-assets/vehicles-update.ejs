<!-- Summary card -->
<div id="vehicles-update-summary" class="plain-text-info box" style="display:block;">
  <div class="review__wrapper">
    <div class="review__content--item boxed">
      <div class="review__content--label review__header margin-below">
        <h2 class="margin-above--none" style="display: inline-block;">
          <i class="fal fa-car fontawesome-icon"></i>
          <span class="font-weight-heavy">Vehicles</span>
        </h2>
        <button class="uikit-btn uikit-btn--tertiary small floated"
          onClick="editCard('vehicles-update');">&nbsp;Edit&nbsp;</button>
      </div>
      <div class="review__table">
        <div class="tr">
          <div class="td"><b>Vehicle type</b></div>
          <div class="td">Car</div>
        </div>
        <div class="tr">
          <div class="td"><b>Vehicle description</b></div>
          <div class="td">2015 Audi Q5</div>
        </div>
        <div class="tr">
          <div class="td"><b>Market value</b></div>
          <div class="td">$35,600</div>
        </div>
      </div>
      <div class="status-label status-label--edited margin-above">EDITED</div>
    </div>
  </div>
</div>
