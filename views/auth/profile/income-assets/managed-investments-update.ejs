<!-- Summary card -->
<div id="managed-investments-update-summary" class="box boxed">
  <div class="box__header">
    <h2 class="box__heading">
      <i class="fal fa-file-certificate fontawesome-icon"></i>
      <span class="font-weight-heavy">Managed investments, funeral bonds and pre-paid funerals</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small .box__edit-button"
      onClick="editCard('managed-investments-update');">&nbsp;Edit&nbsp;</button>
  </div>
  <div class="box__table">
    <div class="tr">
      <div class="td"><b>Investment type</b></div>
      <div class="td">Managed investment</div>
    </div>
    <div class="tr">
      <div class="td"><b>Owner</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Description</b></div>
      <div class="td">APC funds</div>
    </div>
  </div>
  <div class="status-label status-label--edited margin-above" style="display: none !important;">EDITED</div>
</div>
<!-- Summary card deleted-->
<div class="box boxed box--deleted" id="managed-investments-update-summary-deleted" style="display:none;">
  <div class="box__header">
    <h2 class=" box__heading disabled-opacity">
      <i class="fal fa-file-certificate fontawesome-icon"></i>
      <span class="font-weight-heavy">Managed investments, funeral bonds and pre-paid funerals</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="undoDeletePrePop('managed-investments-update');">&nbsp;Undo delete&nbsp;</button>
  </div>
  <div class="box__table disabled-opacity">
    <div class="tr">
      <div class="td"><b>Investment type</b></div>
      <div class="td">Managed investment</div>
    </div>
    <div class="tr">
      <div class="td"><b>Owner</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Description</b></div>
      <div class="td">APC funds</div>
    </div>
  </div>
  <div class="status-label status-label--deleted margin-above">DELETED</div>
</div>
<!-- Open card -->
<div id="managed-investments-update-card" class="box boxed box--open" style="display: none;">
  <div class="delete-content" hidden>
    <div class="review__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-file-certificate fontawesome-icon"></span><span class="font-weight-heavy">Managed investments,
          funeral bonds and pre paid funerals
        </span></h2>
    </div>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change",
      id: "date-change"
    }); %>
    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" id="delete-bank-account" class="uikit-btn"
        onClick="confirmDeletePrePop('managed-investments-update')">Delete managed investments</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>
  </div>
  <div class="edit-content">
    <div class="box__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-file-certificate fontawesome-icon"></span><span class="font-weight-heavy">Managed investments,
          funeral bonds and pre paid funerals</span></h2><button id="deleteButton"
        class="uikit-btn uikit-btn--tertiary small warning box__delete-button"
        onclick="deletePrePop('managed-investments-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Investment type</b></div>
          <div class="td">Managed investment</div>
        </div>
        <div class="tr">
          <div class="td"><b>Description</b></div>
          <div class="td">APC funds</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
        label: "Amount invested",
        modifiers: ["dollarSign"]
      }); %>
       
        <%- include(partials+"components/form-partials/date", {
        label: "When did the change occur?"
      }); %>

        <%- include(partials+"components/form-partials/notice", {
        message: "You will need to provide a copy of the latest statement for this fund in the documents section."
      }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('managed-investments-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button>
      &nbsp;<button class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->