<!-- Summary card -->
<div id="foreign-pension-update-summary" class="box boxed">
  <div class="box__header">
    <h2 class="box__heading">
      <i class="fal fa-passport fontawesome-icon"></i>
      <span class="font-weight-heavy">Foreign pension</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="editCard('foreign-pension-update');">&nbsp;Edit&nbsp;</button>
  </div>
  <div class="box__table">
    <div class="tr">
      <div class="td"><b>Payment recipient</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Type of payment</b></div>
      <div class="td">British State Pension</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment amount</b></div>
      <div class="td">$12,000.00</div>
    </div>
    <div class="tr">
      <div class="td"><b>Payment frequency</b></div>
      <div class="td">Fortnightly</div>
    </div>
  </div>
  <div class="status-label status-label--edited margin-above" style="display: none !important;">EDITED</div>
</div>

