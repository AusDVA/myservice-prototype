<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Service Pension - Financial details | Savings</title>
  <%- include(partials+"components/layout/head") %>
  <script src="/docs/js/income-assets-profile.js"></script>
</head>

<style>
  .updated {
    border-radius: 0px;
    background-color: #2B7DCE;
    display: inline-block;
    font-size: 12px;
    font-weight: bold;
    color: white;
    padding: 0 5px 0 5px;
    text-transform: capitalize;
    display: none;
  }
</style>


<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-nom-rep") %>
  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">

      <h1 class="margin-above--none ss-align--center"><span class="heading">Bank accounts</span></h1>
    </div>
    <section>
      <div class="container margin-above margin-below--extra">
        <div class="row">
          <div class="col-md-offset-2 col-md-8 margin-below--large">
            <!-- User list and category messaging -->
            <div id="user-list">
              <hr class="margin-below--none">
              <h2 class="margin-above--none heading-width">
                <span class="fal fa-list-alt fa-icons"></span><span class="partner-label">My</span> bank accounts
              </h2>
              <div id="add-anchor-link-return" class="cursor-pointer-right" onClick="scrollToAdd();">
                <p style="margin-top: 10px;">
                  <span class="fal fa-plus-circle fa-icons"></span>Add bank account
                </p>
              </div>
            </div>
            <!-- <div id="add-anchor-link-start" class="cursor-pointer" onClick="scrollToAdd();">
                  <p class="margin-above--extra ss-align--center">
                    <span class="fal fa-plus-circle fa-icons"></span>Add savings
                  </p>
                </div> -->
            <!-- Cards -->
            <%- include("income-assets--bank-accounts") %>
            <%- include("income-assets--bank-accounts-new") %>

            <div class="pagination" style="position: relative;">
              <div id="footer-buttons-mask" style="background-color: #ffffff; opacity: .5; position: absolute; width: 100%; height: 100%; z-index: 10; display: none;"></div>
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/profile/income-assets/start'">Previous</button>
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = 'start'">Cancel</button>
              <div class="floated">
                <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim'">Save and exit</button>
                <button class="uikit-btn btnNext" onClick="goBack()">Save and next</button>
              </div>
            </div>
          </div>
        </div>
    </section>
  </main>
  <%- include(partials+"components/layout/footer") %>
  <script>
    $(Document).ready(function () {

      $(document).keypress(function (e) {
        switch (e.which) {
          case 49:
            hidePartner();
            break;
          case 50:
            showPartner();
            break;
          default:
        }
      });

      captureUserList();
      displayUserList();

      function showPartner() {
        $(".partner").show();
        $(".partner-label").text("Our");
      }

      function hidePartner() {
        $(".partner").hide();
        $(".partner-label").text("My");
      }

    });

    function goBack() {
      if ($("#bank-accounts-summary").is(":visible")) localStorage.setItem("coc-state", "update1");
      if ($("#bank-accounts-summary").is(":visible") && $("#bank-accounts-new-summary").is(":visible")) localStorage.setItem("coc-state", "update2");
      window.location.href = 'start.ejs';
    }
  </script>
</body>

</html>