<!-- Summary card -->
<div id="businesses-update-summary" class="box boxed">
  <div class="box__header">
    <h2 class="box__heading">
      <i class="fal fa-store fontawesome-icon"></i>
      <span class="font-weight-heavy">Businesses</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="editCard('businesses-update');">&nbsp;Edit&nbsp;</button>
  </div>
  <div class="box__table">
    <div class="tr">
      <div class="td"><b>Owner</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Type of business</b></div>
      <div class="td">Private company</div>
    </div>
    <div class="tr">
      <div class="td"><b>Business name</b></div>
      <div class="td">Fruits are cool</div>
    </div>
  </div>
  <div class="status-label status-label--edited margin-above" style="display: none !important;">EDITED</div>
</div>

<!-- Summary card deleted-->
<div id="businesses-update-summary-deleted" class="box boxed box--deleted" style="display: none;">
  <div class="box__header ">
    <h2 class="box__heading disabled-opacity">
      <i class="fal fa-store fontawesome-icon"></i>
      <span class="font-weight-heavy">Businesses</span>
    </h2>
    <button class="uikit-btn uikit-btn--tertiary small"
    onClick="undoDeletePrePop('businesses-update');">&nbsp;Undo delete&nbsp;</button>
  </div>
  <div class="box__table disabled-opacity">
    <div class="tr">
      <div class="td"><b>Owner</b></div>
      <div class="td">Myself</div>
    </div>
    <div class="tr">
      <div class="td"><b>Type of business</b></div>
      <div class="td">Private company</div>
    </div>
    <div class="tr">
      <div class="td"><b>Business name</b></div>
      <div class="td">Fruits are cool</div>
    </div>
  </div>
  <div class="status-label status-label--deleted margin-above" style="display: none;">DELETED</div>
</div>

<!-- Open card -->
<div id="businesses-update-card" class="box boxed box--open" style="display: none;">
  <div class="delete-content" hidden>
    <h2 class="margin-above--none" style="display: inline-block;"><span
        class="fal fa-store fontawesome-icon"></span><span class="font-weight-heavy">Businesses
      </span></h2>
    <hr style="margin-top: 10px; max-bottom: 0;">
    <%- include(partials+"components/form-partials/date", {
      label: "Date of change/disposal"
    }); %>
   
    <div class="pagination pagination--ss-reverse-order   margin-above--extra" id="pagination700">
      <a href="#" class="uikit-btn"
        onClick="confirmDeletePrePop('businesses-update')">Delete</a>
      <a href="#" id="cancel-delete" class="uikit-btn uikit-btn--tertiary" onClick="cancelDeletePrePop()">Cancel</a>
    </div>
  </div>
  <div class="edit-content">
    <div class="box__header">
      <h2 class="margin-above--none" style="display: inline-block;"><span
          class="fal fa-store fontawesome-icon"></span><span class="font-weight-heavy">Businesses
        </span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning box__delete-button "
        onclick="deletePrePop('businesses-update');">&nbsp;Delete item&nbsp;</button>
    </div>
    <div id="card-details" class="margin-below--large">
      <!-- <h3>Last submitted:</h3> -->
      <div class="box__table">
        <div class="tr">
          <div class="td"><b>Owner</b></div>
          <div class="td">Myself</div>
        </div>
        <div class="tr">
          <div class="td"><b>Type of business</b></div>
          <div class="td">Private company</div>
        </div>
        <div class="tr">
          <div class="td"><b>Business name</b></div>
          <div class="td">Fruits are cool</div>
        </div>
      </div>
      <hr>
      <form id="myForm">
        <input type="reset" style="display:none">

        <%- include(partials+"components/form-partials/text", {
        label: "Estimated net income from business/company/trust",
        modifiers: ["dollarSign"]
      }); %>

      <div class="form-group margin-above--large">
        <label class="uikit-text-input__label" for="drop-down">Frequency</label>
        <select class="uikit-text-input input-half" id="drop-down" name="drop-down">
            <option selected="selected">-- Select one --</option>
            <option>Weekly</option>
            <option>Fortnightly</option>
            <option>Monthly</option>
            <option>Quarterly</option>
            <option>Half yearly</option>
            <option>Annually</option>
            <option>Once off</option>
        </select>
    </div>

    <%- include(partials+"components/form-partials/yes_no", {
      label: "Did the business generate income from your gainful work?",
      tooltip: {
        screenreaderText: "Help",
        content: `Gainful work is work that involves personal exertion on the part of the person concerned. Gainful work does not include:<ul><li>management of financial investments owned by your family or family company.</li><li>management of property leased by your family or family company or</li><li>domestic duties in association with your home</li></ul>`
      }
    }); %>

    <%- include(partials+"components/form-partials/yes_no", {
      label: "Did the business generate income from your partner's gainful work?",
      tooltip: {
        screenreaderText: "Help",
        content: `Gainful work is work that involves personal exertion on the part of the person concerned. Gainful work does not include:<ul><li>management of financial investments owned by your family or family company.</li><li>management of property leased by your family or family company or</li><li>domestic duties in association with your home</li></ul>`
      },
      customClass: "partner",
      modifiers: ["hidden"]
    }); %>
   
    <%- include(partials+"components/form-partials/text", {
      label: "Value of the business/company/trust",
      modifiers: ["dollarSign"]
    }); %>

    <%- include(partials+"components/form-partials/date", {
      label: "Date of change"
    }); %>

      </form>
    </div>
    <hr>
    <div id="buttonset2" class="form-group margin-above--none">
      <button id="addButton" class="uikit-btn"
        onclick="addSummary('businesses-update');">&nbsp;&nbsp;&nbsp;Save&nbsp;&nbsp;&nbsp;</button> &nbsp;<button
        class="uikit-btn uikit-btn--tertiary"
        onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
    </div>
  </div>
</div>
<!-- card end -->