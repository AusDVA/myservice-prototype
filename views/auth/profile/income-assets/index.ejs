<!DOCTYPE html>
<html class="js" lang="en">

<head>

  <title>MyService</title>
  <%- include(partials+"components/layout/head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor future nom-reps">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>


  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-authenticated") %>

  <main>
    <section>
      <div class="container margin-above margin-below--extra" id="claim-activity">
        <section class="">
          <div class="row margin-above">
            <div class="col-sm-3">
              <%- include(partials+"components/layout/profile-side-nav") %>
            </div>
            <div class="col-sm-9">
              <h1 class="margin-above--none margin-below--mid">Income and assets</h1>
              <p>You are required to advise of any changes to your income and assets within 14 days. You can track the
                progress of your submitted updates below. Processing times will vary based upon the types of changes you
                report.</p>

                <%- include(partials+"components/form-partials/notice", {
                  message: "You have income and assets items recorded that are jointly owned, or owned by your partner. For the ongoing management of these items you should <a href='/auth/profile/partner-consent'>provide your partner's consent</a>.",
                  id: ["no-consent-message"],
                  modifiers: ["hidden1"]
                }); %>

              <button class="uikit-btn uikit-btn--primary"
                onclick="location.href='/auth/profile/income-assets/start'">Get started</button>

                <hr>

                <p id="statement" class="margin-above--large" hidden><b>Current income and assets statement:</b><BR/><a href="#open-request-modal">Request statement by email</a></b>

              <%- include("transactions-table"); %>

              

        </section>
        <div id="statement-success" class="toast-container" style="display: none;">
          <button class="uikit-btn toast" role="alert" type="button">
            <div class="toast__type toast__type--success">
              <span class="sr">Success</span>
            </div>
            <div class="toast__message">
              <p>Your request has been submitted successfully.</p>
            </div>
          </button>
        </div>
      </div>
    </section>
  </main>
  <%- include(partials+"components/layout/footer") %>
  <%- include("index-ss") %>
  <%- include("request-confirm-modal") %>
</body>
<script>

  var updates = localStorage.getItem("updates");
  if (updates == "true") {

  } else {

  }

  function stateSwitcher() {

    $("#past-transactions").hide();
    $("#sixmonth-message").hide();
    $("#more-transactions").hide();

    switch (pastTransactions) {
      case "none":
      $("#statement").show();
        break;
      case "one":
        $("#past-transactions").show();
        $("#more-transactions").hide();
        $("#one-transaction").show();
        $("#statement").hide();
        break;
      case "many":
        $("#one-transaction").hide();
        $("#past-transactions").show();
        $("#card-hidden").hide();
        $("#more-transactions").show();
        $("#sixmonth-message").show();
        $("#statement").hide();
        break;
      default:
        break;
    }
  }

</script>

</html>