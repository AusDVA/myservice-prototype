                <label class="uikit-text-input__label" for="add-detail">Add income or assets</label>
                <select class="uikit-text-input" id="add-detail" name="add-detail">
                  <option>-- Select income or asset type --</option>
                  <optgroup label="Assets (financial)">
                    <option>Financial institution accounts</option>
                    <option>Shares</option>
                    <option>Managed investments</option>
                    <option>Bonds and Debentures</option>
                    <option>Money loaned</option>
                    <option>Gifts</option>
                    <option value="/profile-financial-other">Other financial assets</option>
                  </optgroup>
                  <optgroup label="Assets (personal)">
                    <option>Life insurance</option>
                    <option>Vehicles</option>
                  </optgroup>
                  <optgroup label="Income / payments">
                    <option>Employment income</option>
                    <option>Purchased annuities and pensions</option>
                  </optgroup>
                  <optgroup label="Other items">
                    <option>Real estate</option>
                    <option value="/profile-farm">Farm</option>
                    <option>Superannuation / rollover funds</option>
                  </optgroup>
                </select><button class="uikit-btn small add-btn" onclick="goToPage()">Add</button>
              </div>
            </div>

