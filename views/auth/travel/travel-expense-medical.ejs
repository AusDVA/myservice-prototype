<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Application for a DHOAS Subsidy Certificate | MyService</title>
  <% include ../../../partials/head.ejs %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../partials/header-topbar.ejs %>
  <% include ../../../partials/header-claims.ejs %>
  <% include ../../../partials/header-nom-rep.ejs %>

  <main id="main-content">
    <div class="container">
      <div id="progressbar">
        <div id="percentage">
          <p id="percentage_value"></p>
        </div>

      </div>
      <h1>
        <span class="heading">Medical</span>
      </h1>

      <div class="form-group" id="subsidy">
        <fieldset>
          <legend class="legend-label">List the general practioners and/or other treating practitioners you have visited relating to this claim for reimbursement. Your doctors may
            be contacted during the assessment
          </legend>
        </fieldset>
      </div>
      <div class="form-group">
        <label class="uikit-text-input__label" for="Input field">Amount paid:</label>
        <span class="hint">$ </span><input class="uikit-text-input input-half" name="Input field" id="roadTolls" type="text" value="" aria-required="true">
        <label class="uikit-text-input__label" for="Input field">Amount paid:</label>
        <span class="hint">$ </span><input class="uikit-text-input input-half" name="Input field" id="roadTolls" type="text" value="" aria-required="true">
        <label class="uikit-text-input__label" for="Input field">Amount paid:</label>
        <span class="hint">$ </span><input class="uikit-text-input input-half" name="Input field" id="roadTolls" type="text" value="" aria-required="true">
        <label class="uikit-text-input__label" for="Input field">Amount paid:</label>
        <span class="hint">$ </span><input class="uikit-text-input input-half" name="Input field" id="roadTolls" type="text" value="" aria-required="true">
        <label class="uikit-text-input__label" for="Input field">Amount paid:</label>
        <span class="hint">$ </span><input class="uikit-text-input input-half" name="Input field" id="roadTolls" type="datetime-local" value="" aria-required="true">
      </div>

      <div class="form-group">
        <div class="travel-medical-header">
          <legend class="legend-label">Other treating practioners <span class="hint">(optional)</span> </legend>
          <span class="hint">Includes audiologists, psychiatrists, etc.</span>
        </div>
        <div class="row travel-medical-table margin-above--extra">
          <div class="col-md-3">
            <label class="uikit-text-input__label" for="Input field">Dr stevens</label>
          </div>
          <div class="col-md-5">
            <label class="uikit-text-input__label" for="Input field">Winnunga medical centre, Ngunnawal <i>02 6262 6262</i></label>
          </div>
          <div class="col-md-4">
            <div class="floated">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#'">Edit</button>
              <button class="uikit-btn uikit-btn--tertiary">Remove</button>
            </div>
          </div>
        </div>
        <div class="row travel-medical-table" id="hideOne" style="display:none;">
          <div class="col-md-3">
            <label class="uikit-text-input__label" for="Input field">Dr stevens</label>
          </div>
          <div class="col-md-5">
            <label class="uikit-text-input__label" for="Input field">Winnunga medical centre, Ngunnawal <i>02 6262 6262</i></label>
          </div>
          <div class="col-md-4">
            <div class="floated">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#'">Edit</button>
              <button class="uikit-btn uikit-btn--tertiary" id="removeOne">Remove</button>
            </div>
          </div>
        </div>
        <div class="row travel-medical-table" id="hideTwo" style="display:none;">
          <div class="col-md-3">
            <label class="uikit-text-input__label" for="Input field">Dr stevens</label>
          </div>
          <div class="col-md-5">
            <label class="uikit-text-input__label" for="Input field">Winnunga medical centre, Ngunnawal <i>02 6262 6262</i></label>
          </div>
          <div class="col-md-4">
            <div class="floated">
              <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#'">Edit</button>
              <button class="uikit-btn uikit-btn--tertiary" id="removeTwo">Remove</button>
            </div>
          </div>
        </div>
        <div class="row travel-medical-table add-btn">
          <div class="col-md-12">
            <div class="floated">
              <button id="addDrBtn" class="uikit-btn uikit-btn--tertiary">Add</button>
            </div>
          </div>
        </div>
      </div>

      <div class="pagination margin-above--extra">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel application</button>
        <div class="floated">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '/auth/claim'">Save and exit</button>
          <button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/dhoas2'">Save and next</button>
        </div>
      </div>

  </main>

  <% include ../../../partials/footer.ejs %>


  <script>
    // Progress percentage
    document.getElementById("percentage").style.width = "50%";
    document.getElementById("percentage_value").textContent = "50%";

    $("#addDrBtn").click(function () {
      $('.travel-medical-table').show("fast");
    });
    $('#removeOne').click(function () {
      $('#hideOne').hide("fast");
    });
    $('#removeTwo').click(function () {
      $('#hideTwo').hide("fast");
    });

  </script>


</body>

</html>
