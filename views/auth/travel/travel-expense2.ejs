<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Application for a DHOAS Subsidy Certificate | MyService</title>
  <%- include(partials+"head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"header-topbar") %>
  <%- include(partials+"header-claims") %>
  <%- include(partials+"header-nom-rep") %>

  <main id="main-content">
    <div class="container">
      <div id="progressbar">
        <div id="percentage">
          <p id="percentage_value"></p>
        </div>

      </div>
      <h1>
        <span class="heading">Getting started</span>
      </h1>

      <div class="form-group" id="subsidy">
        <fieldset>
          <legend class="legend-label">Select the condition you were treated for
            <span class="hint">(tick all applicable boxes)</span>
          </legend>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input class="uikit-control-input__input" type="checkbox" name="subsidy">
              <span class="uikit-control-input__text">lumbar spondylosis</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input class="uikit-control-input__input" type="checkbox" name="subsidy">
              <span class="uikit-control-input__text">tinnitus</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input class="uikit-control-input__input" type="checkbox" name="subsidy" id="dhoas">
              <span class="uikit-control-input__text">hearing loss</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input class="uikit-control-input__input" type="checkbox" name="subsidy" id="dhoas">
              <span class="uikit-control-input__text">depression</span>
            </label>
          </p>
          <p class="uiToolKitCheckBox">
            <label class="uikit-control-input">
              <input class="uikit-control-input__input" type="checkbox" name="subsidy" id="dhoas">
              <span class="uikit-control-input__text">solar keratosis</span>
            </label>
          </p>
          <div class="form-group form-group--secondary" id="why-lodge" style="display:none;">
            <label class="uikit-text-input__label" for="why-lodge">I can't see my condition in this list
            </label>
            <input class="uikit-text-input" name="why-lodge" id="another-dhoas-reason" type="text" value="" required="" aria-required="true">
          </div>
      </div>
      </fieldset>


      <div class="pagination margin-above--extra">
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel application</button>
        <div class="floated">
          <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#'">Save and exit</button>
          <button class="uikit-btn btnNext" id="btnNext" onclick="window.location.href = '/travel-expense-medical'">Save and next</button>
        </div>
      </div>
    </div>

  </main>

  <%- include(partials+"footer") %>


  <script>
    // Progress percentage
    document.getElementById("percentage").style.width = "20%";
    document.getElementById("percentage_value").textContent = "20%";

  </script>


</body>

</html>
