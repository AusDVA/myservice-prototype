<script>

  function stateSwitcher() {

    $("#past-transactions").hide();
    switch (pastTransactions) {
      case "none":
        break;
      case "some":
        $("#past-transactions").show();
        $("#card-hidden").show();
        break;
      default:
        break;
    }
  }

  $.urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)')
      .exec(window.location.href);
    if (results == null) {
      return 0;
    }
    return results[1] || 0;
  }
  var toast = $.urlParam('toast');
  switch (toast) {
    case "item-added":
      pastTransactions = "some";
      stateSwitcher();
      $("#toast").show()
      break;
    default:
      break;
  }

</script>

</html>