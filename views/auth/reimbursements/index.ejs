<script>

  $("#claim-type").click(function () {
    $("#claim-type").toggleClass("dropdown--open");
    $(".dropdown__icon").toggleClass("down");
  });

  function stateSwitcher() {
    $("#blank").hide();
    $("#medical-1").hide();
    $("#travel-1").hide();
    switch (pastTransactions) {
      case "none":
        $("#blank").show();
        break;
      case "medical":
        $("#medical-1").show();
        break;
      case "travel":
        $("#travel-1").show();
        break;
      case "both":
        $("#medical-1").show();
        $("#travel-1").show();
        break;
      default:
        break;
    }
  }

  $.urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)')
      .exec(window.location.href);
    if (results == null) {
      return 0;
    }
    return results[1] || 0;
  }
  var toast = $.urlParam('toast');
  switch (toast) {
    case "item-added":
      pastTransactions = "some";
      stateSwitcher();
      $("#toast").show()
      break;
    default:
      break;
  }

</script>

