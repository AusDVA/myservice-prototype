<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Tasks | MyService</title>
  <%- include(partials+"components/layout/head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-claims") %>
  <%- include(partials+"components/layout/header-nom-rep") %>

  <main>
    <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
      <h1 class="margin-above--none ss-align--center">
        <span class="heading">Continuing study details</span>
      </h1>
    </div>
    <div class="container container--8-column" id="main-content">

      <div class="margin-above--extra"></div>

      <h2 id="provide-details" class="margin-below" style="display: none;">Provide details for John Smith</h2>

      <div id="country-container" class="form-group">
        <label class="uikit-text-input__label" for="rank">Country of study</label>
        <%- include(partials+"content/auth-select-list-country") %>
      </div>

      <%- include(partials+"components/form-partials/dropdown", {
        label: "State or territory of institution or school</span>",
        options: [
          " -- Select state or territory -- ",
          " Australian Capital Territory ",
          " New South Wales ",
          " Northern Territory ",
          " Queensland ",
          " South Australia ",
          " Tasmania ",
          " Victoria ",
          " Western Australia "
        ], id: "state"
      }); %>

      <%- include(partials+"components/form-partials/dropdown", {
        label: "What level of study will <span class='user-label-a'>you</span> be undertaking?",
        options: [
          " -- Select level of study -- ",
          "Primary",
          "Secondary",
          "Secondary - TAFE",
          "Tertiary - TAFE / Other",
          "Tertiary - University"
        ], id: "level"
      }); %>

      <%- include(partials+"components/form-partials/text", {
          label: "Name of institution or school</span>",
          id: "name-of-school"
        }); %>

      <%- include(partials+"components/form-partials/text", {
          label: "Course / degree name",
          id: "course-name",
          modifiers: ["hidden"]
        }); %>

      <%- include(partials+"components/form-partials/date", {
          label: "Course commencement date",
          hint: "(dd / mm / yyyy)"
        }); %>

      <%- include(partials+"components/form-partials/date", {
          label: "Course completion date",
          hint: "(dd / mm / yyyy)<BR/>If you don't know the exact date you may enter an approximate date."
        }); %>

      <%- include(partials+"components/form-partials/yes_no", {
          label: "Will <span class='user-label-a'>you</span> be studying externally?",
          hint: "<BR/>For example a correspondence course or distance education.",
          id: "external-question"
        }); %>

      <%- include(partials+"components/form-partials/yes_no", {
          label: "Will <span class='user-label-a'>you</span> be studying full time?",
          id: "fulltime-question"
        }); %>

      <div id="save-and-next" class="margin-above" style="display: none">
        <p>Choose <b>save and next</b> to continue.</p>
      </div>

      <div class="pagination pagination--tasks">
        <a href="/auth/tasks/intention-to-continue-study/intention-to-continue-study-01"><button class="uikit-btn uikit-btn--tertiary">Previous</button></a>
        <a href="/auth/tasks"><button class="uikit-btn uikit-btn--tertiary">Cancel</button></a>
        <div class="floated">
          <a href="/auth/tasks/intention-to-continue-study/intention-to-continue-study-04"><button class="uikit-btn" id="submit">Next</button></a>
        </div>
      </div>
  </main>

</body>
<%- include(partials+"components/layout/footer") %>

<script>
  $(document).ready(function () {

    $('#level').prop('selectedIndex', 0);
    $("input:radio").prop("checked", false);
    $("#country-select option[value=AU]").attr('selected', 'selected');

    $('#country-container').change(function () {
      var mySelection = $('#country-container').find(":selected").text().trim();
      switch (mySelection) {
        case "Australia":
          $("#state-container").show();
          break;
        default:
          $("#state-container").hide();
          break;
      }
    });

    $('#level-container').change(function () {
      $("#myForm").trigger("reset");
      var mySelection = $('#level-container').find(":selected").text().trim();
      switch (mySelection) {
        case "-- Select level of study --":
          $("#course-name-container").hide();
          break;
        case "Primary":
          $("#course-name-container").hide();
          break;
        case "Secondary":
          $("#course-name-container").hide();
          break;
        default:
          $("#course-name-container").show();
          break;
      }
      $("#myForm").show();
    });

  });
</script>

<%- include("intention-to-continue-study-state-switcher.ejs") %>

</html>
