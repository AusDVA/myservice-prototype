        <span class="heading font-weight-heavy">Your tasks</span>
      </h2>
      <h3 class="tasks-list__header margin-below--small">Education Assistance</h3>
      <section class="tasks-list">
        <% taskList.forEach(function(task, index) { %>
        <% if(task.category === "education-assistance") { %>
        <div class="task">
          <div class="task__description">
            <div class="task__icon"><i class="far fa-arrow-alt-circle-right"></i></div>
            <div class="task__link-wrapper">
              <a href="<%= task.link %>" class="task__link"><%= task.description %></a>
              <div class="task__date"><%= task.date %></div>
            </div>
          </div>
          <div class="task__reference"><%= task.reference %></div>
        </div>
        <% } %>
        <% }); %>
