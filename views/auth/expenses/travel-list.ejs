<script>

  function stateSwitcher() {
    $("#blank").hide();
    $(".expense").hide();
    $(".claim-disclaimer").hide();
    $("#declaration").hide();
    $(".first-expense").hide();
    $(".next-expense").hide();
    $("#save-next-button").removeAttr("disabled");
    switch (pastTransactions) {
      case "none":
        $("#blank").show();
        $("#total").html("$0.00");
        $("#save-next-button").attr("disabled","true");
        $(".first-expense").show();
        break;
      case "one":
        $(".claim-disclaimer").show();
        $("#expense-1").show();
        $("#total").html("268 kms");
        $("#declaration").show();
        $(".next-expense").show();
        break;
      case "two":
        $(".claim-disclaimer").show();
        $("#expense-1").show();
        $("#expense-2").show();
        $("#total").html("$15.64 + 268 kms");
        $("#declaration").show();
        break;
      case "one-deleted":
        $(".claim-disclaimer").show();
        $("#expense-1").show();
        $("#expense-2").show();
        $("#expense-3").show();
        $("#expense-4").show();
        $("#total").html("$620.43 + 268 kms");
        $("#declaration").show();
        break;
      case "many":
        $(".claim-disclaimer").show();
        $(".expense").show();
        $("#total").html("$833.63 + $56.35 meals +268 kms + 2 nights accommodation");
        $("#declaration").show();
        break;
      default:
        break;
    }
  }

  $.urlParam = function (name) {
    var results = new RegExp('[\?&]' + name + '=([^&#]*)')
      .exec(window.location.href);
    if (results == null) {
      return 0;
    }
    return results[1] || 0;
  }
  var expenses = $.urlParam('expenses');
  if (expenses != 0) {
    pastTransactions = expenses;
    stateSwitcher();
  }

  $(".edit").on("click", function () {
    window.location.href = "/auth/expenses/travel-expense-prepop";
  })

  function showMaxExpense() {
    $("#max-expense-note-container").show();
    $("#new-expense").attr("disabled", "true");

  }
  function hideMaxExpense() {
    $("#max-expense-note-container").hide();
    $("#new-expense").removeAttr("disabled");
  }

</script>