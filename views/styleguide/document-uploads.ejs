<!DOCTYPE html>
<html class="js" lang="en">

<head>

  <title>Style Guide | Document Uploads | MyService</title>
  <%- include(partials+"components/styleguide/styleguide-styles-and-scripts") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">

  <%- include(partials+"components/styleguide/styleguide-header") %>

  <main>
    <div class="container" id="main-content">
      <nav class="uikit-breadcrumbs" aria-label="breadcrumb">
        <ul class="uikit-link-list uikit-link-list--inline">
          <li>
            <a href="/styleguide">Home</a>
          </li>
          <li>Document uploads</li>
        </ul>
      </nav>
      <div class="row">
        <div class="col-sm-9">
          <h1>Document Uploads</h1>
          <div class="example-box">
            <%- include(partials+"components/file-uploads") %>
            <h2>Example 8 - uploads table</h2>
            <div class="upload-list">
              <table class="document-uploads">
                <tbody>
                  <tr>
                    <th>Document title</th>
                    <th class="centred">Actions</th>
                  </tr>
                  <tr>
                    <td>
                      <a href="#">My-Diagnosis.pdf (3.5 MB PDF)</a>
                    </td>
                    <td class="centred">
                      <button class="uikit-btn small uikit-btn--tertiary" onclick="window.location.href = '#open-removefile-modal'">Delete</button>
                    </td>
                  </tr>
                </tbody>
              </table>
              <button class="uikit-btn btnUpload">Upload a document</button>
              <h2>Example 9 - uploads table v2</h2>
              <table class="table-responsive table-responsive--no-border">
                <tbody>
                  <tr class="pt-proofOfRelationshipClaimantStudent accordion accordion--open ">
                    <td class="file-status file-status--required">
                      <span class="sr">Required</span>
                    </td>
                    <td>
                      <span>
                        <b>Proof of your relationship to Milton</b>
                      </span>
                      <span class=" accordion-title__details">For example, birth certificate or adoption order.</span>
                    </td>
                    <td class="right">
                      <div class="file-upload">
                        <input type="file" class="file-upload__input" id="file-1">
                        <label class="file-upload__label" for="file-1">
                          <span class="file-upload__document">
                            <a class="file-upload__file-name"></a>
                          </span>
                          <span class="file-upload__button">
                            <span class="uikit-btn small">Upload</span>
                          </span>
                        </label>
                      </div>
                    </td>
                    <td>
                      <a href="javascript:void(0);" class="accordion__trigger accordion__trigger--open">
                        <span class="sr">Toggle accordion</span>
                      </a>
                    </td>
                  </tr>
                  <tr class="pt-proofOfEnrolment accordion accordion--open">
                    <td class="file-status file-status--required">
                      <span class="sr">Required</span>
                    </td>
                    <td>
                      <span>
                        <b> Proof of
                          <span class="studentNameFirstApostrophed"></span> enrolment</b>
                      </span>
                      <span class=" accordion-title__details">For example, school report or institution letter.</span>
                    </td>
                    <td class="right">
                      <div class="file-upload">
                        <input type="file" class="file-upload__input" id="file-4">
                        <label class="file-upload__label" for="file-4">
                          <span class="file-upload__document">
                            <a class="file-upload__file-name"></a>
                          </span>
                          <span class="file-upload__button">
                            <span class="uikit-btn small">Upload</span>
                          </span>
                        </label>
                      </div>
                    </td>
                    <td>
                      <a href="javascript:void(0);" class="accordion__trigger accordion__trigger--open">
                        <span class="sr">Toggle accordion</span>
                      </a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%- include(partials+"components/styleguide/styleguide-sidenav") %>
      </div>
    </div>
  </main>
  <%- include(partials+"components/styleguide/styleguide-footer") %>
</body>


<script>

  // Swap text on top panel accordion button

  $(".accordion__trigger").click(function () {

    $(this).toggleClass("accordion__trigger--open accordion__trigger--closed");
    $(this).closest(".accordion").toggleClass("accordion--closed accordion--open");

  });


</script>


</html>
