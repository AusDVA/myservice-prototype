<!DOCTYPE html>
<html class="js" lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width" name="viewport">
    <title>Style Guide | Tooltip | MyService</title>
    <% include ../partials/styles-and-scripts.ejs %>
    <script>


        // open the dialog
        $(document).ready(function(){
            $("#tooltip1").attr("aria-hidden","true");
            $("#tooltip2").attr("aria-hidden","true");

            $(".tooltip-click a.qmark").click(function(ev){
                $("#"+this.name).attr("aria-hidden","false");
                $("#"+this.name).removeClass("hidden");

                ev.preventDefault();
            });

            $(".tooltip-click a").keypress(function(ev) {
                if (ev.which==13) {
                    $(this).click();
                }
            });

            $(".tooltip-click a.modal-close").click(function(ev){
                var tt = $(this).closest(".tooltip-click").find(".qmark");
                var ttName = tt.prop("name");
                $("#" + ttName).attr("aria-hidden","true");
                $("#" + ttName).addClass("hidden");
                $(tt).focus();
                ev.preventDefault();

            });

            $(".modal-close").keydown(function(ev){
                var tt = $(this).closest(".tooltip-click").find(".qmark");
                var ttName = tt.prop("name");
                switch(ev.which)
                {			case 27:
                    $("#"+ttName).attr("aria-hidden","true");
                    $("#"+ttName).addClass("hidden");
                    $(tt).focus();
                    ev.preventDefault();
                    return false;
                    break;

                    case 117:
                        $(tt).focus();
                        ev.preventDefault();
                        return false;
                        break;

                }
            });

            $(".modal-close").keypress(function(ev){
                var tt = $(this).closest(".tooltip-click").find(".qmark");
                var ttName = tt.prop("name");
                switch(ev.which)
                {
                    case 13:
                        $("#"+ttName).attr("aria-hidden","true");
                        $("#"+ttName).addClass("hidden");
                        $(tt).focus();
                        ev.preventDefault();
                        return false;
                        break;

                    default:

                        $("a#closebtn1").focus();
                        ev.preventDefault();
                        return false;
                        break;
                    //	 			default:

                    //					$("a#closebtn1").focus();
                    //					 ev.preventDefault();
                    //					 return false;

                }
            });

        });



    </script>
</head>

