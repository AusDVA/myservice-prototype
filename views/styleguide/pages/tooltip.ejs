                        <div class="tooltip-click">
                            <div class="tooltip hidden" aria-labelledby="tooltip-content1" role="alertdialog" id="tooltip1" aria-describedby="dialogtext" aria-hidden="true">
                                <div>
                                    <a class="modal-close" href="#" id="closebtn1">Close</a>
