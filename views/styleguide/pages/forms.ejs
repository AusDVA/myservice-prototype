<script>
// Show and hide content when 'Yes' toggle button is clicked
$( "#yes" ).click(function() {
	$( "#no-content" ).hide();
	$( "#yes-content" ).show("fast");
});

// Show and hide content when 'No' toggle button is clicked
$( "#no" ).click(function() {
	$( "#yes-content" ).hide();
	$( "#no-content" ).show("fast");
});


// mimic functionality need after a save button is pressed
// to disable all edit buttons to allow for saving time
var fewSeconds = 2;

// When the edit field is cicked for title
$(".edit-dd-button").click(function () {
	$(".dd-editable-div").show();
	$(".save-dd-button").show();
	$(".edit-dd-button").hide();
	$(".dd-uneditable-div").hide();
	// disable other edit fields
	$('.edit-text-button, .edit-home-button').prop('disabled', true);
});

// When the save field is cicked for title
$(".save-dd-button").click(function () {

	var btn = $(".save-dd-button, .cancel-dd-button");
	btn.prop('disabled', true);
	$('.waiting-animation').show();
	setTimeout(function () {
		btn.prop('disabled', false);
		// re-enable other edit fields
		$('.edit-text-button, .edit-home-button').prop('disabled', false);
		$(".dd-editable-div").hide();
		$(".save-dd-button").hide();
		$(".edit-dd-button").show();
		$(".dd-uneditable-div").show();
		$('.waiting-animation').hide();
	}, fewSeconds * 1000);
});

// When the cancel field is cicked for title
$(".cancel-dd-button").click(function () {
	$(".dd-editable-div").hide();
	$(".save-dd-button").hide();
	$(".edit-dd-button").show();
	$(".dd-uneditable-div").show();
	// re-enable other edit fields
	$('.edit-text-button, .edit-home-button').prop('disabled', false);
});

// When the edit field is cicked for title
$(".edit-text-button").click(function () {
	$(".text-editable-div").show();
	$(".save-text-button").show();
	$(".edit-text-button").hide();
	$(".text-uneditable-div").hide();
	// disable other edit fields
	$('.edit-dd-button, .edit-home-button').prop('disabled', true);
});

// When the save field is cicked for title
$(".save-text-button").click(function () {

	var btn = $(".save-text-button, .cancel-text-button");
	btn.prop('disabled', true);
	$('.waiting-animation').show();
	setTimeout(function () {
		btn.prop('disabled', false);
		// re-enable other edit fields
		$('.edit-dd-button, .edit-home-button').prop('disabled', false);
		$(".text-editable-div").hide();
		$(".save-text-button").hide();
		$(".edit-text-button").show();
		$(".text-uneditable-div").show();
		$('.waiting-animation').hide();
	}, fewSeconds * 1000);
});

// When the cancel field is cicked for title
$(".cancel-text-button").click(function () {
	$(".text-editable-div").hide();
	$(".save-text-button").hide();
	$(".edit-text-button").show();
	$(".text-uneditable-div").show();
	// re-enable other edit fields
	$('.edit-dd-button, .edit-home-button').prop('disabled', false);
});

// When the edit field is cicked for title
$(".edit-home-button").click(function () {
	$(".home-editable-div").show();
	$(".save-home-button").show();
	$(".edit-home-button").hide();
	$(".home-uneditable-div").hide();
	// disable other edit fields
	$('.edit-dd-button, .edit-text-button').prop('disabled', true);
});

// When the save field is cicked for title
$(".save-home-button").click(function () {

	var btn = $(".save-home-button, .cancel-home-button");
	btn.prop('disabled', true);
	$('.waiting-animation').show();
	setTimeout(function () {
		btn.prop('disabled', false);
		// re-enable other edit fields
		$('.edit-dd-button, .edit-text-button').prop('disabled', false);
		$(".home-editable-div").hide();
		$(".save-home-button").hide();
		$(".edit-home-button").show();
		$(".home-uneditable-div").show();
		$('.waiting-animation').hide();
	}, fewSeconds * 1000);
});

// When the cancel field is cicked for title
$(".cancel-home-button").click(function () {
	$(".home-editable-div").hide();
	$(".save-home-button").hide();
	$(".edit-home-button").show();
	$(".home-uneditable-div").show();
	// re-enable other edit fields
	$('.edit-dd-button, .edit-text-button').prop('disabled', false);
});

</script>

