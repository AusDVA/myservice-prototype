<script>

  //checkbox toggles
  $(".countryPostal").change(function () {
    if ($('.countryPostal :selected').val() == "Australia") {
      $(".addressInAusPostal").show();
    } else {
      $(".addressInAusPostal").hide();
    }
  });

  $(".residentialCountry").change(function () {
    if ($('.residentialCountry :selected').val() == "Australia") {
      $(".addressInAusRes").show();
    } else {
      $(".addressInAusRes").hide();
    }
  });

  $(".pt-showIfAdditionalAddress").hide();

  $('input[name=sameAsPostal]').change(function () {
    if ($(this).is(':checked')) {
      $(".pt-showIfAdditionalAddress").hide();
    } else {
      $(".pt-showIfAdditionalAddress").show();
    }
  });

  //radio tile toggles
  $('#addNewPerson').click(function () {
    $('#newPerson').show("fast");
    $('#newOrg').hide();
  });
  $('#addNewOrg').click(function () {
    $('#newOrg').show("fast");
    $('#newPerson').hide();
  });

  //standard button toggles
  $("#employed-yes").click(function () {
    $("#employment-details").show();
    $("#ceaseworkfromcondition").hide();
    $("#unemployed").hide();
    $("#save-and-next").hide();
  });
  $("#employed-no").click(function () {
    // $("#save-and-next").show();
    // $("#unemployed").show();
    $("#ceaseworkfromcondition").show();
    $("#employment-details").hide();
  });


</script>

