    <script>
      var modGlobal = [
        {
          mod: "hintNewLine",
          desc: "Moves the hint to a new line (only if a hint is specified)"
        }
      ];

      var propList

      var modDisabled = {
        text: "disabled",
        desc: "Disables the (set) of form elements"
      };

      var tooltip = {
        property: "tooltip",
        desc: "A button to toggle an large extend description",
        type: "string",
        req: false
      };

      var hint = hintDate = {
        property: "hint",
        desc: "Some text to provide some extra information on the question",
        type: "string",
        req: false
      };

      hintDate.desc += " (defaults to \"(DD / MM / YYYY)\"";

      var legend = legendMod = {
        property: "legend",
        desc: "A \"label\" for the set of fields",
        type: "string",
        req: true
      };

      legendMod.req = false;

      var label = {
        property: "label",
        desc: "A label for the form element",
        type: "string",
        req: true
      };

      var modifiers = {
        property: "modifiers",
        desc: "An list of pre-determined strings to modify the output",
        type: "array",
        req: false
      };

      var id = {
        property: "id",
        desc: "An optional ID for the form field(s) - use when any Javascript is used",
        type: "string",
        req: false
      }

      var boxes = options = {
        property: "boxes",
        desc: "A list of eiter strings or objects to create a list of checkboxes",
        type: "array",
        req: true
      }

      options.prop = "options";
      options.desc = options.desc.replace("checkboxes", "options");

      var selector = `<a href="https://developer.mozilla.org/en-US/docs/Web/CSS/CSS_Selectors" rel="external">CSS Selector</a>`;


      var properties = {
        address: [
          tooltip,
          legendMod,
          modifiers,
          hint,
          id
        ],
        bankdetails: [
          tooltip,
          legendMod,
          modifiers,
          hint,
          id
        ],
        checkbox: [
          tooltip,
          legend,
          modifiers,
          hint,
          id,
          boxes
        ],
        radio: [
          tooltip,
          legend,
          modifiers,
          hint,
          id,
          boxes
        ],
        date: [
          tooltip,
          label,
          modifiers,
          hintDate,
          id
        ],
        dropdown: [
          tooltip,
          label,
          modifiers,
          hint,
          id,
          options
        ],
        text: [
          tooltip,
          legend,
          modifiers,
          hint,
          id
        ],
        textarea: [
          tooltip,
          legend,
          modifiers,
          hint,
          id,
          {
            property: "rows",
            desc: "The number of rows (how tall) the textarea is (defaults to 5)",
            type: "integer",
            req: false
          }
        ],
        yes_no: [
          tooltip,
          legend,
          modifiers,
          hint,
          id,
          {
            property: "yes_toggle",
            desc: `Shows the given ${selector} when "Yes" is checked`,
            type: "string",
            req: false
          },
          {
            property: "no_toggle",
            desc: `Shows the given ${selector} when "No" is checked`,
            type: "string",
            req: false
          },
          {
            property: "yes_rToggle",
            desc: `Shows the given ${selector} when "Yes" is NOT checked`,
            type: "string",
            req: false
          },
          {
            property: "no_rToggle",
            desc: `Shows the given ${selector} when "No" is NOT checked`,
            type: "string",
            req: false
          }
        ]
      }

      $(document).ready(() => {
        $(".form_elem").each(function() {

          var listProps = properties[$(this).data("field")].map(propt => {
            return `
            <tr>
              <td><pre class="language-json">${propt.property}:<code></code></pre></td>
              <td>${propt.desc}</td>
              <td><pre class="language-text"><code>${propt.type}</code></pre></td>
              <td>${propt.req ? "Yes" : "No" }</td>
            </tr>`
          });

          $(this).append(`
            <div class="accordion properties">
              <button class="style-less-button accordion-button"><i class="transition fas fa-chevron-right"></i> Properties</button>
              <div class="accordion-content" hidden>
                <table class="margin-above">
                  <thead>
                    <tr>
                      <th>Property</th>
                      <th>Description</th>
                      <th>Data type</th>
                      <th>Required</th>
                    </tr>
                  </thead>
                  <tbody>
                    ${listProps.join("")}
                  </tbody>
                </table>
              </div>
            </div>`);
        });

        $(".form_elem").on("click", ".properties .accordion-button", function() {
          if ($(this).hasClass("rotate-90")) {
            $(this).removeClass("rotate-90");
          } else {
            $(this).addClass("rotate-90");
          }

          $(this).parent().find(".accordion-content").toggle();
        });

      });
    </script>
