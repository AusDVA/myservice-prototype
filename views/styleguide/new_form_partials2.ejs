            <h4>Advanced Dropdown HTML/JavaScript Code:</h4>
            <pre>
              <code class="language-markup">
                <script type="text/html">
                  <p hidden id="advanced-mr">
                    You have selected <code>Mister</code>
                  </p>
                  <p hidden id="advanced-mrs">
                    You have selected <code>Misses</code>
                  </p>
                  <p hidden id="advanced-dr">
                    You have selected <code>Doctor</code>
                  </p>
                  <div class="form-group">
                    <label for="title" class="uikit-text-input__label">Please select your title </label>
                    <select name="title" id="title" class="uikit-text-input input-half">
                      <option hidden="" disabled="" selected="" value="select_title">-- Select title --</option>
                      <option value="none">None</option>
                      <option data-toggle="#advanced-mr" value="mr">Mr</option>
                      <option data-toggle="#advanced-mrs" value="mrs">Mrs</option>
                      <option data-toggle="#advanced-dr" value="dr">Dr</option>
                      <script>
                      $("#title").on("change", function() {
                        $($("#title :selected").data("toggle")).show();
                        $("#title :not(:selected)").each(function(index, elem) {
                          $($(elem).data("toggle")).hide();
                        });
                      });
                      </script>
                    </select>
                  </div>
                </script>
