  <div class="panel from-right is-visible">
    <div class="panel-header">
      <h2>Log in</h2>
      <a href="#" class="panel-close">Close</a>
    </div>
    <div class="panel-container">
      <div class="panel-content">
        <div class="form-group has-error">
          <label class="uikit-text-input__label" for="email">Email<span aria-live="polite" class="input-error-message" id="email-error">Email must be a valid format.</span></label>
          <input aria-required="true" class="uikit-text-input" id="email" name="email" type="text">
        </div>
        <div class="form-group has-error">
          <label class="uikit-text-input__label" for="password">Password<span aria-live="polite" class="input-error-message" id="password-error">Password must be at least 8
              characters and contain a mix of alphanumeric characters and at least one symbol</span></label>
          <input aria-required="true" class="uikit-text-input" id="password" name="password" type="password">
          <button class="uikit-btn uikit-btn--tertiary show-password">Show</button>
          <br />
          <a href="/unauth/user/forgot-password-step1-and-2">Forgot your password?</a>
        </div>
        <div class="pagination">
          <button class="uikit-btn" onclick="window.location.href = 'auth'">Log in</button> &nbsp; <a href="#" class="panel-close">Cancel</a>
        </div>
      </div>
    </div>
  </div>
