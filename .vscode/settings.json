{
  "files.associations": {
    "*.ejs": "html"
  },
  "sassFormat.indent": 2,
  "sassFormat.useSingleQuotes": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "htmlhint.options": {
    "doctype-first": false
  },
  "spellright.language": "en_AU",
  "spellright.documentTypes": [
    "markdown",
    "latex",
    "plaintext",
    "html",
    "javascript",
    "scss",
    "json"
  ],
  //"html.format.contentUnformatted": "textarea",
  "editor.detectIndentation": false,
  // Maximum amount of characters per line (0 = disable).
  "html.format.wrapLineLength": 180,
}