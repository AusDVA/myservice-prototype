<script>
$("#investmentType").change(function() {
    mySelection = $('#investmentType :selected').val();
    switch (mySelection) {
        case "Managed investments":
            hideInvestmentTypes();
            $("#managed-investments").show();
             break;
        case "Funeral bonds":
            hideInvestmentTypes();
            $("#funeral-bonds").show();
            break;
        case "Pre-paid funeral":
            hideInvestmentTypes();
            $("#prepaid-funerals").show();
            break;
        default:
            // code block
    }
});
function hideInvestmentTypes() {
    $("#managed-investments").hide();
    $("#funeral-bonds").hide();
    $("#prepaid-funerals").hide();
}
</script>