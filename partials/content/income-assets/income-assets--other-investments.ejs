    <div class="review__wrapper">
        <div class="review__content--item boxed row">
            <div class="review__content--label margin-below">
                <h2 class="margin-above--none" style="display: inline-block;">
                    <span class="fal fa-file-certificate fontawesome-icon"></span><span class="font-weight-heavy">Other investments</span>
                </h2>
                <button class="uikit-btn uikit-btn--tertiary small floated" onClick="editCard('other-investments');">&nbsp;Edit&nbsp;</button>
            </div>
            <div class="review__table">
                <div class="tr">
                    <div class="td"><b>Type of investment</b></div>
                    <div class="td">Bullion – Gold, Silver or Platinum</div>
                </div>
                <div class="tr">
                    <div class="td"><b>Current value</b></div>
                    <div class="td">$22,000</div>
                </div>
            </div>
        </div>
