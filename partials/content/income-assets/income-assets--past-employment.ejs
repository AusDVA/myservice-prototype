<!-- Summary card -->


<div id="past-employment-summary" class="plain-text-info" style="display:none;">
  <div class="review__wrapper">
      <div class="review__content--item boxed row">
          <div class="review__content--label margin-below">
              <h2 class="margin-above--none" style="display: inline-block;">
                  <span class="fal fa-route fontawesome-icon"></span><span class="font-weight-heavy">Past employment</span></h2>
              </h2>
              <button class="uikit-btn uikit-btn--tertiary small floated" onClick="editCard('gifts');">&nbsp;Edit&nbsp;</button>
          </div>
          <div class="review__table">
              <div class="tr">
                  <div class="td"><b>Name of employer</b></div>
                  <div class="td">Spacely Sprockets</div>
              </div>
              <div class="tr">
                  <div class="td"><b>When did your employment cease?</b></div>
                  <div class="td">12/03/2019</div>
              </div>
          </div>
      </div>
  </div>
</div>
<!-- Open card -->
<div id="past-employment-card" class="boxed margin-above margin-below" style="display: none;">
  <div>
    <h2 class="margin-above--none" style="display: inline-block;">
      <span class="fal fa-route" style="font-size: 1.7em; vertical-align: -15%;"></span>&nbsp;<span class="font-weight-heavy">Past employment</span></h2><button id="deleteButton" class="uikit-btn uikit-btn--tertiary small warning floated"
      onclick="removeSummary('past-employment');">&nbsp;Delete item&nbsp;
    </button>
  </div>
  <div id="card-details" class="margin-below--large">
    <h4><p class="margin-below--mid margin-above">Add details for any paid employment you <span class="partner">and/or your partner</span> have ceased within the last 12 months.</p></h4>
    <p>Also include any self-employment you have ceased within the last 12 months.</p>
  </div>
  <hr>
  <form id="myForm">
    <input type="reset" style="display:none">
    <%- include(partials+"components/form-partials/text", {
      label: "Name of employer"
    }); %>
    <%- include(partials+"components/form-partials/date", {
      label: "When did your employment cease?"
    }); %>
  </form>
  <hr>
  <div id="buttonset2" class="form-group margin-above--none">
    <button id="addButton" class="uikit-btn" onclick="addSummary('past-employment');">&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;</button> &nbsp;<button class="uikit-btn uikit-btn--tertiary"
      onclick="cancelCard();">&nbsp;&nbsp;&nbsp;Cancel&nbsp;&nbsp;&nbsp;</button>
  </div>
</div>