<% if (locals && locals.el && locals.el.optionalID) { 
  	var id = locals.el.optionalID;
} else {
  	var id = "former_names"
}
%>

<% if (locals && locals.el && locals.el.optionalQuestion) { 
   	var question = locals.el.optionalQuestion;
} else {
	var question = "Have you ever used or been known by other names?"; 
}
%>

<%- include(partials+"components/form-partials/yes_no", {
  label: question,
  hint: 'For example, name at birth, maiden name, previous married name.',

}); %>

<%
	locals.el = {};
	locals.el.optionalHide = true;
	locals.el.optionalID = "former_names_list"
%>
<%- include(partials+"components/form-elements/former_names_list", locals) %>

<script>
  var former_names;
  $('input[name=former_names_question]').change(function () {
    former_names = $('input[name=former_names_question]:checked').val();
    if (former_names == "yes") {
      $("#former_names_list").show("fast");
    } else {
      $("#former_names_list").hide("fast");
    }
  });

</script>
