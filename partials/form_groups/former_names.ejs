locals.optionalID = "former_names"
%>
<% include ../forms/former-names.ejs %>


<script>
var other_names;
$('input[name=other_names]').change(function () {
    other_names = $('input[name=other_names]:checked').val();
    if (other_names == "yes") {
    	$("#former_names").show("fast");
    } else {
    	$("#former_names").hide("fast");
    }
});
</script>
