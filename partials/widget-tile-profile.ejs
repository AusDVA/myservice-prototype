<%
  locals.el = {};
  locals.el.body_text_profile = "To help us better support you, make sure your profile is up to date. <span class='hide-on-small'>This allows you to manage your information in one place and have it available when you claim.</span>";
  locals.el.button_text = "View profile";
  locals.el.link = "/auth/profile";
%>

<div class="widget-tile widget-tile-profile" id="widget-profile">
  <div class="widget-tile-container">
    <!-- <h2 class="widget-header"><span class="font-weight-heavy">Update profile</span></h2> -->
    <p id="profile-content" class="widget-content">
      <%-locals.el.body_text_profile %>
    </p>
    <div class="widget-link">
      <a href="<%-locals.el.link%>"><%-locals.el.button_text%></a>
    </div>
  </div>
</div>


<script type="text/javascript">
  function updateProfileWidgetCopy(messageType) {
    return;
    var myMessage;
    switch (messageType) {
      case "sh":
        myMessage = "Profile SH";
        break;
      case "general":
        myMessage =
          "To help us better support you, make sure your profile is up to date. <span class='profile-hide'>This allows you to manage your information in one place and have it available when you claim.</span";
        break;
      default:
        break;
    }
    $("#profile-content").html(myMessage);
  }

</script>
