<%
  locals.el = {};
  locals.el.body_text_profile = "Manage your profile. <span class='hide-on-small'>This will make it easier to claim.</span>";
  locals.el.button_text = "View profile";
  locals.el.link = "/auth/profile";
%>

<div class="widget-tile widget-tile-profile" id="widget-profile">
  <div class="widget-tile-container">
    <span id="profile-content" class="widget-content"><%-locals.el.body_text_profile %></span><BR/>
    <div class="widget-link"><a href="<%-locals.el.link%>"><%-locals.el.button_text%></a></div>
  </div>
</div>

<script type="text/javascript">
 function updateProfileWidget() {
  if ($("#service-history").prop("checked") == true) {
    // updateProfileWidgetCopy("general");
    sessionStorage.setItem('service_history', true);
  } else {
    // updateProfileWidgetCopy("sh");
    sessionStorage.setItem('service_history', false);
  }
}
</script>


