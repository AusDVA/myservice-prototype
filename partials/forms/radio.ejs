<% if (locals.optionalID) { 
  var id = locals.optionalID;
} else {

    var id = locals.question.replace(/ +/g, '_').replace(/\?/g, "").toLowerCase(); 

}

if (locals.radioLabel) { 
  var radioLabel = locals.radioLabel;
} else {
  var radioLabel = ''; 
}

%>
<% if (locals.optionalHide === true) { %>
<style>
  #<%=id %> {
    display: none;
  }

</style>
<% } %>

<div class="form-group" id="<%= id %>">
  <label class="uikit-text-input__label" for="sop"><%= locals.question %>

    <% if (locals.optionalHint) { %>
    <span class="hint display-block"><%= locals.optionalHint %></span>
    <% } %>

  </label>
  <%  locals.items.forEach(function(element, index) { 
    var itemID = element.replace(/ +/g, '_').toLowerCase(); %>


  <div class="uiToolKitCheckBox">
    <label class="uikit-control-input">
      <input class="uikit-control-input__input" type="radio" id="<%= itemID %>" name="<%= id %>"" value="<%= itemID %>">
      <span class="uikit-control-input__text"><%= element %></span>
    </label>
    <% 
    if ( element == "Other" ) { %>

    <script>
      $("#other<%= index %>").click(function () {
        $("#<%= id %>-other").toggleClass("pt-hide");
      });

    </script>

    <div class="form-group pt-hide" id="<%= id %>-other">
      <label class="uikit-text-input__label margin-above--mid" for="Input field">Please specify</label>
      <input class="uikit-text-input input-half" name="Input field" id="Input field" type="text" value="" required aria-required="true">
    </div>
    <% } %>

  </div>
  <% }); %>
</div>



             
