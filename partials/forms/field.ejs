<% if (locals.optionalID) { 
  var id = locals.optionalID;
} else {
    var id = locals.question.replace(/ +/g, '_').replace(/\?/g, "").toLowerCase(); 
}

%>
<% if (locals.optionalHide === true) { %>
<style>
    #<%=id %> {
    display: none;
  }

</style>
<% } %>

<div class="form-group" id="<%= id %>">
    <label class="uikit-text-input__label" for="tags"><%= locals.question %>
    <% if (locals.optionalHint) { %> 
    	<span class="hint"><%= locals.optionalHint %></span>
    <% } %>
    </label>
    <input class="uikit-text-input" name="tags" id="tags" type="text" value="" style="max-width: 22em;">
</div>

