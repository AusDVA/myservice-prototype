<% if (locals.optionalID) { 
  var id = locals.optionalID;
} else {
  if (locals.question) { 
    var id = locals.question.replace(/ +/g, ''); 
  } else {
    var id = Math.floor((Math.random() * 1000) + 1);
  }
}
%>

<% if (locals.optionalHide === true) { %>
<style>
  #<%=id %> {
    display: none;
  }
</style>
<% } %>

<div class="form-group" id="<%= id %>">
  <fieldset>
    <legend class="legend-label"><%= question %></legend>
    <div class="radio-toggle">
      <label class="on label-left" for="<%= id %>-yes">
        <input id="<%= id %>-yes" type="radio" name="<%= id %>" value="yes">
        <span>Yes</span>
      </label>
      <label class="off label-right" for="<%= id %>-no">
        <input id="<%= id %>-no" type="radio" name="<%= id %>" value="no">
        <span>No</span>
      </label>
    </div>
  </fieldset>
</div>
