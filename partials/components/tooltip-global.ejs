<% 
  var text, customClass;

  text ? text = text : text = "please add tooltip text to the partial.";
%>

<div class="tooltip <%- customClass ? customClass : ''%>">
    <button id="tt-label" class="tooltip__control" aria-describedby="message" aria-expanded="false">
        <div class="tooltip__label tooltip__label--icon-only">
            Help
        </div>
        <div class="tooltip__tab"></div>
    </button>
    <div id="tt-message" class="tooltip__content" aria-labelledby="tt-label" role="tooltip" tabindex="-1"
        aria-hidden="true">
        <div class="tooltip__message"><%- text %></div>
        <button class="tooltip__close">Close</button>
    </div>
</div>