%>

<select>
 

<% const options = form.options.map(opt => { 
  if (typeof opt === "string") {
    opt = {
      text: opt
    }
  }
  %>
  <%- generateOption(opt).html; %>

  <% 
    if (opt.toggle) {
      return {
        "toggle": opt.toggle,
        "rev": false
      } 
    } else if (opt.rToggle) {
      return {
        "toggle": opt.rToggle,
        rev: false
      }

    }
  });
  %>

  %>

</select>

