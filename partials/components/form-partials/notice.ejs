<%#
	* info (blue) DEFAULT
	* warning (orange)
	* error (red)
	* success (green)
	* content (white)
%>
<%

if (typeof id === "undefined") var id = formPartialsID("notice");
if (typeof modifiers === "undefined") var modifiers = []; 
if (typeof modifiers === "string") modifiers = [modifiers]; 

var type = type ? `notice--${type}` : "notice--info";
var icon;
if ( type === "notice--info" ) icon = "fa-icon far fa-info-circle";
if ( type === "notice--success" ) icon = "fa-icon far fa-check-circle";
if ( type === "notice--warning" ) icon = "fa-icon far fa-exclamation-triangle";
if ( type === "notice--error" ) icon = "fa-icon far fa-times-circle";
var hide = "style='display:none;'";

%>

<div class="mys notice <%- type  %> <%- typeof customClass !== "undefined" ? (typeof customClass === "object" ? customClass.join(" ") : customClass) : "" %>" 
	  id="<%- id %>-container" 
	  role="alert" 
	  <%- modifiers.includes("hidden") ? hide : "" %>
	>
	<span class="<%- icon %>"></span>
	<div>
		<%- message %>
	</div>
</div>  
