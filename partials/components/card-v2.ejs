<% var id, title, text, link; %>

<div id="<%- id ? id : "" %>" class="card-v2__wrapper">
  <div class="card-v2">
    <a href="<%- link ? link : "/auth/" %>" class="card-v2__content">
      <div>
        <h2 class="card-v2__title"><span class="card-v2__link"><%- title ? title : "" %><span></h2>
        <div class="card-v2__description">
          <%- text ? text : "" %>
        </div>
      </div>
      <div class="card-v2__icon"><i class="fas fa-chevron-right"></i></div>
    </a>
  </div>
</div>