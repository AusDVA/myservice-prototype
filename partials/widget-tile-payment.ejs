<% if (locals.el.body_text_payment_date) { 
  var body_text_payment_date = locals.el.body_text_payment_date;
}
%>

<% if (locals.el.body_text_payment_amount) { 
  var body_text_payment_amount = locals.el.body_text_payment_amount;
}
%>

<% if (locals.el.body_text_profile) { 
  var body_text_profile = locals.el.body_text_profile;
}
%>

<% if (locals.el.button_text) { 
  var button_text = locals.el.button_text;
} 

%>
<% if (locals.el.link) { 
  var link = locals.el.link;
}
%>

<div class="widget-tile widget-tile-payment" id="widget-payment">
  <div class="widget-tile-container">
    <span class="widget-content">
      <%- body_text_payment_date %>
    </span><br>
    <span class="widget-number">
      <%- body_text_payment_amount %>
    </span><br>
    <span class="widget-content">
      <%- body_text_profile %>
    </span>
    <div class="widget-link">
      <a href="<%-link%>"><%- button_text %></a>
    </div>
  </div>
</div>
