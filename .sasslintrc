{
  "files": {
    "ignore": [
      "src/sass/@gov.au/**/*.*"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "leading-zero": 0,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "nesting-depth": [
      2,
      {
        "max-depth": 3
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 2,
    "hex-notation": [
      1,
      {
        "style": "lowercase"
      }
    ],
    "indentation": [
      1,
      {
        "size": 2
      }
    ],
    "variable-for-property": [
      1,
      {
        "properties": [
          "content"
        ]
      }
    ],
    "class-name-format": [
      1,
      {
        "convention": "hyphenatedbem"
      }
    ]
  }
}